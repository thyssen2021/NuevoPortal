@model IEnumerable<Portal_2_0.Controllers.FiscalRateViewModel>
@{
    ViewBag.Title = "Listado de Tipos de Cambio Fiscal";
    ViewBag.PrimerNivel = "plantilla_forecast";
    ViewBag.SegundoNivel = "catalogos_forecast";
    ViewBag.ControllerName = ViewContext.RouteData.Values["controller"];
    ViewBag.nav_style = "nav-sm";
}

@section estilos
{
    <!-- DataTables CSS -->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.4/css/jquery.dataTables.min.css" />
    <style>
        /* Estilos usando el color corporativo #009ff5 */
        table.dataTable thead th {
            background-color: #009ff5;
            color: white;
        }

        .dataTables_wrapper .dataTables_filter input {
            border: 1px solid #009ff5;
            border-radius: 4px;
        }

        .dataTables_wrapper .dataTables_paginate .paginate_button {
            background-color: #009ff5 !important;
            color: white !important;
            border: none;
            border-radius: 4px;
            padding: 4px 8px;
            margin: 2px;
        }
        .dataTables_wrapper .dataTables_paginate .paginate_button.disabled, .dataTables_wrapper .dataTables_paginate .paginate_button.disabled:hover, .dataTables_wrapper .dataTables_paginate .paginate_button.disabled:active {
            color: snow !important;
        }

            .dataTables_wrapper .dataTables_paginate .paginate_button.current, .dataTables_wrapper .dataTables_paginate .paginate_button.current:hover {
                color: yellow !important;
                text-decoration: underline !important;
            }
    </style>
}

<div class="right_col" role="main">
    <div class="">
        <div class="clearfix"></div>
        <div class="row">
            <div class="col-md-12 col-sm-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>@ViewBag.Title</h2>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <!-- Inicio Contenido -->
                        <a href="@Url.Action("Edit", "budget_rel_tipo_cambio_fy_forecast")" class="btn btn-success">
                            <i class="fa fa-edit"></i> Editar
                        </a>
                        <hr />
                        <table id="tblTipoCambio" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>FY</th>
                                    <th>Mes</th>
                                    <th>USD/MXN</th>
                                    <th>EUR/USD</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    int consecutivo = 1;
                                    // Para obtener el nombre del mes en español
                                    var cultura = new System.Globalization.CultureInfo("es-ES");
                                }
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@consecutivo</td>
                                        <td>@item.fy</td>
                                        <td>@item.mesName</td>
                                        <td>@item.usd_mxn.ToString("N4")</td>
                                        <td>@item.eur_usd.ToString("N4")</td>
                                      
                                    </tr>
                                    consecutivo++;
                                }
                            </tbody>
                        </table>
                        <!-- Finaliza Contenido -->
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <!-- jQuery y DataTables JS -->

    <script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            // Inicializa DataTable con el ordenamiento deshabilitado
            $('#tblTipoCambio').DataTable({
                "ordering": false,

            });
        });
    </script>
}
