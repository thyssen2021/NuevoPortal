@model Portal_2_0.Models.BG_Forecast_reporte

@{
    Layout = "~/Views/Shared/_Layout.cshtml";

    ViewBag.Title = "Editar Catálogo Inventory OWN";
    ViewBag.PrimerNivel = "budget_forecast";
    ViewBag.SegundoNivel = "listado_forecast";
    ViewBag.ControllerName = ViewContext.RouteData.Values["controller"];

    Clases.Util.MensajesSweetAlert mensajeAlerta = (Clases.Util.MensajesSweetAlert)ViewBag.MensajeAlert;

    ViewBag.nav_style = "nav-sm";


}

@section estilos
{
    <!-- DataTables -->
    @Styles.Render("~/Content/dataTables_css")
    <!-- SweetAlert2 -->
    <link href="@Url.Content("~/Content/vendors/sweetalert2-theme-bootstrap-4/bootstrap-4.min.css")" rel="stylesheet">

    <!-- Select2 -->
    <link href="@Url.Content("~/Content/vendors/select2/css/select2.css")" rel="stylesheet">
    <link href="@Url.Content("~/Content/vendors/select2-bootstrap4-theme/select2-bootstrap4.min.css")" rel="stylesheet">
}

@*Para SweetAlert*@
@if (mensajeAlerta != null)
{
    <input type="hidden" value="@mensajeAlerta.Mensaje" id="mensajeAlert" />
    <input type="hidden" value="@mensajeAlerta.getTipoMensaje()" id="mensajeAlertTipo" />

    <style>
        .btn-dropdown-cm {
            color: white !important;
        }

            .btn-dropdown-cm:hover {
                color: #cccccc !important;
            }
    </style>
}

<div class="right_col" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">
            </div>
        </div>

        <div class="clearfix"></div>

        <div class="row">
            <div class="col-md-12 col-sm-12 ">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>@ViewBag.Title - @Model.ConcatCodigo </h2>
                        <ul class="nav navbar-right panel_toolbox">
                            @*Utilizado para mover a la derecha los iconos del card*@
                            <div class="dropdown">
                                <button class="btn btn-primary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <i class="fa-solid fa-gear"></i> Opciones
                                </button>
                                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                    <a href="@Url.Action("EditarReporteGeneral", "BG_Forecast_reporte", new { id = ViewContext.RouteData.Values["id"]})" class="btn btn-info btn-sm dropdown-item btn-dropdown-cm" style="background-color: #8e0607; color:white">
                                        <i class="fa-solid fa-file-lines"></i> Editar Generales
                                    </a>
                                    <a href="@Url.Action("EditarReporte", "BG_Forecast_reporte", new { id = ViewContext.RouteData.Values["id"]})" class="btn btn-success btn-sm dropdown-item btn-dropdown-cm">
                                        <i class="fa-regular fa-pen-to-square"></i> Editar Valores
                                    </a>
                                    <a href="@Url.Action("EditarAsociacionIHS", "BG_Forecast_reporte", new { id = ViewContext.RouteData.Values["id"]})" class="btn btn-sm dropdown-item btn-dropdown-cm" style="background-color: #0159f6; color: white ">
                                        <i class="fa-solid fa-tags"></i> Editar Asociaciones
                                    </a>
                                    <a href="@Url.Action("GenerarReporte", "BG_Forecast_reporte", new { id = ViewContext.RouteData.Values["id"]})" class="btn btn-primary btn-sm dropdown-item btn-dropdown-cm" style="background-color: #00487c">
                                        <i class="fa-solid fa-book"></i> Generar Reporte
                                    </a>
                                    <a href="@Url.Action("Details", "BG_Forecast_reporte", new { id = ViewContext.RouteData.Values["id"]})" class="btn btn-sm dropdown-item btn-dropdown-cm" style="background-color:gray; color:white">
                                        <i class="fa fa-info-circle"></i>  Detalles
                                    </a>
                                    <a href="@Url.Action("ClonarReporte", "BG_Forecast_reporte", new { id = ViewContext.RouteData.Values["id"]})" class="btn btn-primary btn-sm dropdown-item btn-dropdown-cm" style="background-color:blue">
                                        <i class="fa-regular fa-clone"></i> Clonar Reporte
                                    </a>
                                    <button class="btn btn-info btn-sm dropdown-toggle dropdown-item btn-dropdown-cm" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        <i class="fa-solid fa-database"></i> Catálogos
                                    </button>
                                    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                        <a href="@Url.Action("Index", "BG_forecast_cat_inventory_own", new { id_reporte = ViewContext.RouteData.Values["id"]})" class="dropdown-item">
                                            Inventory OWN
                                        </a>
                                    </div>
                                    <a href="@Url.Action("Index", "BG_Forecast_reporte")" class="btn btn-sm dropdown-item btn-dropdown-cm" style="background-color:#dc0904">
                                        <i class="fa-solid fa-arrow-left"></i> Volver al Listado
                                    </a>
                                </div>
                            </div>
                        </ul>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        @using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "form-horizontal form-label-left" }))
                        {
                            @Html.AntiForgeryToken()
                            if (!Html.ViewData.ModelState.IsValid)
                            {
                                <div class="alert alert-danger" role="alert">
                                    @Html.ValidationSummary("", new { @class = "text-white" })
                                </div>
                            }
                            @Html.HiddenFor(model => model.id)
                            <div class="row">
                                <div class="col-sm-12">

                                    <div class="card-box">

                                        <div class="row">

                                            <div class="col-sm-12">
                                                <div class="card-box table-responsive">

                                                    <table id="datatable_1" class="table table-striped table-bordered nowrap" cellspacing="0" width="100%">
                                                        <thead>
                                                            <tr>
                                                                <th width="10%">
                                                                    @Html.DisplayNameFor(model => model.BG_Forecast_cat_inventory_own.FirstOrDefault().orden)
                                                                </th>
                                                                @*<th width="50%">
                                                                        @Html.DisplayNameFor(model => model.BG_Forecast_reporte.ConcatCodigo)
                                                                    </th>*@
                                                                <th width="20%">
                                                                    @Html.DisplayNameFor(model => model.BG_Forecast_cat_inventory_own.FirstOrDefault().mes)
                                                                </th>
                                                                <th width="20%">
                                                                    @Html.DisplayNameFor(model => model.BG_Forecast_cat_inventory_own.FirstOrDefault().cantidad)
                                                                </th>
                                                            </tr>
                                                        </thead>
                                                        <tbody>
                                                            @foreach (var item in Model.BG_Forecast_cat_inventory_own)
                                                            {
                                                                <tr>
                                                                    @* Necesario para auto binding (dentro del TR)*@
                                                                    <input type="hidden" name="BG_Forecast_cat_inventory_own.Index" id="BG_Forecast_cat_inventory_own.Index" value="@item.orden" />
                                                                    <input type="hidden" name="BG_Forecast_cat_inventory_own[@item.orden].id" id="BG_Forecast_cat_inventory_own[@item.orden].id" value="@item.id">
                                                                    <td>
                                                                        @Html.DisplayFor(modelItem => item.orden)
                                                                    </td>
                                                                    <td>
                                                                        @Bitacoras.Util.TimeSpanUtil.GetMonthName(item.mes).ToUpper()
                                                                    </td>
                                                                    <td>
                                                                        <input style="text-align:right" type="text" name="BG_Forecast_cat_inventory_own[@item.orden].cantidad" id="BG_Forecast_cat_inventory_own[@item.orden].cantidad" class="form-control col-md-12 decimal" value="@item.cantidad" autocomplete="off">
                                                                        <span class="field-validation-valid text-danger" data-valmsg-for="BG_Forecast_cat_inventory_own[@item.orden].cantidad" data-valmsg-replace="true"></span>
                                                                    </td>
                                                                </tr>
                                                            }
                                                        </tbody>
                                                    </table>

                                                    <div class="ln_solid"></div>
                                                    <div class="item form-group">
                                                        <div class="col-md-2 col-sm-2 offset-md-10">
                                                            <button type="submit" class="btn btn-success btn-lg" style="width:100%"><i class="fa-regular fa-floppy-disk"></i> Guardar</button>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        <br />
                                        @*@if (Model.Count() > 0)
                                            {
                                                <nav id="nav_paginacion" aria-label="...">
                                                    @{Html.RenderPartial("_Paginacion", Model);}
                                                </nav>
                                            }*@
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
        <div>
            <br />
            <a href="javascript:history.back()" class="btn btn-round btn-info btm-sm" title="Volver">
                <i class="fa fa-arrow-circle-left"></i> Volver
            </a>
        </div>
    </div>
</div>


@section scripts
{
    <!-- SweetAlert2 -->
    @Scripts.Render(Url.Content("~/Content/vendors/sweetalert2/sweetalert2.min.js"))
    @Scripts.Render(Url.Content("~/Scripts/AlertasSweetAlert.js"))
    @Scripts.Render(Url.Content("~/Content/vendors/select2/js/select2.full.min.js"))
    @Scripts.Render(Url.Content("~/Content/vendors/echarts/echarts.js"))
    @Scripts.Render(Url.Content("~/Scripts/Forms/ThemeEcharts.js"))
    @Scripts.Render("~/bundles/dataTables_js")
    <!-- input mask -->
    @Scripts.Render(Url.Content("~/Content/vendors/jquery.inputmask/dist/jquery.inputmask.bundle.js"))
    @Scripts.Render(Url.Content("~/Content/vendors/jquery.inputmask/dist/inputmask/inputmask.extensions.js"))

    <script>

        $(document).ready(function () {
            //inicializa los data table
            var tabla = $('#datatable_1').DataTable({
                "paging": false,
                "ordering": false,
                "searching": false,
                "scrollX": true,
                "info": false,
                //fixedColumns: {
                //    left: 3
                //}
            });

            $('.decimal').inputmask({ 'alias': 'decimal', 'groupSeparator': ',', 'autoGroup': true, 'digits': 3, 'digitsOptional': true, 'placeholder': '0', 'autoUnmask': true, 'removeMaskOnSubmit': true });


        });


        //agranda el tamaño de la barra
        window.onload = function () {
            //clicMenu(2); //dos veces para acomodar la tabla
        }

    </script>


}
