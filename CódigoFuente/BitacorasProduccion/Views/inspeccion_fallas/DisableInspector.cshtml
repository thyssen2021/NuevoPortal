@model IdentitySample.Models.ApplicationUser

@{
    ViewBag.Title = "Deshabilitar inspector";
    ViewBag.PrimerNivel = "Inspeccion";
    ViewBag.SegundoNivel = "Inspeccion_inspectores";
    ViewBag.ControllerName = "inspeccion_fallas";
}



<div class="right_col" role="main">
    <div class="">
        

        <div class="clearfix"></div>

        <div class="row">
            <div class="col-md-12 col-sm-12  ">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>@ViewBag.Title</h2>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">

                        <h5>¿Realmente desea dehabilitar este inspector?</h5>
                        <br />
                        <dl class="dl-horizontal">
                            <dt>
                                @Html.DisplayNameFor(model => model.UserName)
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.UserName)
                            </dd>
                            <dt>
                                @Html.DisplayNameFor(model => model.Email)
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.Email)
                            </dd>
                            <dt>
                                Nombre
                            </dt>
                            <dd>
                                @Model.obtieneEmpleado().ConcatNombre
                            </dd>
                            <dt>
                                Planta
                            </dt>
                            <dd>
                                @if (Model.obtieneEmpleado().plantas != null)
                                {
                                    @Model.obtieneEmpleado().plantas.descripcion
                                }
                                else
                                {
                                    <span>NO DISPONIBLE</span>
                                }
                            </dd>
                        </dl>

                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-actions no-color float-right">
                                <input type="submit" value="Deshabilitar" class="btn btn-danger" />
                            </div>
                        }
                    </div>
                </div>
                <div>
                    <br />
                    <a href="@Url.Action("Inspectores", ViewBag.ControllerName)" class="btn btn-round btn-info btm-sm" title="Volver">
                        <i class="fa fa-arrow-circle-left"></i> Volver al listado
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}



