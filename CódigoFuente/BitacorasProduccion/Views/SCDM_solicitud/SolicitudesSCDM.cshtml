                                            <tr>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.id)
                                                </th>
                                                <th>
                                                    Planta
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.id_tipo_solicitud)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.id_tipo_cambio)
                                                </th>

                                                <th>
                                                    @Html.DisplayNameFor(model => model.descripcion)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.justificacion)
                                                </th>

                                                <th>
                                                    @Html.DisplayNameFor(model => model.SCDM_cat_prioridad.descripcion)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.fecha_creacion)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.id_solicitante)
                                                </th>
                                                @if (Request.QueryString["estatus"] == Enum.GetName(typeof(Portal_2_0.Models.SCMD_solicitud_estatus_enum), (int)Portal_2_0.Models.SCMD_solicitud_estatus_enum.RECHAZADA_SCDM)
                                                    || Request.QueryString["estatus"] == Enum.GetName(typeof(Portal_2_0.Models.SCMD_solicitud_estatus_enum), (int)Portal_2_0.Models.SCMD_solicitud_estatus_enum.RECHAZADA_DEPARTAMENTO)
                                                  )
                                                {
                                                    <th>
                                                        @Html.DisplayNameFor(model => model.id_motivo_rechazo)
                                                    </th>
                                                    <th>
                                                        @Html.DisplayNameFor(model => model.descripcion)
                                                    </th>
                                                }
                                                <th>
                                                    @Html.DisplayNameFor(model => model.EstatusSolicitud)
                                                </th>
                                                <th>Acciones</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model)
                                            {
                                                <tr>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.id)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.SCDM_rel_solicitud_plantas.FirstOrDefault().plantas.ConcatPlantaSap)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.SCDM_cat_tipo_solicitud.descripcion)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.SCDM_cat_tipo_cambio.descripcion)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.descripcion)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.justificacion)
                                                    </td>
                                                    <td class="@(item.id_prioridad == 2? "glow":string.Empty)">
                                                        @Html.DisplayFor(modelItem => item.SCDM_cat_prioridad.descripcion)
                                                    </td>
                                                    <td nowrap>
                                                        @item.fecha_creacion.ToShortDateString()
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.empleados.ConcatNombre)
                                                    </td>

                                                    @if (Request.QueryString["estatus"] == Enum.GetName(typeof(Portal_2_0.Models.SCMD_solicitud_estatus_enum), (int)Portal_2_0.Models.SCMD_solicitud_estatus_enum.RECHAZADA_SCDM)
                                                        || Request.QueryString["estatus"] == Enum.GetName(typeof(Portal_2_0.Models.SCMD_solicitud_estatus_enum), (int)Portal_2_0.Models.SCMD_solicitud_estatus_enum.RECHAZADA_DEPARTAMENTO)
                                                        )
                                                    {
                                                        <td style="color:red;">
                                                            @Html.DisplayFor(modelItem => item.SCDM_solicitud_asignaciones.Last(x => x.id_motivo_rechazo != null).SCDM_cat_motivo_rechazo.descripcion)
                                                        </td>
                                                        <th style="color:red;">
                                                            @Html.DisplayFor(modelItem => item.SCDM_solicitud_asignaciones.Last(x => x.id_motivo_rechazo != null).comentario_rechazo)
                                                        </th>
                                                    }

                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.EstatusSolicitud)
                                                    </td>
                                                    <td nowrap>
