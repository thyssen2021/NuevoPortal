@{
    ViewBag.Title = "Fiscal Year / Centro de Costo";
    ViewBag.PrimerNivel = "plantilla_forecast";
    ViewBag.SegundoNivel = "index_forecast";
    ViewBag.ControllerName = ViewContext.RouteData.Values["controller"];
    ViewBag.nav_style = "nav-sm";
}

@section estilos
{
    <!-- Select2 -->
    <link href="@Url.Content("~/Content/vendors/select2/css/select2.css")" rel="stylesheet">
    <link href="@Url.Content("~/Content/vendors/select2-bootstrap4-theme/select2-bootstrap4.min.css")" rel="stylesheet">
    <style>
        /* Aseguramos que los select2 ocupen 100% del ancho */
        .select2-container {
            width: 100% !important;
        }
    </style>
}

<div class="right_col" role="main">
    <div class="">
        <div class="clearfix"></div>
        <div class="row">
            <div class="col-md-12 col-sm-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>@ViewBag.Title</h2>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <!-- Inicio Contenido -->
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="anioFiscal">Año Fiscal</label>
                                    <select id="anioFiscal" class="form-control select2">
                                        <option value="">Seleccione un año fiscal</option>
                                        @foreach (var item in ViewBag.FiscalYears as SelectList)
                                        {
                                            <option value="@item.Value">@item.Text</option>
                                        }
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="centroCosto">Centro de Costo</label>
                                    <select id="centroCosto" class="form-control select2">
                                        <option value="">Seleccione un centro de costo</option>
                                        @foreach (var item in ViewBag.CentrosCosto as SelectList)
                                        {
                                            <option value="@item.Value">@item.Text</option>
                                        }
                                    </select>
                                </div>
                            </div>
                        </div>

                        <!-- Fila separada para el botón -->
                        <div class="row">
                            <div class="col-md-12">
                                <button id="btnMostrar" class="btn btn-primary">Mostrar</button>
                            </div>
                        </div>
                        <!-- Finaliza Contenido -->
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <!-- Se asume que jQuery ya está incluido en la plantilla base -->
    @Scripts.Render(Url.Content("~/Content/vendors/select2/js/select2.full.min.js"))
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        $(document).ready(function () {
            // Inicializamos los select2 con ancho completo
            $('.select2').select2({
                width: '100%'
            });

            $("#btnMostrar").click(function (e) {
                e.preventDefault();
                var anioFiscal = $("#anioFiscal").val();
                var centroCosto = $("#centroCosto").val();

                if (!anioFiscal || !centroCosto) {
                    Swal.fire({
                        title: 'Advertencia',
                        text: 'Debes seleccionar ambos combos',
                        icon: 'warning'
                    });
                    return false;
                }

                window.location.href = '@Url.Action("EditCentro", "budget_cantidad_forecast")' + "?id_fiscal_year=" + anioFiscal + "&id_centro_costo=" + centroCosto;
            });

        });
    </script>
}
