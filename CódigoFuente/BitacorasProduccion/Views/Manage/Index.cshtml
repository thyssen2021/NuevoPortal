@model IdentitySample.Models.IndexViewModel
@using Microsoft.AspNet.Identity
@{
    ViewBag.Title = "Administra tu cuenta";
    ViewBag.PrimerNivel = "usuarios";
    ViewBag.SegundoNivel = "usuarios";
    ViewBag.ControllerName = "Manage";

}

<div class="right_col" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>Usuarios</h3>
            </div>
        </div>

        <div class="clearfix"></div>

        <div class="row">
            <div class="col-md-12 col-sm-12  ">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>@ViewBag.Title.</h2>
                        
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <p class="text-success">@ViewBag.StatusMessage</p>
                        <h4>Usuario</h4>
                        <hr />
                        <dl class="dl-horizontal">
                            <dt>
                                Usuario
                            </dt>
                            <dd>
                                @User.Identity.GetUserName()
                            </dd>
                        </dl>

                    </div>
                    <div class="row">
                        <div class="col-md-8">
                            <p>
                                <a href="@Url.Action("ChangePassword", ViewBag.ControllerName)" class="btn btn-warning btm-sm" title="Cambiar contraseña">
                                    <i class="fa fa-refresh"></i> Cambiar contrase&ntilde;a
                                </a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

