    @Scripts.Render(Url.Content("~/Scripts/AlertasSweetAlert.js"))

    @Scripts.Render("~/bundles/dataTables_js")
    <!-- iCheck -->
    @Scripts.Render(Url.Content("~/Content/vendors/iCheck/icheck.min.js"))

    <script>

        $(document).ready(function () {
            //agranda el tamaño de la barra
            window.onload = function () {
                document.getElementById('menu_toggle').click();
            }

            //inicializa los data table
            $('#datatable_1').DataTable({
                "paging": false,
                "ordering": false,
                "searching": false,
                "info": false
            });

            //<-- INICIA BLOQUE NUEVO: Manejador de eventos para el cambio de planta -->
            $('#clave_planta').on('change', function () {
                var idPlanta = $(this).val();
                var lineasDropdown = $('#id_linea');

                // Limpiar y deshabilitar el dropdown de líneas
                lineasDropdown.prop('disabled', true);
                lineasDropdown.html('<option value="">Cargando...</option>');

                // Si no se seleccionó una planta, se resetea el combo de líneas
                if (!idPlanta) {
                    lineasDropdown.html('<option value="">-- Seleccione un valor --</option>');
                    return;
                }

                // Realizar llamada AJAX para obtener las nuevas líneas
                $.ajax({
                    type: 'POST',
                    url: '@Url.Action("obtieneLineasPlantas", "Combos")', // Usar Url.Action para generar la URL
                    data: { clavePlanta: idPlanta },
                    success: function (data) {
                        populateDropdown(lineasDropdown, data);
                        lineasDropdown.prop('disabled', false); // Habilitar el dropdown
                    },
                    error: function () {
                        // Manejar el error en caso de que la llamada AJAX falle
                        lineasDropdown.html('<option value="">Error al cargar líneas</option>');
                    }
                });
            });
            //<-- FINALIZA BLOQUE NUEVO -->


            // Initialize Select2 Elements
            $('.select2bs4').select2({
                theme: 'bootstrap4'
            });

            // Llama a esta función una sola vez para establecer los valores iniciales si existen
            seleccionaValoresDefault();
        });


        //<-- MODIFICADO: Esta función ya no es necesaria, la lógica se movió al evento 'change'
        /*
        //activa y desactiva los combos
        function verificaEstadoCombos() {
            var planta = $("#clave_planta option:selected").val();
            //si planta esta vacia
            if (planta == "") {
                $("#id_linea").prop("disabled", true);
            }
            else {
                $("#id_linea").prop("disabled", false);
            }
        }
        */

        //selecciona los valores que carga por defecto al cargar la página
        function seleccionaValoresDefault() {
            // Este código se mantiene para cuando la página se carga con filtros ya aplicados
            var clavePlantaSeleccionada = '@clavePlanta';
            var idLineaSeleccionada = '@idLinea';

            if (clavePlantaSeleccionada) {
                // Selecciona la planta que viene del servidor
                $("#clave_planta").val(clavePlantaSeleccionada).trigger('change');

                // Se necesita un pequeño retraso para permitir que la llamada AJAX del evento 'change' termine
                // antes de intentar seleccionar la línea.
                setTimeout(function() {
                    if (idLineaSeleccionada) {
                         $("#id_linea").val(idLineaSeleccionada).trigger('change');
                    }
                }, 500); // 500ms de espera
            }
        }

        //<-- MODIFICADO: Función mejorada para poblar el dropdown -->
        //completa el select con los datos recibidos
        function populateDropdown(select, data) {
            select.html(''); // Limpia las opciones existentes
            // Agrega la opción por defecto primero
            select.append($('<option></option>').val('').html('-- Seleccione un valor --'));
            // Agrega las nuevas opciones desde el servidor
            $.each(data, function (id, option) {
                select.append($('<option></option>').val(option.value).html(option.name));
            });
        }

    </script>

}

