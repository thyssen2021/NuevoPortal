                            @if (Model.GetIT_Inventory_Cellular_LinesActivas().Count > 0)
                            {
                                <table id="datatable_100" class="table datatable table-bordered nowrap" cellspacing="0" width="100%">
                                    <thead>
                                        <tr>
                                            <th width="1%">#</th>
                                            <th>N&uacute;mero Celular </th>
                                            <th>Plan</th>
                                            <th>
                                                ¿Activo?
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model.GetIT_Inventory_Cellular_LinesActivas())
                                        {
                                            <tr class="fondo-verde">
                                                <td>@(c++)</td>
                                                <th>
                                                    @Html.DisplayFor(model => item.GetPhoneNumberFormat)
                                                </th>
                                                <td>
                                                    @item.Get_Cellular_Plans(item.id_inventory_celullar_plan).nombre_plan
                                                </td>
                                                <td>
                                                    @if (item.activo)
                                                    {
                                                        <span>S&Iacute;</span>
