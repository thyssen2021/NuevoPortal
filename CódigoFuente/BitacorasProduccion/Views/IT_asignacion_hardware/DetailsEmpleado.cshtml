                        <div class="ln_solid"></div>
                        @{int c = 1;}

                        @foreach (var tipoHardware in listaTipos.Where(x => x.puede_asignarse))
                        {
                            c = 1;
                            if (Model.IT_asignacion_hardware.Where(x => x.IT_asignacion_hardware_rel_items.Any(y =>
                                                                            (y.IT_inventory_items != null && y.IT_inventory_items.id_inventory_type == tipoHardware.id)
                                                                            || (y.IT_inventory_items_genericos != null && y.IT_inventory_items_genericos.id_inventory_type == tipoHardware.id)
                                                                    )).Count() > 0)
                            {
                                <div class="form-group row">
                                    <span style="color:black"><b>&ensp; HISTORIAL DE ASIGNACIONES - @tipoHardware.descripcion.ToUpper()</b></span>
                                </div>

                                <div class="form-group row">

                                    @if (Model.IT_asignacion_hardware.Where(x => x.IT_asignacion_hardware_rel_items.Any(y =>
                                                                            (y.IT_inventory_items != null && y.IT_inventory_items.id_inventory_type == tipoHardware.id)
                                                                            || (y.IT_inventory_items_genericos != null && y.IT_inventory_items_genericos.id_inventory_type == tipoHardware.id)
                                                                    )).Count() > 0)
                                    {
                                        <table id="datatable_@listaTipos.Where(x => x.puede_asignarse).ToList().IndexOf(tipoHardware)" class="table datatable table-bordered nowrap" cellspacing="0" width="100%">
                                            <thead>
                                                <tr>
                                                    <th width="1%">#</th>

                                                    @if (tipoHardware.descripcion == Bitacoras.Util.IT_Tipos_Hardware.LAPTOP
