                                                    {
                                                        <th>
                                                            Hostname
                                                        </th>
                                                    }
                                                    @if (tipoHardware.descripcion == Bitacoras.Util.IT_Tipos_Hardware.ACCESSORIES)
                                                    {
                                                        <th>
                                                            Accessory Type
                                                        </th>
                                                    }
                                                    <th>
                                                        Brand
                                                    </th>
                                                    <th>
                                                        Model
                                                    </th>
                                                    <th>
                                                        Serial Number
                                                    </th>
                                                    <th>
                                                        Fecha Asignaci&oacute;n
                                                    </th>
                                                    <th>
                                                        Fecha Desasignaci&oacute;n
                                                    </th>
                                                    <th width="1%">
                                                        Responsiva
                                                    </th>
                                                    <th width="1%">
                                                        Responsable principal
                                                    </th>
                                                    <th width="1%">
                                                        ¿Asignación Actual?
                                                    </th>

                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var item in Model.IT_asignacion_hardware.Where(x => x.IT_asignacion_hardware_rel_items.Any(y =>
                                                                            (y.IT_inventory_items != null && y.IT_inventory_items.id_inventory_type == tipoHardware.id)
                                                                            || (y.IT_inventory_items_genericos != null && y.IT_inventory_items_genericos.id_inventory_type == tipoHardware.id)
                                                                    ))
                                            .OrderByDescending(x => x.fecha_asignacion).OrderByDescending(x => x.id)
                                            )
                                                {
                                                    foreach (var element in item.IT_asignacion_hardware_rel_items)
                                                    {
                                                        <tr class="@(item.es_asignacion_actual ? item.id_biblioteca_digital.HasValue ? "registro-actual fondo-verde" : "registro-actual fondo-amarillo" : "registro-pasado fondo-gris" ) ">
                                                            <td>@(c++)</td>
                                                            @if (tipoHardware.descripcion == Bitacoras.Util.IT_Tipos_Hardware.LAPTOP
                                                            || tipoHardware.descripcion == Bitacoras.Util.IT_Tipos_Hardware.DESKTOP)
                                                            {
                                                                <td>
                                                                    @element.GetGenericObject().hostname
                                                                </td>
                                                            }
                                                            @if (tipoHardware.descripcion == Bitacoras.Util.IT_Tipos_Hardware.ACCESSORIES)
                                                            {
                                                                <td>
                                                                    @element.GetGenericObject().IT_inventory_tipos_accesorios.descripcion
                                                                    @*@Html.DisplayFor(model => element.IT_inventory_items.IT_inventory_tipos_accesorios.descripcion)*@
                                                                </td>
                                                            }
                                                            <td>
                                                                @element.GetGenericObject().brand
                                                            </td>
                                                            <td>
                                                                @element.GetGenericObject().model
                                                            </td>
                                                            <td>
                                                                @Html.DisplayFor(model => element.IT_inventory_items.serial_number)
                                                            </td>
                                                            <td>
                                                                @Html.DisplayFor(model => item.fecha_asignacion)
                                                            </td>
                                                            <td>
                                                                @Html.DisplayFor(model => item.fecha_desasignacion)
                                                            </td>
                                                            <td>
                                                                @if (item.id_biblioteca_digital.HasValue)
                                                                {
                                                                    <a href="@Url.Action("DownloadFile", "Combos", new { idDocumento = item.id_biblioteca_digital, inline = true })" class="btn btn-info btn-sm" target="_blank" title="Ver">
                                                                        <i class="fa-regular fa-eye"></i>
                                                                    </a>
                                                                    <a href="@Url.Action("DownloadFile", "Combos", new { idDocumento = item.id_biblioteca_digital })" class="btn btn-success btn-sm" title="Descargar">
                                                                        <i class="fa fa-download"></i>
                                                                    </a>
                                                                    if (!element.TieneAsignacionValida() && item.es_asignacion_actual)
                                                                    {
                                                                        <a onclick="showWarningDialog()" class="btn btn-warning btn-sm" title="Información">
                                                                            <i class="fa fa-warning"></i>
                                                                        </a>
                                                                    }
                                                                }
                                                                else
                                                                {
                                                                    <span>PENDIENTE</span>
                                                                }
                                                            </td>
                                                            <td>
                                                                @Html.DisplayFor(model => item.empleados1.ConcatNombre)
                                                            </td>
                                                            <td>
                                                                @if (item.es_asignacion_actual)
                                                                {
                                                                    <span>S&Iacute;</span>
                                                                }
                                                                else
                                                                {
                                                                    <span>NO</span>
                                                                }
                                                            </td>
                                                        </tr>
                                                    }
                                                }

                                            </tbody>
                                        </table>
                                        <div class="col-md-12 col-sm-12">
                                            <br />
                                        </div>
                                    }
                                    else
                                    {
                                        <p>&emsp; No hay asignaciones disponibles.</p>
                                    }



                                </div>

                                <div class="ln_solid"></div>
                            }
                        }



