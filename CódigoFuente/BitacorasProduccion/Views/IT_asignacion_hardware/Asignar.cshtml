        function mostrarDetalles(contador) {
            // verifica si está seleccionado inventario o generico
            let inventario_selected = document.getElementById("inventario_" + contador).checked;

            if (inventario_selected) {
                var id_cel = $("#hardware_inventario_" + contador + " option:selected").val();
                window.open('/IT_Inventory_items/Details/'+id_cel+'', 'popup', "width=" + screen.width *.80 + ",height=" + screen.height *.80 + "");
            } else { //es generico
                var id_cel = $("#hardware_generico_" + contador + " option:selected").val();
                window.open('/IT_Inventory_items_genericos/Details/' + id_cel + '', 'popup', "width=" + screen.width * .80 + ",height=" + screen.height * .80 + "");
            }
        }

            function verificaInfo(contador) {

            // verifica si está seleccionado inventario o generico
                let inventario_selected = document.getElementById("inventario_" + contador).checked;
                let id_sel = '';

                if (inventario_selected) {
                    id_sel = $("#hardware_inventario_" + contador + " option:selected").val();
                } else { //es generico
                     id_sel = $("#hardware_generico_" + contador + " option:selected").val();
                }

                //si material esta vacia
                if (id_sel == "") {
                    $("#btn-info-cell_" + contador).prop("disabled", true);
                    $("#btn-info-cell_" + contador).hide('explode', 400);
                }
                else {
                    $("#btn-info-cell_" + contador).prop("disabled", false);
                    $("#btn-info-cell_" + contador).show('explode', 350);

                }
        }

