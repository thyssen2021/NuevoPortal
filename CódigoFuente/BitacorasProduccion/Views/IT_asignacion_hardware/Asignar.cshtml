        function AsignarEvents() {

            $('input').iCheck({
                checkboxClass: 'icheckbox_square-green',
                radioClass: 'iradio_square-green',
                increaseArea: '20%' // optional
            });

            $('input').on('ifToggled', function (event) {

                if (event.target.id.includes("inventario")) {
                    var inventario_selected = document.getElementById(event.target.id).checked;
                    var id_contador = document.getElementById(event.target.id).dataset.id;

                    if (inventario_selected) {
                        //muestra inventario
                        $("#label_combo_inventory_" + id_contador).fadeIn(800);
                        $("#select_combo_inventory_" + id_contador).fadeIn(800);
                        $("#hardware_inventario_" + id_contador).prop('disabled', false);
                        //oculta generico
                        $("#label_combo_generico_" + id_contador).hide();
                        $("#select_combo_generico_" + id_contador).hide();
                        $("#hardware_generico_" + id_contador).prop('disabled', true);
                        //muestra las advertencias en caso de ser necesario
                        $(".inventario").change();

                    } else {
                        //oculta inventario
                        $("#label_combo_inventory_" + id_contador).hide();
                        $("#select_combo_inventory_" + id_contador).hide();
                        $("#hardware_inventario_" + id_contador).prop('disabled', true);
                        //muestra generico
                        $("#label_combo_generico_" + id_contador).fadeIn(800);
                        $("#select_combo_generico_" + id_contador).fadeIn(800);
                        $("#hardware_generico_" + id_contador).prop('disabled', false);
                        //debe borrar las advertencias y responsable principal = empleado
                        $('#aviso_nuevo_responsable').hide(600);
                        $('#aviso').hide(600);
                        $('#responsable').val($('#empleado').val());
                    }
                    verificaInfo(id_contador);
                }

            });

            //vuelve a asigar el evento on a cada input de los lotes
            $('.select2bs4').each(function () {

                $(this).change(function () {
                    var row = $(this).attr("data-row");
                    if (row!=null)
                        verificaInfo(row);
                });

            });


        }


