                                                <div class="col-md-5 col-sm-5">
                                                    @Html.DropDownList("id_asignacion_usuario", null, htmlAttributes: new { @class = "form-control select2bs4", @style = "width:100%" })
                                                </div>
                                            </div>
                                            <div class="ln_solid"></div>
                                            <div class="form-group row">
                                                <span style="color:black"><b>L&Iacute;nea Celular </b></span>
                                            </div>
                                            <div class="form-group row ">
                                                <label class="control-label col-md-1 col-sm-1" for="id_cellular_line" style="text-align:right">L&iacute;nea:</label>
                                                <div class="col-md-4 col-sm-4 ">
                                                    @Html.DropDownList("id_cellular_line", null, htmlAttributes: new { @class = "form-control select2bs4", @style = "width:100%" })
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <div class="col-md-8 col-sm-8">

                                                </div>
                                                <div class="col-md-2 col-sm-2">
                                                    <a href="@Url.Action( "Index", ViewBag.ControllerName)" class="btn btn-warning float-right">
                                                        <i class="fa fa-refresh"></i> Restablecer
