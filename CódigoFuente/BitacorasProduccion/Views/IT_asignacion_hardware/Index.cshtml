                                    </div>
                                    <table id="datatable_1" class="table table-striped table-bordered nowrap" cellspacing="0" width="100%">
                                        <thead>
                                            <tr>
                                                <th width="1%">Acciones</th>
                                                <th width="1%">
                                                    @Html.DisplayNameFor(model => model.numeroEmpleado)
                                                </th>
                                                <th>
                                                    Planta
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.nombre)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.C8ID)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.correo)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.activo)
                                                </th>

                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model)
                                            {
                                                <tr style="@(item.activo == false ? "color:red" :"" )">
                                                    <td>
                                                        <a href="@Url.Action("DetailsEmpleado", null, new { id = item.id})" class="btn btn-info btn-sm" rel="tooltip" data-title="Detalles del empleado">
                                                            <i class="fa fa-info-circle"></i>
                                                        </a>

                                                        <a href="@Url.Action("ListadoAsignaciones", null, new { id = item.id })" class="btn btn-primary btn-sm" rel="tooltip" data-title="Crear Asignación">
                                                            <i class="fa-solid fa-user-tag"></i>
                                                        </a>
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.numeroEmpleado)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.plantas.descripcion)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.ConcatNombre)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.C8ID)
                                                    </td>

                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.correo)
                                                    </td>

                                                    @*<th>
                                                            @Html.DisplayFor(modelItem => item.Area.descripcion)
                                                        </th>
                                                        <th>
                                                            @Html.DisplayFor(modelItem => item.puesto1.descripcion)
                                                        </th>*@
                                                    <td>
                                                        @if (item.activo.HasValue && item.activo.Value)
                                                        {
                                                            <span>Activo</span>
                                                        }
                                                        else
                                                        {
                                                            <span>Inactivo</span>
                                                        }
                                                    </td>

                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                                <br />
                                @if (Model.Count() > 0)
                                {
                                    <nav id="nav_paginacion" aria-label="...">
                                        @{Html.RenderPartial("_Paginacion", Model);}
                                    </nav>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts
{
    <!-- SweetAlert2 -->
    @Scripts.Render(Url.Content("~/Content/vendors/sweetalert2/sweetalert2.min.js"))
    @Scripts.Render(Url.Content("~/Scripts/AlertasSweetAlert.js"))
    @Scripts.Render(Url.Content("~/Content/vendors/select2/js/select2.full.min.js"))
    @Scripts.Render("~/bundles/dataTables_js")

    <script>
        $(document).ready(function () {

            //inicializa los data table
            var tabla = $('#datatable_1').DataTable({
                "paging": false,
                "ordering": false,
                "searching": false,
                "scrollX": true,
                "info": false
            });

            // Initialize Select2 Elements (debe ir después de asignar el valor)
            $('.select2bs4').select2({
                theme: 'bootstrap4'
            })

            $("#planta_clave").change(function () {

                $.ajax({
                    type: 'POST',
                    url: '/Puestos/obtieneTodasAreas',
                    data: { clavePlanta: $(this).val() },
                    success: function (data) {
                        populateDropdown($("#id_area"), data);
                    },
                    async: true
                });

            });

            //Envia el formulario cada vez que se modifica el combo
            $(".select2bs4").change(function () {
                $("#buscarForm").submit();
            });

        });

        //completa el select con los datos recibidos
        function populateDropdown(select, data) {
            select.html('');
            $.each(data, function (id, option) {
                select.append($('<option></option>').val(option.value).html(option.name));
            });
        }

        //agranda el tamaño de la barra
        window.onload = function () {
            document.getElementById('menu_toggle').click();
        }
    </script>

}

