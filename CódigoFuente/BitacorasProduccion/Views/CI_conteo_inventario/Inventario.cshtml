                    { readOnly: true, className: "htRight" }, //Piezas Min SUM
                    { readOnly: true, className: "htRight" }, //Piezas Max SUM
                    { readOnly: true, className: "htRight" }, //Cantidad Teotica
                    { readOnly: true, className: "htRight" }, //Diferencia SAP
                    { readOnly: true, className: "htRight" }, //Validación
                ],
                hiddenColumns: {
                    // specify columns hidden by default
                    columns: [0, GetColFromNameMultiple('Gauge'),
                        GetColFromNameMultiple('Gauge Min'),
                        GetColFromNameMultiple('Gauge Max'),
                        GetColFromNameMultiple('Piezas<br>SUM')], //contains ID
                },
                height: '200px',
                //selectionMode: 'single',
                fillHandle: false,
                colWidths: [
                    0, //hidden ID
                    600, //Etiqueta
                    100, //Gauge
                    100, //Gauge MIN
