                                callback(false);
                            } else {
                                callback(true);
                            }


                        },
                        className: "htRight"
                    }, //Espesor
                    { readOnly: true, className: "htRight" }, //Piezas
                    { readOnly: true, className: "htRight" }, //Piezas Min
                    { readOnly: true, className: "htRight" }, //Piezas Max
                    { readOnly: true, className: "htRight" }, //Total Piezas
