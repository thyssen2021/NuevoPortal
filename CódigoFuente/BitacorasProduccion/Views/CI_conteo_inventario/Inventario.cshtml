                language: 'es-MX',
            });

            //aplica los estilos
            hotM.updateSettings({
                cells(row, col) {
                    const cellProperties = {};
                    if (col === GetColFromNameMultiple("Validación")) {
                        cellProperties.renderer = validacionRenderMultiple
