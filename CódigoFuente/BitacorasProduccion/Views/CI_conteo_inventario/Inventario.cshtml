        function inicializaHandsontableMultiple() {
            const containerM = document.querySelector('#handsontable-multiple');
            hotM = new Handsontable(containerM, {
                autoWrapRow: true,
                colHeaders: headersMultiple,
                afterGetColHeader: function (col, TH) {
                    var TR = TH.parentNode;
                    var THEAD = TR.parentNode;
                    var headerLevel = (-1) * THEAD.childNodes.length + Array.prototype.indexOf.call(THEAD.childNodes, TR);

                    function applyClass(elem, className) {
                        if (!Handsontable.dom.hasClass(elem, className)) {
                            Handsontable.dom.addClass(elem, className);
                        }
                    }

                    if (col == -1) {
                        applyClass(TH, 'HTgray');
                    } else if (headerLevel === -2) {
                        applyClass(TH, 'HTblue');
                    } else {
                        if (col <= GetColFromNameMultiple('Piezas MAX'))
                            applyClass(TH, 'HTthyssen');
                        else
                            applyClass(TH, 'HTOrange');
                    }
                },
                columns: [
                    { readOnly: true, className: "htRight" }, //ID
                    {
                        type: 'autocomplete', strict: true, filter: false, source: etiquetasArray,
                         validator: function (value, callback) {
                            if (!etiquetasArray.includes(value)) {
                                callback(false);
                            }
                            else {
                                //verifica si ya existe repetido el numero de material
                                let filas = hotM.countRows();
                                let valido = true

                                for (var i = 0; i <= filas; i++) {
                                    let temp = hotM.getDataAtCell(i, GetColFromNameMultiple("Etiqueta"));
                                    if (temp != null && temp.toLowerCase() == value.toLowerCase() && i != this.row && value.length > 0) {
                                        valido = false;
                                    }
                                }
                                //revisa si el material de referencia es válido
                                if (!valido) {
                                    toastMixin.fire({ title: 'El número de etiqueta ya se encuentra en la tarima.', icon: 'warning' });
                                    callback(false)
                                } else {
                                    callback(true);

                                }
                            }
                        }
                    }, //Etiqueta
                    { readOnly: true, className: "htRight" }, //Gauge
                    { readOnly: true, className: "htRight" }, //Gauge MIN
                    { readOnly: true, className: "htRight" }, //Gauge MAX
                    { //Altura
                        readOnly: false, className: "htRight",
                        validator: function (value, callback) {
                            let num = parseFloat(value);

                            if (this.row != 0) {
                                callback(true);
                            } else if (isNaN(value) || value == null || value == '') {
                                toastMixin.fire({ title: 'Ingrese una altura válida.', icon: 'warning' });
                                callback(false);
                            } else if (num < 0) {
                                toastMixin.fire({ title: 'Sólo se permiten números positivos.', icon: 'warning' });
                                callback(false);
                            } else {
                                callback(true);
                            }
                        },
                    },
                    {
                        type: 'numeric',
                        validator: function (value, callback) {
                            let num = parseFloat(value);

                            if (isNaN(value) && value != null && value!= '') {
                                toastMixin.fire({ title: 'Ingrese un número válido.', icon: 'warning' });
                                callback(false);
                            } else if (num < 0) {
