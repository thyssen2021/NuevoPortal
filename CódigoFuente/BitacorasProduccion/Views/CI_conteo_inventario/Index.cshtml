                        break;
                    case 7:
                        C8ID = $(this).val();
                        break;
                    case 8:
                        correo = $(this).val();
                        break;
                    case 9:
                        activo = $(this).val();
                        break;
                }
                index++;
            });

            //carga ventana con parámetros url
            let url = new URL(location.href + "/" + ruta);
            if (numeroEmpleado != '')
                url.searchParams.set('numeroEmpleado', numeroEmpleado)
            if (nombre != '')
                url.searchParams.set('nombre', nombre)
            if (planta != '')
