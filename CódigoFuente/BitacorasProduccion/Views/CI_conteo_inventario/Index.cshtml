    function cargaTabla() {
                    $.ajax({
                type: 'POST',
                url: '/@ViewBag.ControllerName/CargaTabla',
                data: { },
                success: function (data) {

                    table.clear();
                    for (var i = 0; i < data.data.length; i++) {
                        table.row.add(data.data[i]);
                    }

                    table.draw(true);

                },
                async: true
                    });


    }


        function exportar(ruta) {
            let index = 0;
            //variables de búsqueda
            let numeroEmpleado = '';
            let nombre = '';
            let planta = '';
            let departamento = '';
            let puesto = '';
            let jefe_directo = '';
            let C8ID = '';
            let correo = '';
            let activo = '';

            $('th > :input').each(function () {
                switch (index) {
                    case 1:
                        numeroEmpleado = $(this).val();
                        break;
                    case 2:
                        nombre = $(this).val();
                        break;
                    case 3:
                        planta = $(this).val();
                        break;
                    case 4:
                        departamento = $(this).val();
                        break;
                    case 5:
                        puesto = $(this).val();
                        break;
                    case 6:
