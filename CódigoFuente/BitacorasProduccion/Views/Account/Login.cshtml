@model IdentitySample.Models.LoginViewModel

@{
    Layout = null;
    ViewBag.Title = "Inicio de Sesión";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" type="image/x-icon" href="~/Content/images/logo_ico.png" />
    <title>@ViewBag.Title - Portal thyssenkrup</title>
    <link href="@Url.Content("~/Content/bootstrap3_3_7.min.css")" rel="stylesheet">
    <link href="@Url.Content("~/Content/login.css")" rel="stylesheet">
    <style>
        body {
            font-family: 'TKTypeMedium';
            src: url('../../fonts/tkmm/TKTypeMedium.ttf') format('truetype');
        }

        .tooltip_class + .tooltip > .tooltip-inner {
            background-color: #fbf0b3;
            color: #060689;
            border: 1px solid #808080;
            padding: 15px;
            font-size: 15px;
        }
        /* Tooltip on top */
        .tooltip_class + .tooltip.top > .tooltip-arrow {
            border-top: 5px solid #b1a669;
        }
        /* Tooltip on bottom */
        .tooltip_class + .tooltip.bottom > .tooltip-arrow {
            border-bottom: 5px solid #b1a669;
        }
        /* Tooltip on left */
        .tooltip_class + .tooltip.left > .tooltip-arrow {
            border-left: 5px solid #b1a669;
        }
        /* Tooltip on right */
        .tooltip_class + .tooltip.right > .tooltip-arrow {
            border-right: 5px solid #b1a669;
        }


        /* Animación de sacudida al cargar */
        @@keyframes shake {
            0% {
                transform: rotate(0deg);
            }

            20% {
                transform: rotate(-3deg);
            }

            40% {
                transform: rotate(3deg);
            }

            60% {
                transform: rotate(-2deg);
            }

            80% {
                transform: rotate(2deg);
            }

            100% {
                transform: rotate(0deg);
            }
        }

        /* Animación de resplandor cuando el cursor está sobre el cuadro */
        @@keyframes glow {
            0% {
                box-shadow: 0 0 10px rgba(255, 223, 0, 0.3);
            }

            50% {
                box-shadow: 0 0 20px rgba(255, 223, 0, 0.6);
            }

            100% {
                box-shadow: 0 0 10px rgba(255, 223, 0, 0.3);
            }
        }

        /* Animación de sacudida repetitiva cada 10 segundos */
        @@keyframes shake-repeat {
            0%, 90% {
                transform: rotate(0deg);
            }

            92% {
                transform: rotate(-5deg);
            }

            94% {
                transform: rotate(5deg);
            }

            96% {
                transform: rotate(-3deg);
            }

            98% {
                transform: rotate(3deg);
            }

            100% {
                transform: rotate(0deg);
            }
        }

        /* Estilos del cuadro flotante */
        .floating-box {
            position: absolute;
            top: 20px;
            right: 20px;
            background-color: #fff9c4; /* Amarillo claro */
            border: 2px solid #ffeb3b;
            padding: 10px 15px;
            border-radius: 8px;
            box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.2);
            font-size: 14px;
            font-weight: bold;
            text-align: center;
            color: #333;
            display: flex;
            align-items: center;
            gap: 8px;
            min-height: 50px;
            transition: transform 0.3s ease-in-out;
        }

            /* Animación al pasar el mouse */
            .floating-box:hover {
                animation: glow 1s infinite alternate; /* Efecto de brillo */
                transform: scale(1.05); /* Aumenta un poco de tamaño */
            }

        /* Estilos del icono */
        .floating-icon {
            width: 30px;
            height: 30px;
            flex-shrink: 0;
            animation: shake 0.5s ease-in-out, shake-repeat 10s infinite;
        }

        /* Estilos del texto */
        .floating-box p {
            margin: 0;
            padding: 0;
            line-height: 1.2;
        }

        /* Estilos del enlace */
        .floating-link {
            color: #009ff5;
            text-decoration: none;
            font-weight: bold;
        }

            .floating-link:hover {
                text-decoration: underline;
            }

        .idea-box {
            top: 20px;
            right: 20px;
            width: 250px;
        }

        .manuales-box {
            top: 100px; /* ajusta este valor para separar verticalmente */
            right: 20px;
            width: 250px;
        }
    </style>
</head>
<body>
    <div class="container">

        <div class="floating-box idea-box">
            <svg width="42px" height="42px" viewBox="0 0 64 64" xmlns="http://www.w3.org/2000/svg" stroke-width="3" stroke="#009ff5" fill="none"><g id="SVGRepo_bgCarrier" stroke-width="0"></g><g id="SVGRepo_tracerCarrier" stroke-linecap="round" stroke-linejoin="round"></g><g id="SVGRepo_iconCarrier"><line x1="50.4" y1="24.38" x2="58.3" y2="23.14"></line><line x1="47.93" y1="17.11" x2="52.87" y2="14.2"></line><line x1="42.89" y1="11.73" x2="46.21" y2="4.51"></line><line x1="33.45" y1="10.69" x2="33.41" y2="4.96"></line><line x1="24.29" y1="12.09" x2="21.62" y2="4.51"></line><line x1="17.99" y1="17.03" x2="12.96" y2="14.29"></line><line x1="15.78" y1="23.97" x2="8.03" y2="22.66"></line><path d="M26.22,45.47c0-5.16-3.19-9.49-4.91-12.69A12.24,12.24,0,0,1,19.85,27c0-6.79,6.21-12.3,13-12.3"></path><path d="M39.48,45.47c0-5.16,3.19-9.49,4.91-12.69A12.24,12.24,0,0,0,45.85,27c0-6.79-6.21-12.3-13-12.3"></path><rect x="23.63" y="45.19" width="18.93" height="4.25" rx="2.12"></rect><rect x="24.79" y="49.43" width="16.61" height="4.25" rx="2.12"></rect><path d="M36.32,53.68v.84a3.23,3.23,0,1,1-6.44,0v-.84"></path><path d="M24.57,26.25a7.5,7.5,0,0,1,7.88-7.11"></path></g></svg>
            <p>
                ¿Tienes una idea de mejora?<br />
                <a href="@Url.Action("Index","MejoraContinua")" class="floating-link">
                    Regístrala aquí
                </a>
            </p>
        </div>

        <div class="floating-box manuales-box">
            <svg width="42px" height="42px" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg"><g id="SVGRepo_bgCarrier" stroke-width="0"></g><g id="SVGRepo_tracerCarrier" stroke-linecap="round" stroke-linejoin="round"></g><g id="SVGRepo_iconCarrier"> <path d="M19.8978 16H7.89778C6.96781 16 6.50282 16 6.12132 16.1022C5.08604 16.3796 4.2774 17.1883 4 18.2235" stroke="#009ff5" stroke-width="1.5"></path> <path d="M8 7H16" stroke="#009ff5" stroke-width="1.5" stroke-linecap="round"></path> <path d="M8 10.5H13" stroke="#009ff5" stroke-width="1.5" stroke-linecap="round"></path> <path d="M13 16V19.5309C13 19.8065 13 19.9443 12.9051 20C12.8103 20.0557 12.6806 19.9941 12.4211 19.8708L11.1789 19.2808C11.0911 19.2391 11.0472 19.2182 11 19.2182C10.9528 19.2182 10.9089 19.2391 10.8211 19.2808L9.57889 19.8708C9.31943 19.9941 9.18971 20.0557 9.09485 20C9 19.9443 9 19.8065 9 19.5309V16.45" stroke="#009ff5" stroke-width="1.5" stroke-linecap="round"></path> <path d="M10 22C7.17157 22 5.75736 22 4.87868 21.1213C4 20.2426 4 18.8284 4 16V8C4 5.17157 4 3.75736 4.87868 2.87868C5.75736 2 7.17157 2 10 2H14C16.8284 2 18.2426 2 19.1213 2.87868C20 3.75736 20 5.17157 20 8M14 22C16.8284 22 18.2426 22 19.1213 21.1213C20 20.2426 20 18.8284 20 16V12" stroke="#009ff5" stroke-width="1.5" stroke-linecap="round"></path> </g></svg>

            <p>
                Manuales y guías de IT<br />
                <a href="https://thyssenkruppmaterials.sharepoint.com/sites/tkmaterialsmexico-tkmm/manualesit/Documentos%20compartidos/Forms/AllItems.aspx"
                   target="_blank" rel="noopener" class="floating-link">
                    Ver Manuales IT
                </a>
            </p>
        </div>
        <div class="abs-center">
            <div class="col-sm-6 col-md-5">
                <center>
                    <img src="~/Content/images/logo_4.png" class="img-responsive" height="106px" width="450px" alt="">
                </center>
                <div class="panel panel-default box-shadow box-login">
                    <div class="panel-heading">
                        <span class="text-primary">Inicio de sesi&oacute;n</span>
                        <span class="text-muted pull-right today" title="Today">@(DateTime.Now.ToString())</span>
                    </div><!--.panel-heading-->
                    <div class="panel-body">
                        <center>
                            <h3 style="color:#0094ff"><b>Portal thyssenkrupp</b></h3>
                        </center>

                        @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form" }))
                        {
                            @Html.AntiForgeryToken()
                            <div class="form-group">

                                @Html.ValidationSummary(true, "Aviso:", new { @class = "text-danger" })

                                @Html.LabelFor(m => m.Email)
                                <div class="input-group">
                                    <div class="input-group-addon"><i class="glyphicon glyphicon-envelope"></i></div>
                                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "Usuario o correo electrónico", @tabindex = "1" })
                                </div>
                                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(m => m.Password)
                                <div id="divMayus" style="display:none; color:#0094ff; text-align:right"><i class="glyphicon glyphicon-info-sign"></i> Bloq Mayús está activo</div>
                                <div class="input-group">
                                    <div class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></div>
                                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Contraseña", @tabindex = "2" })
                                </div>
                                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                            </div>
                            <button type="submit" class="btn btn-block btn-info" tabindex="3" style="background-color: #00a0f4">Iniciar Sesi&oacute;n</button>
                        }


                        <div class="row" style="padding-top:5px">
                            <div class="col-md-6 col-sm-6 ">
                                <a href="@Url.Action("ForgotPassword", "Account")" class="tooltip_class" data-toggle="tooltip" data-placement="bottom" data-html="true" title="Haz clic aquí para restablecer tu contraseña.</u>">
                                    ¿Olvidaste tu contrase&ntilde;a?
                                </a>
                            </div>
                            <div class="col-md-6 col-sm-6" style="text-align:right">
                                <a href="@Url.Action("SolicitarUsuario", "Account")" class="tooltip_class" data-toggle="tooltip" data-placement="bottom" data-html="true" title="Si aún no tienes <b>usuario</b>, haz clic aquí para solicitarlo.</u>">
                                    Solicitar Usuario
                                </a>
                            </div>

                        </div>
                    </div>
                </div><!--.panel-->
            </div><!--.cols-->
        </div><!--.row-->
    </div><!--.container-->
</body>


@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/Scripts/bootstrap_3.4.1_login.min.js")
@Scripts.Render("~/bundles/jqueryval")

<script>
    $(document).ready(function () {
        $('[data-toggle="tooltip"]').tooltip();

        // Get the input field
        var input = document.getElementById("Password");

        // Get the warning text
        var text = document.getElementById("divMayus");

        // When the user presses any key on the keyboard, run the function
        input.addEventListener("keyup", function (event) {

            // If "caps lock" is pressed, display the warning text
            if (event.getModifierState("CapsLock")) {
                text.style.display = "block";
            } else {
                text.style.display = "none"
            }
        });

    });
</script>
</html>