@model IEnumerable<Portal_2_0.Models.budget_valores>
    @using Bitacoras.Util

@{
    Portal_2_0.Models.budget_rel_anio_fiscal_centro rel_anio_centro = (Portal_2_0.Models.budget_rel_anio_fiscal_centro)ViewBag.Anio_Centro;

    ViewBag.Title = "ACT FY " + rel_anio_centro.budget_anio_fiscal.descripcion;
    ViewBag.PrimerNivel = "plantilla_budget";
    ViewBag.SegundoNivel = "actual";
    ViewBag.ControllerName = "ResponsableBudget";

    Clases.Util.MensajesSweetAlert mensajeAlerta = (Clases.Util.MensajesSweetAlert)ViewBag.MensajeAlert;
    int fila = 1;
}

@section estilos
{
    <!-- DataTables -->
    @Styles.Render("~/Content/dataTables_css")

    <!-- SweetAlert2 -->
    <link href="@Url.Content("~/Content/vendors/sweetalert2-theme-bootstrap-4/bootstrap-4.min.css")" rel="stylesheet">

    <style>
        .text_derecha {
            text-align: right;
        }
    </style>
}

@*Para SweetAlert*@
@if (mensajeAlerta != null)
{
    <input type="hidden" value="@mensajeAlerta.Mensaje" id="mensajeAlert" />
    <input type="hidden" value="@mensajeAlerta.getTipoMensaje()" id="mensajeAlertTipo" />


}



<div class="right_col" role="main">
    <div class="">
        @*<div class="page-title">
                <div class="title_left">
                    <h3>@ViewBag.ControllerName</h3>
                </div>
            </div>*@

        <div class="clearfix"></div>

        <div class="row">
            <div class="col-md-12 col-sm-12 ">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>@ViewBag.Title</h2>
                        <ul class="nav navbar-right panel_toolbox">
                            @*Utilizado para mover a la derecha los iconos del card*@
                            <span style="visibility:hidden">_______</span>
                            <li>
                                <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                            </li>
                        </ul>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="card-box">
                                    <div class="form-group">
                                        @*<a href="@Url.Action("Create", ViewBag.ControllerName)" class="btn btn-success">
                <i class="fa fa-plus-square"></i>
                Crear nuevo
            </a>*@
                                    </div>

                                    <div class="form-group row">
                                        <!--Planta-->
                                        <label class="control-label col-md-1 text_derecha">Plant</label>
                                        <div class="col-md-2">
                                            <input type="text" class="form-control" value="@rel_anio_centro.budget_centro_costo.Area.plantas.descripcion" readonly>
                                        </div>
                                        <!--Deparment-->
                                        <label class="control-label col-md-1 text_derecha">Department</label>
                                        <div class="col-md-4">
                                            <input type="text" class="form-control" value="@rel_anio_centro.budget_centro_costo.Area.descripcion" readonly>
                                        </div>
                                        <!--Cost center-->
                                        <label class="control-label col-md-1 text_derecha">Cost Center</label>
                                        <div class="col-md-2">
                                            <input type="text" class="form-control" value="@rel_anio_centro.budget_centro_costo.num_centro_costo" readonly>
                                        </div>
                                    </div>

                                    <div class="form-group row">
                                        <!--responsable-->
                                        <label class="control-label col-md-1 text_derecha">Responsable</label>
                                        <div class="col-md-4">
                                            <input type="text" class="form-control" value="@rel_anio_centro.budget_centro_costo.empleados.ConcatNombre" readonly>
                                        </div>

                                    </div>

                                    <div class="form-group row">

                                        <table id="datatable_1" class="table table-striped table-bordered nowrap" cellspacing="0" width="100%">
                                            <thead>
                                                <tr>
                                                    <th>
                                                        Item
                                                    </th>
                                                    <th>
                                                        SAP Account
                                                    </th>
                                                    <th>
                                                        Name
                                                    </th>
                                                    <th>
                                                        Mapping
                                                    </th>

                                                    <!-- MESES-->
                                                    <th>
                                                        ACT @MesesUtil.OCTUBRE.Abreviation-@rel_anio_centro.budget_anio_fiscal.anio_inicio.ToString().Substring(2, 2)
                                                    </th>
                                                    <th>
                                                        ACT @MesesUtil.NOVIEMBRE.Abreviation-@rel_anio_centro.budget_anio_fiscal.anio_inicio.ToString().Substring(2, 2)
                                                    </th>
                                                    <th>
                                                        ACT @MesesUtil.DICIEMBRE.Abreviation-@rel_anio_centro.budget_anio_fiscal.anio_inicio.ToString().Substring(2, 2)
                                                    </th>
                                                    <th>
                                                        ACT @MesesUtil.ENERO.Abreviation-@rel_anio_centro.budget_anio_fiscal.anio_fin.ToString().Substring(2, 2)
                                                    </th>
                                                    <th>
                                                        ACT @MesesUtil.FEBRERO.Abreviation-@rel_anio_centro.budget_anio_fiscal.anio_fin.ToString().Substring(2, 2)
                                                    </th>
                                                    <th>
                                                        ACT @MesesUtil.MARZO.Abreviation-@rel_anio_centro.budget_anio_fiscal.anio_fin.ToString().Substring(2, 2)
                                                    </th>
                                                    <th>
                                                        ACT @MesesUtil.ABRIL.Abreviation-@rel_anio_centro.budget_anio_fiscal.anio_fin.ToString().Substring(2, 2)
                                                    </th>
                                                    <th>
                                                        ACT @MesesUtil.MAYO.Abreviation-@rel_anio_centro.budget_anio_fiscal.anio_fin.ToString().Substring(2, 2)
                                                    </th>
                                                    <th>
                                                        ACT @MesesUtil.JUNIO.Abreviation-@rel_anio_centro.budget_anio_fiscal.anio_fin.ToString().Substring(2, 2)
                                                    </th>
                                                    <th>
                                                        ACT @MesesUtil.JULIO.Abreviation-@rel_anio_centro.budget_anio_fiscal.anio_fin.ToString().Substring(2, 2)
                                                    </th>
                                                    <th>
                                                        ACT @MesesUtil.AGOSTO.Abreviation-@rel_anio_centro.budget_anio_fiscal.anio_fin.ToString().Substring(2, 2)
                                                    </th>
                                                    <th>
                                                        ACT @MesesUtil.SEPTIEMBRE.Abreviation-@rel_anio_centro.budget_anio_fiscal.anio_fin.ToString().Substring(2, 2)
                                                    </th>

                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach(var item in Model)
                                                {
                                                <tr>
                                                    <td>
                                                        345
                                                    </td>
                                                    <td>
                                                        5
                                                    </td>
                                                    <td>
                                                        56
                                                    </td>
                                                    <td>
                                                        745
                                                    </td>
                                                   
                                                </tr>

                                                }
                                            </tbody>
                                        </table>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts
{
    <!-- SweetAlert2 -->
    @Scripts.Render(Url.Content("~/Content/vendors/sweetalert2/sweetalert2.min.js"))
    @Scripts.Render(Url.Content("~/Scripts/AlertasSweetAlert.js"))

    @Scripts.Render("~/bundles/dataTables_js")

    <script>
        $(document).ready(function () {

            //inicializa los data table
            var tabla = $('#datatable_1').DataTable({
                "paging": false,
                "ordering": false,
                "searching": false,
                "scrollX": true,
                "scrollY": true,
                "info": false
            });

          

        });

        //agranda el tamaño de la barra
        window.onload = function () {
            clicMenu(1);
        }

    </script>

}

