@model Portal_2_0.Models.IT_notificaciones_recordatorio
@{
    ViewBag.Title = "Editar Generales de Evento Recurrente";
    ViewBag.PrimerNivel = "sistemas";
    ViewBag.SegundoNivel = "it_notificaciones";
    ViewBag.ControllerName = ViewContext.RouteData.Values["controller"];

    Clases.Util.MensajesSweetAlert mensajeAlerta = (Clases.Util.MensajesSweetAlert)ViewBag.MensajeAlert;

    int contador = 100;

}

@section estilos
{
    <!-- DataTables -->
    @Styles.Render("~/Content/dataTables_css")
    <!-- iCheck -->
    <link href="@Url.Content("~/Content/vendors/iCheck/skins/square/blue.css")" rel="stylesheet">
    <!-- Select2 -->
    <link href="@Url.Content("~/Content/vendors/select2/css/select2.css")" rel="stylesheet">
    <link href="@Url.Content("~/Content/vendors/select2-bootstrap4-theme/select2-bootstrap4.min.css")" rel="stylesheet">

    <style>
        .frame {
            border: 2px solid #97c2d9;
            padding: 8px 30px;
            background: #fefefe;
            width: 300px;
            border-radius: 25px;
        }
    </style>
}

@*Para SweetAlert*@
@if (mensajeAlerta != null)
{
    <input type="hidden" value="@mensajeAlerta.Mensaje" id="mensajeAlert" />
    <input type="hidden" value="@mensajeAlerta.getTipoMensaje()" id="mensajeAlertTipo" />
}

<div class="right_col" role="main">
    <div class="">


        <div class="clearfix"></div>

        <div class="row">
            <div class="col-md-12 col-sm-12 ">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>@ViewBag.Title</h2>
                        <ul class="nav navbar-right panel_toolbox">
                            @*Utilizado para mover a la derecha los iconos del card*@
                            <span style="visibility:hidden">_______</span>
                            <li>
                                <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                            </li>
                        </ul>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        @using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "form-horizontal form-label-left" }))
                        {
                            @Html.AntiForgeryToken()
                            if (!Html.ViewData.ModelState.IsValid)
                            {
                                <div class="alert alert-danger" role="alert">
                                    @Html.ValidationSummary("", new { @class = "text-white" })
                                </div>
                            }

                            @Html.HiddenFor(model => model.id)
                            @Html.HiddenFor(model => model.id_sistemas)<input type="hidden" name="tipo_save" id="tipo_save" /><div class="form-group row">
                                <span style="color:black"><b>DATOS GENERALES</b></span>
                            </div>
                            <div class="item form-group">
                                <div class="col-md-5 col-sm-5">
                                    @Html.LabelFor(model => model.IT_notificaciones_actividad.titulo)
                                    @Html.EditorFor(m => m.IT_notificaciones_actividad.titulo, new { htmlAttributes = new { @class = "form-control", @autocomplete = "off", @required = "required" } })
                                    @Html.ValidationMessageFor(model => model.IT_notificaciones_actividad.titulo, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="item form-group">
                                <div class="col-md-12 col-sm-12">
                                    @Html.LabelFor(model => model.IT_notificaciones_actividad.descripcion)
                                    @Html.TextAreaFor(model => model.IT_notificaciones_actividad.descripcion, new { @class = "form-control", @rows = "3", @autocomplete = "off", @required = "required" })
                                    @Html.ValidationMessageFor(model => model.IT_notificaciones_actividad.descripcion, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="ln_solid"></div>
                            <div class="form-group row">
                                <span style="color:black"><b>RECORDATORIOS</b></span>
                            </div>
                            <div class="item form-group">
                                <label class="col-form-label col-md-1 col-sm-1"> Fecha Inicio</label>
                                <div class="col-md-2 col-sm-2">
                                    <input type="hidden" name="IT_notificaciones_actividad.fecha_inicio" value="@(Model.IT_notificaciones_actividad.IT_notificaciones_recordatorio.OrderBy(x=>x.fecha_programada).FirstOrDefault().fecha_programada)" />
                                    <input type="text" class="form-control" value="@Model.IT_notificaciones_actividad.IT_notificaciones_recordatorio.OrderBy(x=>x.fecha_programada).FirstOrDefault().fecha_programada.ToString("dd/MM/yyyy")" readonly />
                                    @Html.ValidationMessageFor(model => model.fecha_programada, "", new { @class = "text-danger" })
                                </div>
                                @Html.LabelFor(model => model.IT_notificaciones_actividad.es_recurrente, new { @class = "col-form-label col-md-1 col-sm-1 label-align hint--top", @data_hint = "Esta opción no puede editarse." })
                                <div class="col-md-1 col-sm-1 hint--top" style="display: flex; align-items: center;" data-hint="Esta opción no puede editarse.">
                                    @if (Model.IT_notificaciones_actividad.es_recurrente)
                                    {
                                        @Html.EditorFor(m => m.IT_notificaciones_actividad.es_recurrente, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled", } })
                                    }
                                    else
                                    {
                                        <input type="text" class="form-control" value="NO" readonly />
                                    }
                                </div>
                                <div id="div_recurrente" class="col-md-6 col-sm-6" style="@(!Model.IT_notificaciones_actividad.es_recurrente? "display:none":String.Empty)">
                                    <label for="periodo" class="col-form-label col-md-2 col-sm-2">Repetir cada:</label>
                                    <div class="col-md-2 col-sm-2">
                                        @Html.EditorFor(m => m.IT_notificaciones_actividad.periodo, new { htmlAttributes = new { @class = "form-control entero", @type = "text", @readonly = "readonly" } })
                                        @Html.ValidationMessageFor(model => model.IT_notificaciones_actividad.periodo, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="col-md-3 col-sm-3">
                                        @Html.EditorFor(m => m.IT_notificaciones_actividad.tipo_periodo, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                    </div>
                                    @Html.LabelFor(model => model.IT_notificaciones_actividad.fecha_fin, new { @class = "col-form-label col-md-1 col-sm-1" })
                                    <div class="col-md-3 col-sm-3">
                                        @Html.EditorFor(m => m.IT_notificaciones_actividad.fecha_fin, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.IT_notificaciones_actividad.fecha_fin, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                            <br />
                            <div class="item form-group">
                                @Html.LabelFor(model => model.aplica_recordatorio, new { @class = "col-form-label col-md-1 col-sm-1 label-align" })
                                <div class="col-md-1 col-sm-1" style="display: flex; align-items: center;">
                                    @Html.EditorFor(m => m.aplica_recordatorio, new { htmlAttributes = new { @class = "form-control" } })
                                </div>
                                <div id="div_previo" class="col-md-2 col-sm-2" style="@(!Model.aplica_recordatorio? "display:none":String.Empty)">
                                    @Html.LabelFor(model => model.dias_previos_notificacion, new { @class = "col-form-label col-md-6 col-sm-6" })
                                    <div class="col-md-6 col-sm-6">
                                        @Html.EditorFor(m => m.dias_previos_notificacion, new { htmlAttributes = new { @class = "form-control entero", @type = "text", @autocomplete = "off" } })
                                        @Html.ValidationMessageFor(model => model.dias_previos_notificacion, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>

                            <div class="alert alert-info" role="alert">
                                <i class="fa-solid fa-circle-info"></i> <texto id="texto">Se mandará recordatorio por email el día del Evento.</texto>
                            </div>

                            <div class="ln_solid"></div>
                            <div class="form-group row">
                                <span style="color:black"><b>ACTIVIDADES</b></span>
                            </div>
                            <div class="form-group row">

                            </div>
                            <div id="div_task">
                                @foreach (Portal_2_0.Models.IT_notificaciones_checklist item in Model.IT_notificaciones_actividad.IT_notificaciones_checklist_temp)
                                {
                                    <div class="form-group row" id="div_task_@contador">
                                        <div class="col-md-1">
                                            <input style="text-align:center; background-color:antiquewhite" type="text" class="form-control col-md-12 input-contador-task" value="" readonly="readonly">
                                        </div>
                                        <input type="hidden" name="IT_notificaciones_actividad.IT_notificaciones_checklist_temp.Index" id="IT_notificaciones_actividad.IT_notificaciones_checklist_temp.Index" value="@contador" />
                                        <label class="control-label col-md-1" for="IT_notificaciones_actividad.IT_notificaciones_checklist_temp[@contador].descripcion">
                                            <span class="float-right">Actividad</span>
                                        </label>
                                        <div class="col-md-7">
                                            <input type="text" name="IT_notificaciones_actividad.IT_notificaciones_checklist_temp[@contador].descripcion" id="IT_notificaciones_actividad.IT_notificaciones_checklist_temp[@contador].descripcion" maxlength="80" class="form-control col-md-12" value="@item.descripcion" autocomplete="off" required>
                                            <span class="field-validation-valid text-danger" data-valmsg-for="IT_notificaciones_actividad.IT_notificaciones_checklist_temp[@contador].descripcion" data-valmsg-replace="true"></span>
                                        </div>
                                        <div class="col-md-1">
                                            <input type="button" value="Borrar" class="btn btn-danger" onclick="borrarTask(@contador); return false;">
                                        </div>
                                    </div>

                                    contador++;
                                }
                            </div>
                            <div class="form-group row">
                                <div class="col-md-1 offset-md-10">
                                    <input type="button" value="Agregar" class="btn btn-round btn-warning" onclick="AgregarConcepto(); return false;">
                                </div>
                            </div>

                            <div class="ln_solid"></div>
                            <div class="form-group row">
                                <span style="color:black"><b>NOTIFICAR A:</b></span>
                            </div>
                            <div class="item form-group">
                                <div class="col-md-4 col-sm-4 frame">
                                    <fieldset>
                                        <legend style="color: #009ff5; font-weight: bold;">Usuarios</legend>
                                        @foreach (var item in Model.IT_notificaciones_actividad.EmpleadosList)
                                        {
                                            <div class="checkbox">
                                                <label>
                                                    <input type="checkbox" class="flat" name="selectedEmpleados" value="@item.Value" checked="@item.Selected"> @item.Text
                                                </label>
                                            </div>
                                        }
                                    </fieldset>
                                </div>
                                <div class="col-md-4 col-sm-4 offset-md-1 frame">
                                    <fieldset>
                                        <legend style="color: #009ff5; font-weight: bold;">Correos</legend>
                                        @foreach (var item in Model.IT_notificaciones_actividad.CorreosList)
                                        {
                                            <div class="checkbox">
                                                <label>
                                                    <input type="checkbox" class="flat" name="selectedEmails" value="@item.Value" checked="@item.Selected"> @item.Text
                                                </label>
                                            </div>
                                        }
                                    </fieldset>
                                </div>
                            </div>
                            <div class="ln_solid"></div>
                            <div class="form-group row">
                                <span style="color:black"><b>NOTIFICACIONES RECURRENTES:</b></span>
                            </div>
                            <div class="alert alert-warning" role="alert" style="color:black">
                                <i class="fa-solid fa-warning" style="color:#5f5f5f"></i> Los cambios se aplicarán a las siguientes notificaciones recurrentes.
                            </div>
                            <div class="form-group row">

                                <table id="datatable_2" class="table table-striped table-bordered nowrap" cellspacing="0" width="100%">
                                    <thead>
                                        <tr>
                                            <th width="2%">#</th>
                                            <th width="20%">Fecha</th>
                                            <th width="20%">Estatus</th>
                                            <th>
                                                Sistemas
                                            </th>
                                            <th>
                                                Comentario Cierre
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model.IT_notificaciones_actividad.IT_notificaciones_recordatorio.OrderBy(x => x.fecha_programada))
                                        {
                                            <tr>
                                                <td>@(Model.IT_notificaciones_actividad.IT_notificaciones_recordatorio.OrderBy(x => x.fecha_programada).ToList().IndexOf(item)+1)</td>
                                                <td>@item.fecha_programada.ToString("yyyy/MM/dd")</td>
                                                <td>@Bitacoras.Util.IT_notificaciones_recordatorio_estatus.DescripcionStatus(item.estatus)</td>
                                                <td>
                                                    @(item.empleados!=null? item.empleados.ConcatNombre:"Pendiente")
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(model => item.comentario_cierre)
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>

                            <div class="ln_solid"></div>
                            <div class="item form-group">
                                <div class="col-md-2 col-sm-2">
                                    <button type="button" id="btn-cancel" data-type="cancel" class="btn btn-lg btn-danger" style="width:100%"><i class="fa-regular fa-calendar-xmark"></i> Cancelar Eventos</button>
                                </div>
                                <div class="col-md-2 col-sm-2 offset-md-8">
                                    <button type="button" id="btn-save" data-type="save" class="btn btn-lg btn-success btn-load" style="width:100%"><i class="fa-regular fa-floppy-disk"></i> Guardar</button>
                                </div>
                            </div>
                        }
                    </div>
                </div>
                <div>
                    <br />
                    <a href="@Url.Action("Index", ViewBag.ControllerName)" class="btn btn-round btn-info btm-sm" title="Volver">
                        <i class="fa fa-arrow-circle-left"></i> Volver al calendario
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render(Url.Content("~/Content/vendors/jquery-iu/jquery-ui.min.js"))
    <!-- iCheck -->
    @Scripts.Render(Url.Content("~/Content/vendors/iCheck/icheck.min.js"))
    <!-- SweetAlert2 -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert2/11.7.3/sweetalert2.all.min.js" integrity="sha512-/iBgV43zPirSC0tue+PT/1VHGs7En24twBmT+sVMgn9PTaOpKfbgIyL5YsGKlbAIxcwz9S8W/YEnYjpIYj2Axw==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    @Scripts.Render(Url.Content("~/Scripts/AlertasSweetAlertColored.js"))
    <!--select2-->
    @Scripts.Render(Url.Content("~/Content/vendors/select2/js/select2.full.min.js"))
    @Scripts.Render("~/bundles/dataTables_js")
    <!-- input mask -->
    @Scripts.Render(Url.Content("~/Content/vendors/jquery.inputmask/dist/jquery.inputmask.bundle.js"))
    @Scripts.Render(Url.Content("~/Content/vendors/jquery.inputmask/dist/inputmask/inputmask.extensions.js"))


    <script>
        //variables globales
        var num = 0;
        const swalWithBootstrapButtons = Swal.mixin({
            customClass: {
                confirmButton: 'btn btn-success',
                cancelButton: 'btn btn-danger'
            },
            buttonsStyling: false,
        })

        document.addEventListener('DOMContentLoaded', function () {
            $('input').iCheck({
                checkboxClass: 'icheckbox_square-blue',
                radioClass: 'iradio_square-blue',
                increaseArea: '20%' // optional
            });

            //inicializa los data table
            var tabla = $('#datatable_1').DataTable({
                "paging": false,
                "ordering": false,
                "searching": false,
                "scrollX": true,
                "info": false
            });
            //inicializa los data table
            var tabla = $('#datatable_2').DataTable({
                "paging": true,
                "ordering": false,
                "searching": false,
                "scrollX": true,
                "info": false
            });

            $('#aplica_recordatorio').on('ifToggled', function (event) {
                verificaChecksPrevio(event.target.checked);
            });

            //asigna mask
            $('.entero').inputmask({ 'alias': 'integer', 'placeholder': '0', 'allowMinus': false, 'min': 0, 'max': 32767, 'autoGroup': true, 'autoUnmask': true, 'removeMaskOnSubmit': true });

            //inicializa select2
            $('.select2bs4').select2({
                theme: 'bootstrap4'
            })

            //verificaChecks
            verificaChecksPrevio($('#aplica_recordatorio').is(':checked'));

            //evento para cambio de alert
            $('#dias_previos_notificacion').on('blur input focus on', function (e) {
                verificaChecksPrevio($('#aplica_recordatorio').is(':checked'));
            });

            AsignaNumeroTask();

            clicMenu(1);

        });


        //oculta/muestra div de recurrente
        function verificaChecksPrevio(checked) {

            if (checked) {
                $('#div_previo').show('highlight', 1000);
                $("#dias_previos_notificacion").prop("required", true);
                let texto = $("#dias_previos_notificacion").val();
                if (texto == '')
                    texto = '--';
                $("#texto").html("Se mandará recordatorio por email el día del Evento y <b>" + texto + "</b> días antes del evento.");
            } else {
                $('#div_previo').hide('fade', 500);
                $("#dias_previos_notificacion").prop("required", false);
                $("#texto").html("Se mandará recordatorio por email el día del Evento.");
            }
        }

        //agreaga una fila para lotes
        function AgregarConcepto() {

            let cadena = `
                                                <div class="form-group row" id="div_task_`+ num + `">
                                                    <div class="col-md-1">
                                                        <input style="text-align:center; background-color:antiquewhite" type="text" class="form-control col-md-12 input-contador-task" value="" readonly="readonly">
                                                    </div>
                                                    <input type="hidden" name="IT_notificaciones_actividad.IT_notificaciones_checklist_temp.Index" id="IT_notificaciones_actividad.IT_notificaciones_checklist_temp.Index" value="`+ num + `" />
                                                    <label class="control-label col-md-1" for="IT_notificaciones_actividad.IT_notificaciones_checklist_temp[`+ num + `].descripcion">
                                                        <span class="float-right">Actividad</span>
                                                    </label>
                                                    <div class="col-md-7">
                                                        <input type="text" name="IT_notificaciones_actividad.IT_notificaciones_checklist_temp[`+ num + `].descripcion" id="IT_notificaciones_actividad.IT_notificaciones_checklist_temp[` + num + `].descripcion" maxlength="80" class="form-control col-md-12" value="" autocomplete="off" required>
                                                        <span class="field-validation-valid text-danger" data-valmsg-for="IT_notificaciones_actividad.IT_notificaciones_checklist_temp[` + num + `].descripcion" data-valmsg-replace="true"></span>
                                                    </div>
                                                    <div class="col-md-1">
                                                        <input type="button" value="Borrar" class="btn btn-danger" onclick="borrarTask(` + num + `); return false;">
                                                    </div>
                                                </div>
                                                                                                                                            `;

            $("#div_task").append(cadena);

            $("#div_task_" + num).hide().fadeIn(500);

            AsignaNumeroTask();

            num++;
        }
        //numera las tareas
        function AsignaNumeroTask() {
            let indice = 1;

            $('.input-contador-task').each(function (index) {
                $(this).val(indice);
                indice++;
            });
        }

        //borra una tarea
        function borrarTask(id) {

            $("#div_task_" + id).fadeOut(0, function () {
                $(this).remove();
            });
            AsignaNumeroTask();
        }

          //maneja el envió el del formulario
        $('.btn-load').click(function (e) {

            let texto;
            if ($(this).attr('id') == 'btn-save') {
                $('#@Html.IdFor(model => model.comentario_cierre)').prop('required', false);
                $('#tipo_save').val('save');
                texto = "Se guardarán los cambios. Se podrá continuar editando";
            } else {
                $('#@Html.IdFor(model => model.comentario_cierre)').prop('required', true);
                $('#tipo_save').val('finish');
                texto = "Se finalizará el evento y no podrá editarse más.";
            }

            let $form = $(this).closest('form');


            swalWithBootstrapButtons.fire({
                title: '¿Desea continuar?',
                html: texto,
                showCancelButton: true,
                confirmButtonText: 'Aceptar',
                cancelButtonText: 'Cancelar'
            }).then((result) => {
                if (result.value) {
                    //espera a que se cierre el modal para enviar el formulario
                    setTimeout(function () {
                        $form.submit();
                    }, 900);
                }
            });

        });

          //maneja el envió el del formulario
        $('#btn-cancel').click(function (e) {

            swalWithBootstrapButtons.fire({
                title: '¿Desea continuar?',
                html: 'Se cancelarán todos los eventos recurrentes posteriores al día de hoy.',
                showCancelButton: true,
                icon: 'warning',
                confirmButtonText: 'Aceptar',
                cancelButtonText: 'Cancelar'
            }).then((result) => {
                if (result.value) {
                    window.location.href = '/@ViewBag.ControllerName/CancelarRecurrente/@Model.id';
                }
            });

        });

    </script>


}
