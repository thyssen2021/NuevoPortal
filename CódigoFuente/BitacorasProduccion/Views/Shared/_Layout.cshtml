@using Clases.Util;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <!-- Meta, title, CSS, favicons, etc. -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title> Portal thyssenkrupp | @ViewBag.Title </title>

    <!-- Bootstrap -->
    <link href="@Url.Content("~/Content/vendors/bootstrap/dist/css/bootstrap.min.css")" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="@Url.Content("~/Content/vendors/font-awesome/css/font-awesome.min.css")" rel="stylesheet">
    <!-- NProgress -->
    <link href="@Url.Content("~/Content/vendors/nprogress/nprogress.css")" rel="stylesheet">
    <!-- jQuery custom content scroller -->
    <link href="@Url.Content("~/Content/vendors/malihu-custom-scrollbar-plugin/jquery.mCustomScrollbar.min.css")" rel="stylesheet">

    <!-- Custom Theme Style -->
    <link href="@Url.Content("~/Content/build/css/custom.css")" rel="stylesheet">

    <style>
        table.dataTable thead {
            background-color: #0094ff;
            color: azure;
        }
        .page-item.active .page-link {
            background-color: #0094ff !important;
            color: azure !important;
        }

        .page-link {
            color:black !important;
        }
       
    </style>

    @RenderSection("estilos", required: false)

</head>

<body class="nav-md" id="body">
    <div class="container body">
        <div class="main_container">
            <div class="col-md-3 left_col">
                <div class="left_col scroll-view">
                    <div class="navbar nav_title" style="border: 0;">
                        <a href="@Url.Action("Index", "Home")" class="site_title"> <img src="~/Content/images/logo_4_200px.png" alt="" width="200"> </a>
                    </div>

                    <div class="clearfix"></div>

                    <br />

                    <!-- sidebar menu -->
                    <div id="sidebar-menu" class="main_menu_side hidden-print main_menu">
                        <div class="menu_section">
                            @if (Request.IsAuthenticated)
                            {
                                <h3>General</h3>
                                <ul class="nav side-menu">
                                    @*PRIMER NIVEL*@
                                    <li class="@(ViewBag.PrimerNivel == "home" ? "active" : null )">
                                        <a><i class="fa fa-home"></i> Home <span class="fa fa-chevron-down"></span></a>
                                        <ul class="nav child_menu" style="@(ViewBag.PrimerNivel == "home" ? "display:block" : null )">
                                            <li class="@(ViewBag.SegundoNivel == "home" ? "current-page" : null )"><a href="@Url.Action("Index", "Home")">Inicio</a></li>
                                        </ul>
                                    </li>
                                    @if (User.IsInRole(TipoRoles.RH))
                                    {
                                        <li class="@(ViewBag.PrimerNivel == "recursos_humanos" ? "active" : null )">
                                            <a><i class="fa fa-child"></i>Recursos Humanos<span class="fa fa-chevron-down"></span></a>
                                            <ul class="nav child_menu" style="@(ViewBag.PrimerNivel == "recursos_humanos" ? "display:block" : null )">
                                                <li class="@(ViewBag.SegundoNivel == "areas" ? "current-page" : null )"><a href="@Url.Action( "Index", "Areas")">Areas</a></li>
                                                <li class="@(ViewBag.SegundoNivel == "puestos" ? "current-page" : null )"><a href="@Url.Action( "Index", "Puestos")">Puestos</a></li>
                                                <li class="@(ViewBag.SegundoNivel == "empleados" ? "current-page" : null )"><a href="@Url.Action( "Index", "Empleados")">Empleados</a></li>
                                            </ul>
                                        </li>
                                    }
                                    @if (User.IsInRole(TipoRoles.ADMIN))
                                    {
                                        <li class="@(ViewBag.PrimerNivel == "catalogos_admin" ? "active" : null )">
                                            <a><i class="fa fa-database"></i>Cat&aacute;logos Admin <span class="fa fa-chevron-down"></span></a>
                                            <ul class="nav child_menu" style="@(ViewBag.PrimerNivel == "catalogos_admin" ? "display:block" : null )">
                                                <li class="@(ViewBag.SegundoNivel == "plantas" ? "current-page" : null )"><a href="@Url.Action( "Index", "Plantas")">Plantas</a></li>
                                            </ul>
                                        </li>
                                    }

                                    @if (User.IsInRole(TipoRoles.REPORTES_PESADAS))
                                    {
                                        <li class="@(ViewBag.PrimerNivel == "reporte_pesos" ? "active" : null )">
                                            <a><i class="fa fa-file-excel-o"></i>Reporte Pesadas <span class="fa fa-chevron-down"></span></a>
                                            <ul class="nav child_menu" style="@(ViewBag.PrimerNivel == "reporte_pesos" ? "display:block" : null )">
                                                <li class="@(ViewBag.SegundoNivel == "reporte_pesos_silao" ? "current-page" : null )"><a href="@Url.Action( "Silao", "ReportePesadas")">Silao</a></li>
                                                <li class="@(ViewBag.SegundoNivel == "reporte_pesos_puebla" ? "current-page" : null )"><a href="@Url.Action( "Puebla", "ReportePesadas")">Puebla</a></li>
                                            </ul>
                                        </li>
                                    }

                                    @if (User.IsInRole(TipoRoles.BITACORAS_PRODUCCION_CATALOGOS) || User.IsInRole(TipoRoles.BITACORAS_PRODUCCION_REGISTRO) || User.IsInRole(TipoRoles.BITACORAS_PRODUCCION_REPORTE))
                                    {
                                        <li class="@(ViewBag.PrimerNivel == "bitacoras_produccion" ? "active" : null )">
                                            <a><i class="fa fa-tasks"></i> Producci&oacute;n<span class="fa fa-chevron-down"></span></a>
                                            <ul class="nav child_menu">

                                                @if (User.IsInRole(TipoRoles.BITACORAS_PRODUCCION_REGISTRO))
                                                {
                                                    <li class="@(ViewBag.SegundoNivel == "produccion_registros" ? "current-page" : null )"><a href="@Url.Action("Index", "ProduccionRegistros")">Bit&aacute;cora</a></li>
                                                    <li class="@(ViewBag.SegundoNivel == "produccion_respaldo" ? "current-page" : null )"><a href="@Url.Action("CargarRespaldo", "ProduccionRegistros")">CargarRespaldo</a></li>

                                                }
                                                @if (User.IsInRole(TipoRoles.BITACORAS_PRODUCCION_REPORTE))
                                                {
                                                    <li class="@(ViewBag.SegundoNivel == "produccion_reporte" ? "current-page" : null )"><a href="@Url.Action("Index", "ProduccionResultado")">Reporte de Producci&oacute;n</a></li>
                                                }
                                                @if (User.IsInRole(TipoRoles.BITACORAS_PRODUCCION_CATALOGOS))
                                                {
                                                    <li class="@(ViewBag.SegundoNivel == "bitacoras_produccion_catalogos" ? "active" : null )">
                                                        <a>C&aacute;talogos <span class="fa fa-chevron-down"></span></a>
                                                        <ul class="nav child_menu" style="@(ViewBag.SegundoNivel == "bitacoras_produccion_catalogos" ? "display:block" : null )">
                                                            <li class="@(ViewBag.TercelNivel == "produccion_turnos" ? "current-page" : null )"><a href="@Url.Action( "Index", "ProduccionTurnos")">Turnos</a></li>
                                                            <li class="@(ViewBag.TercelNivel == "produccion_lineas" ? "current-page" : null )"><a href="@Url.Action( "Index", "ProduccionLineas")">L&iacute;neas Producci&oacute;n</a></li>
                                                            <li class="@(ViewBag.TercelNivel == "produccion_supervisores" ? "current-page" : null )"><a href="@Url.Action( "Index", "ProduccionSupervisores")">Supervisores</a></li>
                                                            <li class="@(ViewBag.TercelNivel == "produccion_operadores" ? "current-page" : null )"><a href="@Url.Action( "Index", "ProduccionOperadores")">Operadores</a></li>
                                                            @if (User.IsInRole(TipoRoles.ADMIN))
                                                            {
                                                                <li class="@(ViewBag.TercelNivel == "produccion_bom" ? "current-page" : null )"><a href="@Url.Action( "Index", "Bom")">BOM</a></li>
                                                                <li class="@(ViewBag.TercelNivel == "produccion_class_v3" ? "current-page" : null )"><a href="@Url.Action( "Index", "class_v3")">Class V3</a></li>
                                                                <li class="@(ViewBag.TercelNivel == "produccion_mm_v3" ? "current-page" : null )"><a href="@Url.Action( "Index", "mm_v3")">MM V3</a></li>
                                                            }
                                                        </ul>
                                                    </li>
                                                }
                                            </ul>

                                        </li>

                                    }

                                    @if (User.IsInRole(TipoRoles.PFA_REGISTRO) || User.IsInRole(TipoRoles.PFA_AUTORIZACION) || User.IsInRole(TipoRoles.PFA_VISUALIZACION))
                                    {
                                        <li class="@(ViewBag.PrimerNivel == "PFA" ? "active" : null )">
                                            <a><i class="fa fa-clipboard"></i> Formato PFA<span class="fa fa-chevron-down"></span></a>
                                            <ul class="nav child_menu">

                                                @if (User.IsInRole(TipoRoles.PFA_REGISTRO))
                                                {
                                                    <h3>Registro</h3>
                                                    <li class="@(ViewBag.SegundoNivel == "PFA_registro" ? "current-page" : null )"><a href="@Url.Action("Index", "PremiumFreightApproval")">Solicitudes Creadas</a></li>
                                                    <li class="@(ViewBag.SegundoNivel == "PFA_registro" ? "current-page" : null )"><a href="@Url.Action("PendientesCapturista", "PremiumFreightApproval")">Solicitudes Pendientes</a></li>
                                                    <li class="@(ViewBag.SegundoNivel == "PFA_registro" ? "current-page" : null )"><a href="@Url.Action("RechazadasCapturista", "PremiumFreightApproval")">Solicitudes Rechazadas</a></li>
                                                    <li class="@(ViewBag.SegundoNivel == "PFA_registro" ? "current-page" : null )"><a href="@Url.Action("AutorizadasCapturista", "PremiumFreightApproval")">Solicitudes Autorizadas</a></li>
                                                }

                                                @if (User.IsInRole(TipoRoles.PFA_AUTORIZACION))
                                                {
                                                    <h3>Autorizaci&oacute;n</h3>
                                                    <li class="@(ViewBag.SegundoNivel == "PFA_autorizar" ? "current-page" : null )"><a href="@Url.Action("AutorizadorPendientes", "PremiumFreightApproval")">PF por Autorizar</a></li>
                                                    <li class="@(ViewBag.SegundoNivel == "PFA_autorizar" ? "current-page" : null )"><a href="@Url.Action("AutorizadorRechazadas", "PremiumFreightApproval")">PF Rechazadas</a></li>
                                                    <li class="@(ViewBag.SegundoNivel == "PFA_autorizar" ? "current-page" : null )"><a href="@Url.Action("AutorizadorAutorizadas", "PremiumFreightApproval")">PF Autorizadas</a></li>
                                                    <li class="@(ViewBag.SegundoNivel == "PFA_autorizar" ? "current-page" : null )"><a href="@Url.Action("AutorizadorFinalizadas", "PremiumFreightApproval")">PF Finalizadas</a></li>
                                                }
                                                @if (User.IsInRole(TipoRoles.PFA_AUTORIZACION))
                                                {

                                                    <li class="@(ViewBag.SegundoNivel == "PFA_autorizar" ? "active" : null )">
                                                        <a>C&aacute;talogos <span class="fa fa-chevron-down"></span></a>
                                                        <ul class="nav child_menu" style="@(ViewBag.SegundoNivel == "bitacoras_produccion_catalogos" ? "display:block" : null )">
                                                            <li class="@(ViewBag.TercelNivel == "PFA_department" ? "current-page" : null )"><a href="@Url.Action( "Index", "PFA_Departments")">Departments</a></li>
                                                            <li class="@(ViewBag.TercelNivel == "PFA_volume" ? "current-page" : null )"><a href="@Url.Action( "Index", "PFA_Volume")">Volume</a></li>
                                                            <li class="@(ViewBag.TercelNivel == "PFA_Reason" ? "current-page" : null )"><a href="@Url.Action( "Index", "PFA_Reason")">Reasons PFA</a></li>
                                                        </ul>
                                                    </li>
                                                }
                                                @if (User.IsInRole(TipoRoles.PFA_VISUALIZACION))
                                                {
                                                    <h3>Finalizados</h3>
                                                    <li class="@(ViewBag.SegundoNivel == "PFA_visualizar" ? "current-page" : null )"><a href="@Url.Action("Index", "PFA_Visualizar")">Visualizar</a></li>
                                                }
                                            </ul>

                                        </li>

                                    }

                                    @if (User.IsInRole(TipoRoles.USERS))
                                    {
                                        <li class="@(ViewBag.PrimerNivel == "usuarios" ? "active" : null )">
                                            <a><i class="fa fa-cog"></i>Usuarios <span class="fa fa-chevron-down"></span></a>
                                            <ul class="nav child_menu" style="@(ViewBag.PrimerNivel == "usuarios" ? "display:block" : null )">
                                                <li class="@(ViewBag.SegundoNivel == "roles" ? "current-page" : null )"><a href="@Url.Action( "Index", "RolesAdmin")">Roles</a></li>
                                                <li class="@(ViewBag.SegundoNivel == "usuarios" ? "current-page" : null )"><a href="@Url.Action("Index", "UsersAdmin")">Usuarios</a></li>
                                            </ul>
                                        </li>
                                    }
                                </ul>
                            }
                        </div>


                    </div>
                    <!-- /sidebar menu -->
                    <!-- /menu footer buttons -->
                    <div class="sidebar-footer hidden-small">
                        <a data-toggle="tooltip" data-placement="top" title="Mi usuario" href="@Url.Action( "Index", "Manage")">
                            <span class="glyphicon glyphicon-user" style="color:lightgray" aria-hidden="true"></span>
                        </a> <a data-toggle="tooltip" data-placement="top" title="Próximamente">
                            <span class="glyphicon glyphicon-info-sign" style="color:lightgray" aria-hidden="true"></span>
                        </a>
                        <a data-toggle="tooltip" data-placement="top" title="Próximamente">
                            <span class="glyphicon glyphicon-time" style="color:lightgray" aria-hidden="true"></span>
                        </a>
                        <a data-toggle="tooltip" data-placement="top" title="Próximamente">
                            <span class="glyphicon glyphicon-question-sign" style="color:lightgray" aria-hidden="true"></span>
                        </a>
                    </div>
                    <!-- /menu footer buttons -->
                </div>
            </div>

            <!-- top navigation -->

            @Html.Partial("_LoginPartial")

            <!-- /top navigation -->
            <!-- page content -->
            @RenderBody()
            <!-- /page content -->
            <!-- footer content -->
            <footer>
                <div class="pull-right">
                    &copy; @DateTime.Now.Year - thyssenkrupp
                </div>
                <div class="clearfix"></div>
            </footer>
            <!-- /footer content -->
        </div>
    </div>

    <!-- jQuery -->
    @Scripts.Render(Url.Content("~/Content/vendors/jquery/dist/jquery.min.js"))
    <!-- Bootstrap -->
    @Scripts.Render(Url.Content("~/Content/vendors/bootstrap/dist/js/bootstrap.bundle.min.js"))
    <!-- FastClick -->
    @Scripts.Render(Url.Content("~/Content/vendors/fastclick/lib/fastclick.js"))
    <!-- NProgress -->
    @Scripts.Render(Url.Content("~/Content/vendors/nprogress/nprogress.js"))
    <!-- jQuery custom content scroller -->
    @Scripts.Render(Url.Content("~/Content/vendors/malihu-custom-scrollbar-plugin/jquery.mCustomScrollbar.concat.min.js"))


    @RenderSection("scripts", required: false)

    <!-- Custom Theme Scripts -->
    @Scripts.Render(Url.Content("~/Content/build/js/custom.min.js"))

    @Scripts.Render(Url.Content("~/Content/vendors/jquery_block_ui/jquery.blockUI.js"))

    @Scripts.Render(Url.Content("~/Scripts/site.js"))
</body>
</html>
