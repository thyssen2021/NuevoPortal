@model System.Web.Mvc.HandleErrorInfo

@{
    ViewBag.Title = "Application Error";
    ViewBag.nav_style = "nav-sm";


    // --- INICIO DE LA MODIFICACIÓN: Crear un objeto "plano" en C# ---
    // Creamos un objeto anónimo (o DTO) con la información que necesitamos.
    // Esto lo hacemos aquí para que esté disponible para el JavaScript.
    var errorDetailsForJs = new
    {
        ClassName = Model.Exception.GetType().FullName,
        Message = Model.Exception.Message,
        StackTraceString = Model.Exception.StackTrace,
        InnerException = Model.Exception.InnerException == null ? null : new
        {
            ClassName = Model.Exception.InnerException.GetType().FullName,
            Message = Model.Exception.InnerException.Message,
            StackTraceString = Model.Exception.InnerException.StackTrace
            // Podríamos seguir anidando, pero 2 niveles suele ser suficiente.
        }
    };
    // --- FIN DE LA MODIFICACIÓN ---
}

@section estilos {
    <style>
        .error-container {
            padding: 20px;
        }

        .error-title {
            color: #d9534f;
            border-bottom: 2px solid #d9534f;
            padding-bottom: 10px;
            margin-bottom: 20px;
        }

        .user-message {
            font-size: 1.1em;
        }

        .lang-toggle {
            font-size: 0.8em;
            margin-top: 10px;
        }

        .developer-details {
            margin-top: 30px;
            border: 1px solid #ddd;
            border-radius: 4px;
        }

        .panel-heading {
            background-color: #f5f5f5;
            border-bottom: 1px solid #ddd;
            padding: 10px 15px;
        }

        .panel-title {
            margin-top: 0;
            margin-bottom: 0;
            font-size: 16px;
        }

        .panel-body {
            padding: 15px;
        }

        .error-details h4 {
            font-size: 16px;
            font-weight: bold;
            margin-top: 20px;
            color: #337ab7;
        }

        .error-details .stack-trace {
            background-color: #eee;
            border: 1px solid #ccc;
            padding: 10px;
            font-family: Consolas, monospace;
            font-size: 12px;
            white-space: pre-wrap;
            word-wrap: break-word;
            max-height: 300px;
            overflow-y: auto;
        }

        .inner-exception {
            border-left: 4px solid #eea236;
            padding-left: 15px;
            margin-left: 15px;
            margin-top: 15px;
        }

        .action-buttons {
            margin-top: 15px;
        }
    </style>
}

<div class="right_col" role="main">
    <div class="error-container">
        <h1 class="error-title"><i class="fa fa-exclamation-triangle"></i> Application Error</h1>

        <div class="alert alert-danger user-message">
            <div id="error-msg-en">
                <h4>An unexpected error occurred while processing your request.</h4>
                <p>Please save the technical details shown below (using the 'Take Screenshot') and send them to the system administrator.</p>
            </div>
            <div id="error-msg-es" >
                <h4>Ha ocurrido un error inesperado al procesar su solicitud.</h4>
                <p>Por favor, guarde los detalles técnicos que se muestran a continuación (usando el botón 'Tomar Captura') y envíelos al administrador del sistema.</p>
            </div>
           
        </div>

        @if (Model != null && HttpContext.Current.IsDebuggingEnabled)
        {
            <div class="panel panel-default developer-details" id="developer-details-panel">
                <div class="panel-heading">
                    <h3 class="panel-title">Developer Details</h3>
                </div>
                <div class="panel-body error-details">
                    <div class="action-buttons text-right">
                        <button id="btnScreenshot" class="btn btn-info"><i class="fa fa-camera"></i> Take Screenshot</button>
                    </div>

                    <h4><i class="fa fa-map-marker"></i> Error Location</h4>
                    <p>
                        <strong>Controller:</strong> <code>@Model.ControllerName</code><br>
                        <strong>Action:</strong> <code>@Model.ActionName</code>
                    </p>

                    <h4><i class="fa fa-fire"></i> Exception Details</h4>
                    <p>
                        <strong>Type:</strong> <code>@Model.Exception.GetType().FullName</code><br>
                        <strong>Message:</strong> @Model.Exception.Message
                    </p>

                    <h4><i class="fa fa-align-left"></i> Stack Trace</h4>
                    <pre class="stack-trace">@Model.Exception.StackTrace</pre>

                    @{ var ex = Model.Exception.InnerException; int i = 1; }

                    @while (ex != null)
                    {
                        <div class="inner-exception">
                            <h4><i class="fa fa-arrow-down"></i> Inner Exception @i</h4>
                            <p>
                                <strong>Type:</strong> <code>@ex.GetType().FullName</code><br>
                                <strong>Message:</strong> @ex.Message
                            </p>
                            <h4><i class="fa fa-align-left"></i> Inner Stack Trace @i</h4>
                            <pre class="stack-trace">@ex.StackTrace</pre>
                        </div>
                        ex = ex.InnerException;
                        i++;
                    }
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/html2canvas/1.4.1/html2canvas.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.5.1/jspdf.umd.min.js"></script>

    <script>
        $(document).ready(function() {

            // --- Lógica para idioma (sin cambios) ---
            const userLang = navigator.language || navigator.userLanguage;
            if (userLang.startsWith('es')) {
                $('#error-msg-en').hide();
                $('#error-msg-es').show();
                $('#lang-es-link').hide();
                $('#lang-en-link').show();
            }
            $('#lang-es-link').click(function(e) { e.preventDefault(); $('#error-msg-en').hide(); $('#error-msg-es').show(); $(this).hide(); $('#lang-en-link').show(); });
            $('#lang-en-link').click(function(e) { e.preventDefault(); $('#error-msg-es').hide(); $('#error-msg-en').show(); $(this).hide(); $('#lang-es-link').show(); });

            // --- Lógica para Captura de Pantalla (sin cambios) ---
            $("#btnScreenshot").on("click", function() {
                const detailsPanel = document.getElementById("developer-details-panel");
                html2canvas(detailsPanel, { scale: 2 }).then(canvas => {
                    const link = document.createElement('a');
                    link.download = 'error_screenshot_@(DateTime.Now.ToString("yyyyMMdd_HHmmss")).png';
                    link.href = canvas.toDataURL("image/png");
                    link.click();
                });
            });

          
        });
    </script>
}