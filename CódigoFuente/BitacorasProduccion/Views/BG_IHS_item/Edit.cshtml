    <script>
        $(document).ready(function () {
            //input mask
            $('.porcentaje').inputmask({ 'alias': 'decimal', 'groupSeparator': ',', 'autoGroup': true, 'digits': 2, 'digitsOptional': false, 'suffix': ' %', 'allowMinus': false, 'placeholder': '0', 'autoUnmask': true, 'removeMaskOnSubmit': true });
            $('.numero-positivo').inputmask({ 'alias': 'integer', 'groupSeparator': ',', 'autoGroup': true, 'allowMinus': false, 'autoUnmask': true, 'removeMaskOnSubmit': true });


            // Initialize Select2 Elements
            $('.select2bs4').select2({
                theme: 'bootstrap4'
            })

            $("#mnemonic_plant").change(function () {

                let plantaText = $("#mnemonic_plant option:selected").text();
                let plantaValue = $("#mnemonic_plant option:selected").val();
                let versionIHS = $("#id_ihs_version").val();

                if (plantaValue != '') {

                    $.ajax({
                        type: 'POST',
                        url: '/Combos/obtieneBgIHSPlant',
                        data: { mnemonic_plant: plantaValue, version: versionIHS },
                        success: function (data) {
                            try {
                                $("#production_plant").val(data[0].descripcion);
                            }
                            catch (error) {
                                Swal.fire({
                                    icon: 'error',
                                    title: 'Error',
                                    text: 'Ocurrió un error obteniendo la información: ' + error,
                                    confirmButtonText: 'Aceptar',
                                })
                            }
                        },
                        error: function (textStatus, errorThrown) {
                            //en caso de error en la llamada ajax
                            Swal.fire({
                                icon: 'error',
                                title: 'Ocurrió un error',
                                text: 'Intente nuevamente.'
                            })
                        },
                        async: true
                    });
                } else {
                    $('#production_plant').val('');
                }

            });

        });
