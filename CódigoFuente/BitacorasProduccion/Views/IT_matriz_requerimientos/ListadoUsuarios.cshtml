        function MuestraOpcion(id_empleado) {
            //variable para indicar si se trata de creación
            let creacion = false;

            $.ajax({
                type: 'POST',
                url: '/Combos/RH_MR_creacion_modificacion',
                data: { id_empleado: id_empleado },
                success: function (data) {
                    if (data[0].tipo == '@Bitacoras.Util.IT_MR_tipo.CREACION')
                        creacion = true;

                    Swal.fire({
                        title: 'Mensaje',
                        html: `<h4>¿Qué tipo de Solicitud desea crear?</h4>
                                <br/>
                                <p style="text-align:justify;"><span style="color:#3085d6">Nuevo Ingreso:</span> Seleccione está opción para nuevos colaboradores.</p>
                                <p style="text-align:justify;"><span style="color:#159B60">Modificación:</span> Seleccione está opción si el colaborador ya estaba registrado previamente en el sistema.</p>
                         `,
                        showDenyButton: creacion,
                        showCancelButton: true,
                         confirmButtonText: '<i class="fa-solid fa-pen-to-square"></i> Modificación',
                        confirmButtonColor: '#159B60',
                        denyButtonText: '<i class="fa-regular fa-square-plus"></i> Nuevo Ingreso',
                        cancelButtonText: 'Cancelar',
                         denyButtonColor: '#3085d6',
                         reverseButtons: true,                         
                        }).then((result) => {
                            if (result.isConfirmed) {
                                window.location.href = '/@ViewBag.ControllerName/IniciarMatriz/' + id_empleado + '?tipo=@Bitacoras.Util.IT_MR_tipo.MODIFICACION';
                            } else if (result.isDenied) {
                                window.location.href = '/@ViewBag.ControllerName/IniciarMatriz/' + id_empleado + '?tipo=@Bitacoras.Util.IT_MR_tipo.CREACION';
                            }
                        })

                },
                async: true
            });
        }


