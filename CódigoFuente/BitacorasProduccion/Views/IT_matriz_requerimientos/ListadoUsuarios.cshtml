@model IEnumerable<Portal_2_0.Models.empleados>

@{
    ViewBag.Title = "Listado de Empleados";
    ViewBag.PrimerNivel = "recursos_humanos";
    ViewBag.SegundoNivel = "ListadoUsuarios";
    ViewBag.ControllerName = ViewContext.RouteData.Values["controller"];

    ViewBag.nav_style = "nav-sm";

    Clases.Util.MensajesSweetAlert mensajeAlerta = (Clases.Util.MensajesSweetAlert)ViewBag.MensajeAlert;

    //obtiene los filtros
    Portal_2_0.Models.Paginacion paginacionFiltros = (Portal_2_0.Models.Paginacion)ViewBag.Paginacion;

    string nombre = string.Empty;
    if (paginacionFiltros.ValoresQueryString["nombre"] != null)
    {
        nombre = paginacionFiltros.ValoresQueryString["nombre"].ToString();
    }

    string num_empleado = string.Empty;
    if (paginacionFiltros.ValoresQueryString["num_empleado"] != null)
    {
        num_empleado = paginacionFiltros.ValoresQueryString["num_empleado"].ToString();
    }
}

@section estilos
{
    <!-- DataTables -->
    @Styles.Render("~/Content/dataTables_css")
    <!-- Select2 -->
    <link href="@Url.Content("~/Content/vendors/select2/css/select2.css")" rel="stylesheet">
    <link href="@Url.Content("~/Content/vendors/select2-bootstrap4-theme/select2-bootstrap4.min.css")" rel="stylesheet">
    <style>
    </style>
}

@*Para SweetAlert*@
@if (mensajeAlerta != null)
{
    <input type="hidden" value="@mensajeAlerta.Mensaje" id="mensajeAlert" />
    <input type="hidden" value="@mensajeAlerta.getTipoMensaje()" id="mensajeAlertTipo" />
}



<div class="right_col" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">

            </div>
        </div>

        <div class="clearfix"></div>

        <div class="row">
            <div class="col-md-12 col-sm-12 ">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>@ViewBag.Title</h2>
                        <ul class="nav navbar-right panel_toolbox">
                            @*Utilizado para mover a la derecha los iconos del card*@
                            <span style="visibility:hidden">_______</span>
                            <li>
                                <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                            </li>
                        </ul>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="card-box table-responsive">
                                    <div class="form-group">
                                        @using (Html.BeginForm(null, null, FormMethod.Get, new { id = "buscarForm", @class = "form-horizontal form-label-left" }))
                                        {

                                            <div class="form-group row ">
                                                <label class="control-label col-md-1 col-sm-1" for="nombre" style="text-align:right">Nombre:</label>
                                                <div class="col-md-3 col-sm-3 ">
                                                    <input type="text" id="nombre" name="nombre" class="form-control" value="@nombre" autocomplete="off" />
                                                </div>
                                                <label class="control-label col-md-1 col-sm-1" for="nombre_equipo" style="text-align:right">Planta:</label>
                                                <div class="col-md-2 col-sm-2 ">
                                                    @Html.DropDownList("planta_clave", null, htmlAttributes: new { @class = "form-control select2bs4", @style = "width:100%" })
                                                </div>
                                                <label class="control-label col-md-1 col-sm-1" for="num_empleado" style="text-align:right">N&uacute;m. Empleado:</label>
                                                <div class="col-md-2 col-sm-2 ">
                                                    <input type="text" id="num_empleado" name="num_empleado" class="form-control" value="@num_empleado" autocomplete="off" />
                                                </div>
                                                <div class="col-md-1 col-sm-1">
                                                    <a href="@Url.Action( ViewContext.RouteData.Values["action"].ToString(), ViewBag.ControllerName)" class="btn btn-warning">
                                                        <i class="fa fa-refresh"></i>
                                                    </a>
                                                </div>
                                                <div class="col-md-1 col-sm-1">
                                                    <input type="submit" value="Buscar" class="btn btn-info float-right" />
                                                </div>
                                            </div>

                                        }
                                        <hr />

                                    </div>
                                    <table id="datatable_1" class="table table-striped table-bordered nowrap" cellspacing="0" width="100%">
                                        <thead>
                                            <tr>
                                                <th>Acciones</th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.numeroEmpleado)
                                                </th>
                                                <th>
                                                    Planta
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.nombre)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.C8ID)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.correo)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.activo)
                                                </th>

                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model)
                                            {
                                                <tr style="@(item.activo == false ? "color:red" :"" )">
                                                    <td>
                                                        <a href="@Url.Action("Details", "empleados", new { id = item.id})" class="btn btn-info btn-sm" rel="tooltip" data-title="Detalles de empleado">
                                                            <i class="fa fa-info-circle"></i>
                                                        </a>

                                                        @if (item.IT_matriz_requerimientos.Count == 0 || item.IT_matriz_requerimientos.OrderByDescending(x => x.id).FirstOrDefault().estatus == Bitacoras.Util.IT_MR_Status.FINALIZADO)
                                                        {
                                                            <a href="#" class="btn btn-primary btn-sm" rel="tooltip" onclick="MuestraOpcion(@item.id);" data-title="Iniciar Matriz de Requerimientos">
                                                                <i class="fa fa-users"></i>
                                                            </a>
                                                        }
                                                        else
                                                        {
                                                            <a href="@Url.Action("Details", ViewBag.ControllerName, new { id = item.IT_matriz_requerimientos.OrderByDescending(x=>x.id).FirstOrDefault().id })" class="btn btn-warning btn-sm" rel="tooltip" data-title="Solicitud en Proceso">
                                                                <i class="fa fa-users"></i>
                                                            </a>
                                                        }

                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.numeroEmpleado)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.plantas.descripcion)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.ConcatNombre)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.C8ID)
                                                    </td>

                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.correo)
                                                    </td>

                                                    @*<th>
                                                            @Html.DisplayFor(modelItem => item.Area.descripcion)
                                                        </th>
                                                        <th>
                                                            @Html.DisplayFor(modelItem => item.puesto1.descripcion)
                                                        </th>*@
                                                    <td>
                                                        @if (item.activo.HasValue && item.activo.Value)
                                                        {
                                                            <span>Activo</span>
                                                        }
                                                        else
                                                        {
                                                            <span>Inactivo</span>
                                                        }
                                                    </td>

                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                                <br />
                                @if (Model.Count() > 0)
                                {
                                    <nav id="nav_paginacion" aria-label="...">
                                        @{Html.RenderPartial("_Paginacion", Model);}
                                    </nav>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
