@model IEnumerable<Portal_2_0.Models.IT_matriz_requerimientos>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";

    ViewBag.ControllerName = "IT_matriz_requerimientos";
    ViewBag.nav_style = "nav-sm";

    Clases.Util.MensajesSweetAlert mensajeAlerta = (Clases.Util.MensajesSweetAlert)ViewBag.MensajeAlert;

    //obtiene los filtros
    Portal_2_0.Models.Paginacion paginacionFiltros = (Portal_2_0.Models.Paginacion)ViewBag.Paginacion;

    string nombre = string.Empty;
    if (paginacionFiltros.ValoresQueryString["nombre"] != null)
    {
        nombre = paginacionFiltros.ValoresQueryString["nombre"].ToString();
    }


}

@section estilos
{
    <!-- DataTables -->
    @Styles.Render("~/Content/dataTables_css")

    <!-- SweetAlert2 -->
    <link href="@Url.Content("~/Content/vendors/sweetalert2-theme-bootstrap-4/bootstrap-4.min.css")" rel="stylesheet">

    <!-- Select2 -->
    <link href="@Url.Content("~/Content/vendors/select2/css/select2.css")" rel="stylesheet">
    <link href="@Url.Content("~/Content/vendors/select2-bootstrap4-theme/select2-bootstrap4.min.css")" rel="stylesheet">
}
@{Html.RenderPartial("_BlockUI", Model);}

@*Para SweetAlert*@
@if (mensajeAlerta != null)
{
    <input type="hidden" value="@mensajeAlerta.Mensaje" id="mensajeAlert" />
    <input type="hidden" value="@mensajeAlerta.getTipoMensaje()" id="mensajeAlertTipo" />
}


<div class="right_col" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">
            </div>
        </div>

        <div class="clearfix"></div>

        <div class="row">
            <div class="col-md-12 col-sm-12 ">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>@ViewBag.Title</h2>
                        <ul class="nav navbar-right panel_toolbox">
                            @*Utilizado para mover a la derecha los iconos del card*@
                            <span style="visibility:hidden">_______</span>
                            <li>
                                <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                            </li>
                        </ul>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="card-box">
                                    @if (ViewBag.estatus != null)
                                    {
                                        <div class="form-group">
                                            @using (Html.BeginForm(null, null, FormMethod.Get, new { id = "buscarForm", @class = "form-horizontal form-label-left" }))
                                            {
                                                <div class="form-group row ">
                                                    <label class="control-label col-md-1 col-sm-1" for="estatus" style="text-align:right">Planta:</label>
                                                    <div class="col-md-2 col-sm-2">
                                                        @Html.DropDownList("clave_planta", null, htmlAttributes: new { @class = "form-control select2bs4", @style = "width:100%" })
                                                    </div>
                                                    <label class="control-label col-md-1 col-sm-1" for="estatus" style="text-align:right">Estatus:</label>
                                                    <div class="col-md-2 col-sm-2">
                                                        @Html.DropDownList("estatus", null, htmlAttributes: new { @class = "form-control select2bs4", @style = "width:100%" })
                                                    </div>
                                                    <label class="control-label col-md-1 col-sm-1" for="nombre" style="text-align:right">Empleado:</label>
                                                    <div class="col-md-2 col-sm-2">
                                                        <input type="text" id="nombre" name="nombre" class="form-control" value="@nombre" autocomplete="off" />
                                                    </div>
                                                </div>
                                                <div class="form-group row ">
                                                    <label class="control-label col-md-1 col-sm-1" for="id_asignacion" style="text-align:right">Asignado a:</label>
                                                    <div class="col-md-3 col-sm-3">
                                                        @Html.DropDownList("id_asignacion", null, htmlAttributes: new { @class = "form-control select2bs4", @style = "width:100%" })
                                                    </div>
                                                     <label class="control-label col-md-1 col-sm-1" for="id_asignacion" style="text-align:right">Tipo solicitud:</label>
                                                    <div class="col-md-2 col-sm-2">
                                                        @Html.DropDownList("tipo", null, htmlAttributes: new { @class = "form-control select2bs4", @style = "width:100%" })
                                                    </div>
                                                    <div class="col-md-3 col-sm-3">
                                                    </div>
                                                    <div class="col-md-1 col-sm-1">
                                                        <a href="@Url.Action("solicitudes_sistemas", ViewBag.ControllerName)" class="btn btn-warning" title="Restablecer">
                                                            <i class="fa fa-refresh"></i>
                                                        </a>
                                                    </div>
                                                    <div class="col-md-1 col-sm-1">
                                                        <input type="submit" value="Filtrar" class="btn btn-info float-right" />
                                                    </div>
                                                </div>

                                            }
                                            <hr />

                                        </div>
                                    }
                                    @if (ViewBag.RH != null)
                                    {
                                        <div class="form-group">
                                            @using (Html.BeginForm(null, null, FormMethod.Get, new { id = "buscarForm", @class = "form-horizontal form-label-left" }))
                                            {
                                                <div class="form-group row ">
                                                    <label class="control-label col-md-1 col-sm-1" for="planta" style="text-align:right">Planta:</label>
                                                    <div class="col-md-2 col-sm-2">
                                                        @Html.DropDownList("planta", null, htmlAttributes: new { @class = "form-control select2bs4", @style = "width:100%" })
                                                    </div>
                                                    <label class="control-label col-md-1 col-sm-1" for="solicitante" style="text-align:right">Solicitante:</label>
                                                    <div class="col-md-2 col-sm-2">
                                                        @Html.DropDownList("solicitante", null, htmlAttributes: new { @class = "form-control select2bs4", @style = "width:100%" })
                                                    </div>
                                                    <div class="col-md-1 col-sm-1">
                                                        <a href="@Url.Action(@HttpContext.Current.Request.RequestContext.RouteData.Values["action"].ToString(), ViewBag.ControllerName)" class="btn btn-warning" title="Restablecer">
                                                            <i class="fa fa-refresh"></i>
                                                        </a>
                                                    </div>
                                                    <div class="col-md-1 col-sm-1">
                                                        <input type="submit" value="Filtrar" class="btn btn-info float-right" />
                                                    </div>
                                                </div>

                                            }
                                            <hr />

                                        </div>
                                    }

                                    <div class="form-group">
                                        @if (ViewBag.Create != null && ViewBag.Create)
                                        {
                                            <a href="@Url.Action("ListadoUsuarios", ViewBag.ControllerName)" class="btn btn-success" style="color:white" title="Crear nueva solicitud">
                                                <i class="fa fa-plus-square"></i> Crear Nueva Solicitud
                                            </a>
                                        }
                                    </div>

                                    <table id="datatable_1" class="table table-striped table-bordered nowrap" cellspacing="0" width="100%">
                                        <thead>
                                            <tr>
                                                <th>Acciones</th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.id)
                                                </th>
                                                <th>
                                                    N&uacute;m. Emp.
                                                </th>
                                                <th>
                                                    Empleado
                                                </th>
                                                <th>
                                                    Solicitante
                                                </th>
                                                @if (ViewContext.RouteData.Values["action"].ToString() == "solicitudes_sistemas")
                                                {
                                                    <th>
                                                        Asignado A:
                                                    </th>
                                                }
                                                <th>
                                                    Fecha Solicitud
                                                </th>
                                                <th>
                                                    Tipo Solicitud
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.estatus)
                                                </th>
                                                @if (ViewContext.RouteData.Values["action"].ToString() == "solicitudes_rechazadas_autorizador")
                                                {
                                                    <th>
                                                        Comentario de rechazo
                                                    </th>
                                                }

                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model)
                                            {
                                                <tr style="@(ViewBag.id_empleado_actual !=null && (int)ViewBag.id_empleado_actual==item.ultima_asignacion_id ? "background-color:#EBFCDC; font-weight:bold;color:green":String.Empty)">
                                                    <td>

                                                        @if (ViewBag.Autorizar != null && ViewBag.Autorizar)
                                                        {
                                                            if (item.estatus == Bitacoras.Util.IT_MR_Status.RECHAZADO)
                                                            {
                                                                <a href="@Url.Action("Autorizar", ViewBag.ControllerName, new { id = item.id })" class="btn btn-success" rel="tooltip" data-title="Editar" data-placement="right">
                                                                    <i class="fa-solid fa-file-pen"></i>
                                                                </a>
                                                            }
                                                            else
                                                            {
                                                                <a href="@Url.Action("Autorizar", ViewBag.ControllerName, new { id = item.id })" class="btn btn-primary" rel="tooltip" data-title="Autorizar" data-placement="right">
                                                                    <i class="fa fa-file-circle-check"></i>
                                                                </a>
                                                            }
                                                        }
                                                        @if (ViewBag.Edit != null && ViewBag.Edit)
                                                        {
                                                            <a href="@Url.Action("CrearMatriz", ViewBag.ControllerName, new { id = item.id_empleado })" class="btn @(item.estatus == Bitacoras.Util.IT_MR_Status.FINALIZADO? "btn-warning":"btn-success" )" rel="tooltip" data-title="@(item.estatus == Bitacoras.Util.IT_MR_Status.FINALIZADO? "Solicitar Modificación de usuario":"Editar Solicitud" )" data-placement="right">
                                                                <i class="fa @(item.estatus == Bitacoras.Util.IT_MR_Status.FINALIZADO? "fa-users":"fa-file-pen" )"></i>
                                                            </a>
                                                        }
                                                        @if (ViewBag.Sistemas != null && ViewBag.Sistemas && (item.estatus == Bitacoras.Util.IT_MR_Status.ENVIADO_A_IT || item.estatus == Bitacoras.Util.IT_MR_Status.EN_PROCESO))
                                                        {
                                                            <a href="@Url.Action("Cerrar", ViewBag.ControllerName, new { id = item.id })" class="btn btn-success" rel="tooltip" data-title="Cerrar Solicitud" data-placement="right">
                                                                <i class="fa-solid fa-list-check"></i>
                                                            </a>
                                                        }
                                                        @if (ViewBag.Sistemas != null && ViewBag.Sistemas && (item.estatus == Bitacoras.Util.IT_MR_Status.ENVIADO_A_IT || item.estatus == Bitacoras.Util.IT_MR_Status.EN_PROCESO || item.estatus == Bitacoras.Util.IT_MR_Status.FINALIZADO))
                                                        {
                                                            <a href="@Url.Action("Asignar", ViewBag.ControllerName, new { id = item.id })" class="btn btn-primary" rel="tooltip" data-title="Asignar Solicitud" data-placement="right">
                                                                <i class="fa-solid fa-user-tag"></i>
                                                            </a>
                                                        }
                                                        @if (ViewBag.Details != null && ViewBag.Details)
                                                        {
                                                            <a href="@Url.Action("Details", ViewBag.ControllerName, new { id = item.id })" class="btn btn-secondary " rel="tooltip" data-title="Detalles" data-placement="right">
                                                                <i class="fa fa-info-circle"></i>
                                                            </a>
                                                        }
                                                        @if (item.estatus == Bitacoras.Util.IT_MR_Status.FINALIZADO)
                                                        {
                                                            <a href="@Url.Action("GenerarPDF", ViewBag.ControllerName, new { id = item.id })" target="_blank" class="btn btn-danger" rel="tooltip" data-title="Generar PDF" data-placement="right">
                                                                <i class="fa-solid fa-file-pdf"></i>
                                                            </a>
                                                            if (User.IsInRole(Clases.Util.TipoRoles.IT_MATRIZ_REQUERIMIENTOS_CERRAR))
                                                            {
                                                                <a href="@Url.Action("Cerrar", ViewBag.ControllerName, new { id = item.id })" class="btn btn-warning" rel="tooltip" data-title="Editar Solicitud" data-placement="right">
                                                                    <i class="fa-regular fa-pen-to-square"></i>
                                                                </a>
                                                            }
                                                        }
                                                        @if (item.estatus == Bitacoras.Util.IT_MR_Status.RECHAZADO && ViewContext.RouteData.Values["action"].ToString() == "solicitudes_rechazadas_autorizador")
                                                        {
                                                            <a href="@Url.Action("Autorizar", ViewBag.ControllerName, new { id = item.id })" class="btn btn-success" rel="tooltip" data-title="Editar" data-placement="right">
                                                                <i class="fa-solid fa-file-pen"></i>
                                                            </a>
                                                        }
                                                    </td>
                                                    <td style="text-align:center">
                                                        @Html.DisplayFor(modelItem => item.id)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.empleados.numeroEmpleado)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.empleados.ConcatNombre)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.empleados3.ConcatNombre)
                                                    </td>
                                                    @if (ViewContext.RouteData.Values["action"].ToString() == "solicitudes_sistemas")
                                                    {
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.ultima_asignacion)
                                                        </td>
                                                    }
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.fecha_solicitud)
                                                    </td>
                                                    <td style="font-weight:bold">
                                                        @(Bitacoras.Util.IT_MR_tipo.DescripcionStatus(item.tipo))
                                                    </td>
                                                    <td>
                                                        @Bitacoras.Util.IT_MR_Status.DescripcionStatus(item.estatus)
                                                    </td>

                                                    @if (ViewContext.RouteData.Values["action"].ToString() == "solicitudes_rechazadas_autorizador")
                                                    {
                                                        <td style="font-weight:bold; color:red;" nowrap>
                                                            @Html.DisplayFor(modelItem => item.comentario_rechazo)
                                                        </td>
                                                    }


                                                </tr>
                                            }

                                        </tbody>
                                    </table>

                                </div>
                                <br />
                                @if (Model.Count() > 0)
                                {
                                    <nav id="nav_paginacion" aria-label="...">
                                        @{Html.RenderPartial("_Paginacion", Model);}
                                    </nav>
                                }

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal DEMO Modelo -->
<div class="modal fade" id="modalModelo" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h6 class="modal-title" id="exampleModalLongTitle">Usar P&oacute;liza Modelo</h6>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            @using (Html.BeginForm("Create", null, FormMethod.Get))
            {
                <div class="modal-body">
                    <div class="form-group row">
                        <h6>¿Desea utilizar una p&oacute;liza modelo?</h6>
                    </div>
                    @if (ViewBag.id_poliza_modelo != null)
                    {
                        <div class="form-group row">
                            <div class="col-md-12">
                                @Html.DropDownList("id_poliza_modelo", null, htmlAttributes: new { @class = "select2bs4 col-md-12", @style = "width:100%" })
                            </div>
                        </div>
                    }
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-primary">Continuar</button>
                </div>
            }
        </div>
    </div>
</div>
@section scripts
{
    <!-- SweetAlert2 -->
    @Scripts.Render(Url.Content("~/Content/vendors/sweetalert2/sweetalert2.min.js"))
    @Scripts.Render(Url.Content("~/Scripts/AlertasSweetAlert.js"))
    @Scripts.Render(Url.Content("~/Content/vendors/select2/js/select2.full.min.js"))
    @Scripts.Render("~/bundles/dataTables_js")

    <script>

        $(document).ready(function () {

            //inicializa los data table
            var tabla = $('#datatable_1').DataTable({
                "paging": false,
                "ordering": false,
                "searching": false,
                "scrollX": true,
                "info": false
            });

            // Initialize Select2 Elements (debe ir después de asignar el valor)
            $('.select2bs4').select2({
                theme: 'bootstrap4'
            })

            //Envia el formulario cada vez que se modifica el combo
            $(".select2bs4").change(function () {
                $("#buscarForm").submit();
                BloqueaPantalla();
            });
            $.unblockUI();
        });

        //muestra el modal de autorizar
        function mostrarModalDemo() {
            $('#modalModelo').modal('show')

        }
    </script>

}

