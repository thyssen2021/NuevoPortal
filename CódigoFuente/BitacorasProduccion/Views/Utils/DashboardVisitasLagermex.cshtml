@{
    ViewBag.Title = "Dashboard de Visitas Lagermex";
    ViewBag.PrimerNivel = "reportes";
    ViewBag.SegundoNivel = "dashboard_visitas";
    ViewBag.ControllerName = ViewContext.RouteData.Values["controller"];
    ViewBag.nav_style = "nav-sm";
}

@section estilos
{
    <style>
        /* Le damos un alto mínimo al contenedor para que no parpadee mientras React carga */
        #registros-dashboard-root {
            min-height: 600px;
            padding: 10px;
        }
    </style>
}

<div class="right_col" role="main">
    <div class="">
        <div class="clearfix"></div>
        <div class="row">
            <div class="col-md-12 col-sm-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>@ViewBag.Title</h2>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">

                        <div id="utils-registros-dashboard-root"></div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script type="module" src="~/Scripts/ReactDist/assets/main.js"></script>

    <script>
        $(document).ready(function () {
            // Cualquier inicialización extra de jQuery si tu plantilla lo requiere
            console.log("Vista de Razor cargada. Esperando a React...");
        });
    </script>
}
