@model Portal_2_0.Models.IT_site_actividades

@{
    ViewBag.Title = "Detalles Actividad de Site";
    ViewBag.PrimerNivel = "IT_checklist";
    ViewBag.SegundoNivel = "IT_Checklist_catalogos";
    ViewBag.TercelNivel = "IT_site_actividades";
    ViewBag.ControllerName = "IT_site_actividades";
}

<div class="right_col" role="main">
    <div class="">

        <div class="clearfix"></div>

        <div class="row">
            <div class="col-md-12 col-sm-12  ">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>@ViewBag.Title</h2>
                        <div class="clearfix"></div>
                    </div>

                    <div class="form-group row">
                        <span style="color:black"><b>DATOS GENERALES</b></span>
                    </div>

                    <!-- /.col -->
                    <div class="col-md-8">
                        <div class="table-responsive">
                            <table class="table">
                                <tbody>
                                    <tr>
                                        <th>@Html.DisplayNameFor(model => model.id)</th>
                                        <td>@Html.DisplayFor(model => model.id)</td>
                                    </tr>                                   
                                    <tr>
                                        <th>@Html.DisplayNameFor(model => model.descripcion)</th>
                                        <td>@Html.DisplayFor(model => model.descripcion)</td>
                                    </tr>
                                    <tr>
                                        <th>@Html.DisplayNameFor(model => model.referencia)</th>
                                        <td>@Html.DisplayFor(model => model.referencia)</td>
                                    </tr>

                                    <tr>
                                        <th style="width:50%"> @Html.DisplayNameFor(model => model.activo)</th>
                                        <td>
                                            @if (Model.activo)
                                            {
                                                <span>Activo</span>
                                            }
                                            else
                                            {
                                                <span>Inactivo</span>
                                            }
                                        </td>
                                    </tr>

                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <p class="float-md-right">
                            <a href="@Url.Action("Edit", ViewBag.ControllerName, new { id = Model.id})" class="btn btn-success btm-sm" title="Editar">
                                <i class="fa-regular fa-pen-to-square"></i> Editar
                            </a>
                        </p>
                    </div>
                </div>
                <div>
                    <br />
                    <a href="@Url.Action("Index", ViewBag.ControllerName)" class="btn btn-round btn-info btm-sm" title="Volver">
                        <i class="fa fa-arrow-circle-left"></i> Volver al listado
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    window.onload = function () {
        clicMenu(2);
    }
</script>