@model Portal_2_0.Models.PM_poliza_manual_modelo

@{
    ViewBag.Title = "Crear Póliza Modelo";
    ViewBag.PrimerNivel = "polizas_manuales";
    ViewBag.SegundoNivel = "PM_catalogos";
    ViewBag.TercerNivel = "PM_poliza_modelo";
    ViewBag.ControllerName = "PM_poliza_manual_modelo";

    int contador = 200;

}

<div class="right_col" role="main">
    <div class="">

        <div class="clearfix"></div>

        <div class="row">
            <div class="col-md-12 col-sm-12  ">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>@ViewBag.Title</h2>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <br />
                        @using (Html.BeginForm("Create", "PM_poliza_manual_modelo", FormMethod.Post, new { @class = "form-horizontal form-label-left" }))
                        {
                            @Html.AntiForgeryToken()


                            if (!Html.ViewData.ModelState.IsValid)
                            {
                                <div class="alert alert-danger" role="alert">
                                    @Html.ValidationSummary("", new { @class = "text-white" })
                                </div>
                            }

                            <div class="item form-group">
                                @Html.LabelFor(model => model.descripcion, new { @class = "col-form-label col-md-2 col-sm-2 label-align" })
                                <div class="col-md-8 col-sm-8 ">
                                    @Html.EditorFor(model => model.descripcion, new { htmlAttributes = new { @class = "form-control", @autocomplete = "off" } })
                                    @Html.ValidationMessageFor(model => model.descripcion, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="ln_solid"></div>
                            <div class="form-group row">
                                <span style="color:black"><b>CONCEPTOS</b></span>
                            </div>

                            <div class="table-responsive">
                                <table id="datatable_1" class="table table-striped table-bordered" cellspacing="0" width="100%">
                                    <thead>
                                        <tr style=" background-color: #0094ff; color: azure;">
                                            <th width="15%">
                                                Cuenta
                                            </th>
                                            <th width="15%">
                                                CC
                                            </th>
                                            <th width="50%">
                                                Concepto
                                            </th>
                                            <th width="15%">
                                                P&oacute;liza
                                            </th>
                                            <th>

                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody id="body_conceptos">


                                        @foreach (Portal_2_0.Models.PM_conceptos_modelo item in Model.PM_conceptos_modelo)
                                        {
                                            <tr id="div_concepto_@contador">
                                                <input type="hidden" name="PM_conceptos_modelo.Index" id="produccion_lotes.Index" value="@contador" />
                                                <td>
                                                    <input style=" font-size: 12px;" type="text" name="PM_conceptos_modelo[@contador].cuenta" id="PM_conceptos_modelo[@contador].cuenta" class="form-control col-md-12" value="@item.cuenta" autocomplete="off" maxlength="15" required>
                                                    <span class="field-validation-valid text-danger" data-valmsg-for="PM_conceptos_modelo[@contador].cuenta" data-valmsg-replace="true"></span>
                                                </td>
                                                <td>
                                                    <input style=" font-size: 12px;" type="text" name="PM_conceptos_modelo[@contador].cc" id="PM_conceptos_modelo[@contador].cc" class="form-control col-md-12" value="@item.cc" maxlength="15" autocomplete="off">
                                                    <span class="field-validation-valid text-danger" data-valmsg-for="PM_conceptos_modelo[@contador].cc" data-valmsg-replace="true"></span>
                                                </td>
                                                <td>
                                                    <textarea style="font-size: 12px;" type="text" name="PM_conceptos_modelo[@contador].concepto" id="PM_conceptos_modelo[@contador].concepto" class="form-control col-md-12" autocomplete="off" maxlength="120" required>@item.concepto</textarea>
                                                    <span class="field-validation-valid text-danger" data-valmsg-for="PM_conceptos_modelo[@contador].concepto" data-valmsg-replace="true"></span>
                                                </td>
                                                <td>
                                                    <input style=" font-size: 12px;" type="text" name="PM_conceptos_modelo[@contador].poliza" id="PM_conceptos_modelo[@contador].poliza" class="form-control col-md-12" value="@item.poliza" autocomplete="off" maxlength="10">
                                                    <span class="field-validation-valid text-danger" data-valmsg-for="PM_conceptos_modelo[@contador].poliza" data-valmsg-replace="true"></span>
                                                </td>
                                                <td>
                                                    <input type="button" value="Borrar" class="btn btn-danger" onclick="borrarConcepto(@contador); return false;">
                                                </td>
                                            </tr>

                                            contador++;
                                        }


                                    </tbody>
                                </table>
                            </div>

                            <div class="form-group row">
                            </div>
                            <div class="form-group row">
                                <div class="col-md-11">
                                    <input type="button" value="Agregar" class="btn btn-round btn-warning float-right" onclick="AgregarConcepto(); return false;">
                                </div>
                            </div>

                            <div class="ln_solid"></div>
                            <div class="form-group row">
                                <span style="color:black"><b>COMENTARIO</b></span>
                            </div>

                            <div class="item form-group">
                                @Html.LabelFor(model => model.comentario, new { @class = "control-label col-md-12 col-sm-12", @style = "text-align:left" })

                            </div>
                            <div class="item form-group">
                                <div class="col-md-12">
                                    @Html.TextAreaFor(model => model.comentario, new { @class = "form-control", @rows = "4", @autocomplete = "off" })
                                    @Html.ValidationMessageFor(model => model.comentario, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="ln_solid"></div>
                            <div class="item form-group">
                                <div class="col-md-12 col-sm-12 ">
                                    <button type="submit" class="btn btn-success float-right btn-lg"><i class="fa fa-save"></i>  Guardar</button>
                                </div>
                            </div>
                        }
                    </div>
                </div>
                <div>
                    <br />
                    <a href="@Url.Action("Index", ViewBag.ControllerName)" class="btn btn-round btn-info btm-sm" title="Volver">
                        <i class="fa fa-arrow-circle-left"></i> Volver al listado
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render(Url.Content("~/Scripts/Forms/PolizasModeloCreateEdit.js"))
}