@model IEnumerable<Portal_2_0.Models.PLC_Data>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Seleccione un PLC";
    ViewBag.nav_style = "nav-sm";
}

@section estilos {
    <style>
        .plc-selector-card {
            border: 1px solid #e5e5e5;
            border-radius: 5px;
            padding: 20px;
            text-align: center;
            transition: all 0.3s;
            cursor: pointer;
            background: #fff;
            margin-bottom: 20px;
        }

            .plc-selector-card:hover {
                box-shadow: 0 5px 15px rgba(0,0,0,0.1);
                transform: translateY(-5px);
                border-color: #009ff5;
            }

        .plc-icon {
            font-size: 40px;
            color: #2A3F54;
            margin-bottom: 15px;
        }

        .plc-name {
            font-size: 18px;
            font-weight: bold;
            color: #2A3F54;
            margin-bottom: 5px;
        }

        .plc-ip {
            font-size: 13px;
            color: #73879C;
            margin-bottom: 15px;
            display: block;
        }

        .btn-monitor {
            background-color: #009ff5;
            color: white;
            border-radius: 20px;
            padding: 8px 25px;
            text-decoration: none;
            display: inline-block;
        }

            .btn-monitor:hover {
                background-color: #007bbd;
                color: white;
            }
    </style>
}

<div class="right_col" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>Monitor de PLCs <small>Seleccione una línea</small></h3>
            </div>
        </div>

        <div class="clearfix"></div>

        <div class="row">
            <div class="col-md-12">
                <div class="x_panel">
                    <div class="x_content">

                        <div class="row">
                            @foreach (var item in Model)
                            {
                                <div class="col-md-4 col-sm-6 col-xs-12">
                                    <div class="plc-selector-card" onclick="window.location.href='@Url.Action("Index", "PlcMonitor", new { id = item.ID_PLC })'">

                                        <div class="plc-icon">
                                            <i class="fa fa-server"></i>
                                        </div>

                                        <div class="plc-name">
                                            @item.FriendlyName
                                        </div>

                                        <span class="plc-ip">
                                            <i class="fa fa-network-wired"></i> @item.IpAddress
                                        </span>

                                        <span class="badge badge-secondary">@item.CpuType</span>

                                        <div style="margin-top:15px;">
                                            <a href="@Url.Action("Index", "PlcMonitor", new { id = item.ID_PLC })" class="btn-monitor">
                                                Conectar <i class="fa fa-arrow-right"></i>
                                            </a>
                                        </div>

                                    </div>
                                </div>
                            }

                            @if (!Model.Any())
                            {
                                <div class="col-md-12 text-center">
                                    <div class="alert alert-warning">
                                        <i class="fa fa-exclamation-triangle"></i> No hay PLCs activos configurados en la base de datos.
                                    </div>
                                </div>
                            }
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>