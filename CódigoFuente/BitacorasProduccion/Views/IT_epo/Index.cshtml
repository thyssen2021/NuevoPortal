@model IEnumerable<Portal_2_0.Models.IT_epo>

@{
    ViewBag.Title = "Catálogo EPO";
    ViewBag.PrimerNivel = "IT_epo_wsus";
    ViewBag.SegundoNivel = "IT_epo";
    ViewBag.ControllerName = "IT_epo";

    Clases.Util.MensajesSweetAlert mensajeAlerta = (Clases.Util.MensajesSweetAlert)ViewBag.MensajeAlert;

    //obtiene los filtros
    Portal_2_0.Models.Paginacion paginacionFiltros = (Portal_2_0.Models.Paginacion)ViewBag.Paginacion;


}

@section estilos
{
    <!-- DataTables -->
    @Styles.Render("~/Content/dataTables_css")

    <!-- SweetAlert2 -->
    <link href="@Url.Content("~/Content/vendors/sweetalert2-theme-bootstrap-4/bootstrap-4.min.css")" rel="stylesheet">
}

@*Para SweetAlert*@
@if (mensajeAlerta != null)
{
    <input type="hidden" value="@mensajeAlerta.Mensaje" id="mensajeAlert" />
    <input type="hidden" value="@mensajeAlerta.getTipoMensaje()" id="mensajeAlertTipo" />
}

<div class="right_col" role="main">
    <div class="">

        <div class="clearfix"></div>

        <div class="row">
            <div class="col-md-12 col-sm-12 ">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>@ViewBag.Title</h2>
                        <ul class="nav navbar-right panel_toolbox">
                            @*Utilizado para mover a la derecha los iconos del card*@
                            <span style="visibility:hidden">_______</span>
                            <li>
                                <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                            </li>
                        </ul>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <div class="row">
                            <div class="col-sm-12">
                                <div>
                                    <h3>&Uacute;ltima Actualización: @(Model.Count()>0?Model.FirstOrDefault().fecha.ToShortDateString():"NO DISPONIBLE")</h3>
                                    <br />
                                    <a href="@Url.Action("LoadFile", ViewBag.ControllerName)" class="btn btn-round btn-info btm-sm" title="Cargar">
                                        <i class="fa fa-upload"></i> Cargar EPO
                                    </a>
                                </div>
                                <div class="ln_solid"></div>
                                <div class="card-box table-responsive">

                                    <table id="datatable1" class="table table-striped table-bordered nowrap" cellspacing="0" width="100%">
                                        <thead>
                                            <tr>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.id)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.system_name)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.username)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.operating_system)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.is_laptop)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.group_name)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.operating_system)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.mac_address)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.numbers_of_cpus)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.cpu_speed)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.system_manufacturer)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.system_model)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.system_serial_number)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.total_disk_space_mb)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.total_c_drive_space_mb)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.last_communication)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.total_physical_memory_mb)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.assigment_path)
                                                </th>

                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model)
                                            {
                                                <tr>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.id)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.system_name)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.username)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.operating_system)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.is_laptop)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.group_name)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.operating_system)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.mac_address)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.numbers_of_cpus)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.cpu_speed)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.system_manufacturer)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.system_model)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.system_serial_number)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.total_disk_space_mb)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.total_c_drive_space_mb)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.last_communication)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.total_physical_memory_mb)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.assigment_path)
                                                    </td>

                                                </tr>
                                            }
                                        </tbody>
                                    </table>

                                </div>

                            </div>



                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts
{
    <!-- SweetAlert2 -->
    @Scripts.Render(Url.Content("~/Content/vendors/sweetalert2/sweetalert2.min.js"))
    @Scripts.Render(Url.Content("~/Scripts/AlertasSweetAlert.js"))

    @Scripts.Render("~/bundles/dataTables_js")

    <script>
        $(document).ready(function () {

        });

        var form = document.getElementById("buscarForm");

        $("#borrarForm").click(function () {
            $('#material').val("");
