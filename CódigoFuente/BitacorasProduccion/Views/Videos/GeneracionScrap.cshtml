
@{
    ViewBag.Title = "Generación de Scrap";
    ViewBag.PrimerNivel = "videos";
    ViewBag.SegundoNivel = "generacion_scrap";
    ViewBag.ControllerName = ViewContext.RouteData.Values["controller"];
    ViewBag.nav_style = "nav-sm";
}

@section estilos
{
    <style>
        /* Animación de fade-in para el contenedor y el título */
        @@keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .video-container {
            text-align: center;
            margin: 30px 0;
            animation: fadeIn 1.5s ease-in-out;
        }

        .video-title {
            color: #009ff5;
            font-size: 28px;
            font-weight: bold;
            margin-bottom: 20px;
            opacity: 0;
            animation: fadeIn 2s forwards;
        }

        /* Estilos para el reproductor de video con efecto hover */
        video {
            max-width: 100%;
            border: 4px solid #009ff5;
            border-radius: 8px;
            box-shadow: 0 4px 12px rgba(0,159,245,0.4);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        video:hover {
            transform: scale(1.02);
            box-shadow: 0 6px 16px rgba(0,159,245,0.6);
        }
    </style>
}

<div class="right_col" role="main">
    <div class="">
        <div class="clearfix"></div>
        <div class="row">
            <div class="col-md-12 col-sm-12">
                <div class="x_panel">
                   
                    <div class="x_content">
                        <!-- Inicio Contenido -->
                        <div class="video-container">
                            <div class="video-title">Generación de Scrap</div>
                            <video controls>
                                <source src="https://portaltkmm.tk-materials.com/recursos/videos/generacion_scrap.mp4" type="video/mp4" />
                                Tu navegador no soporta la reproducción de videos.
                            </video>
                        </div>
                        <!-- Fin Contenido -->
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Aquí puedes agregar funcionalidad adicional si es necesario
        });
    </script>
}
