@model Portal_2_0.Models.BG_IHS_rel_regiones

@{
    ViewBag.Title = "Detalles de Asociación Planta/Región";
    ViewBag.PrimerNivel = "budget_ihs";
    ViewBag.SegundoNivel = "budget_ihs_catalogos";
    ViewBag.TercelNivel = "BG_IHS_rel_regiones";
    ViewBag.ControllerName = "BG_IHS_rel_regiones";
}

<div class="right_col" role="main">
    <div class="">

        <div class="clearfix"></div>

        <div class="row">
            <div class="col-md-12 col-sm-12  ">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>@ViewBag.Title</h2>
                        <div class="clearfix"></div>
                    </div>
                    <div class="form-group row">
                        <span style="color:black"><b>DATOS GENERALES</b></span>
                    </div>
                    <div class="ln_solid"></div>
                    <!-- /.col -->
                    <div class="col-md-8">
                        <div class="table-responsive">
                            <table class="table">
                                <tbody>
                                    <tr>
                                        <th>@Html.DisplayNameFor(model => model.id)</th>
                                        <td>@Html.DisplayFor(model => model.id)</td>
                                    </tr>
                                    <tr>
                                        <th>@Html.DisplayNameFor(model => model.production_plant)</th>
                                        <td>@Html.DisplayFor(model => model.production_plant)</td>
                                    </tr>
                                    <tr>
                                        <th>@Html.DisplayNameFor(model => model.id_bg_ihs_region)</th>
                                        <td>@Html.DisplayFor(model => model.BG_IHS_regiones.descripcion)</td>
                                    </tr>

                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <p class="float-md-right">
                            <a href="@Url.Action("Edit", ViewBag.ControllerName, new { id = Model.id})" class="btn btn-success btm-sm" title="Editar">
                                <i class="fa-regular fa-pen-to-square"></i> Editar
                            </a>
                        </p>
                    </div>
                </div>
                <div>
                    <br />
                    <a href="@Url.Action("Index", ViewBag.ControllerName)" class="btn btn-round btn-info btm-sm" title="Volver">
                        <i class="fa fa-arrow-circle-left"></i> Volver al listado
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

