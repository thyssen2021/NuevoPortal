@model Portal_2_0.Models.budget_centro_costo

@{
    ViewBag.Title = "Details Cost Center";
    ViewBag.PrimerNivel = "plantilla_budget";
    ViewBag.SegundoNivel = "BG_catalogos";
    ViewBag.TercelNivel = "BG_CentroCosto";
    ViewBag.ControllerName = "BG_CentroCosto";

}

<div class="right_col" role="main">
    <div class="">

        <div class="clearfix"></div>

        <div class="row">
            <div class="col-md-12 col-sm-12  ">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>@ViewBag.Title</h2>
                        <div class="clearfix"></div>
                    </div>

                    <!-- /.col -->
                    <div class="col-md-8">
                        <div class="table-responsive">
                            <table class="table">
                                <tbody>
                                    <tr>
                                        <th>@Html.DisplayNameFor(model => model.num_centro_costo)</th>
                                        <td>@Html.DisplayFor(model => model.num_centro_costo)</td>
                                    </tr>
                                    <tr>
                                        <th>Plant</th>
                                        <td>@Html.DisplayFor(model => model.Area.plantas.descripcion)</td>
                                    </tr>
                                    <tr>
                                        <th>@Html.DisplayNameFor(model => model.id_area)</th>
                                        <td>@Html.DisplayFor(model => model.Area.descripcion)</td>
                                    </tr>
                                    <tr>
                                        <th>@Html.DisplayNameFor(model => model.id_responsable)</th>
                                        <td>@Html.DisplayFor(model => model.empleados.ConcatNombre)</td>
                                    </tr>

                                   

                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <p class="float-md-right">
                            <a href="@Url.Action("Edit", ViewBag.ControllerName, new { id = Model.id})" class="btn btn-success btm-sm" title="Editar">
                                <i class="fa fa-pencil-square-o"></i> Editar
                            </a>
                        </p>
                    </div>
                </div>
                <div>
                    <br />
                    <a href="@Url.Action("Index", ViewBag.ControllerName)" class="btn btn-round btn-info btm-sm" title="Volver">
                        <i class="fa fa-arrow-circle-left"></i> Volver al listado
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    window.onload = function () {
        clicMenu(2);
    }
</script>