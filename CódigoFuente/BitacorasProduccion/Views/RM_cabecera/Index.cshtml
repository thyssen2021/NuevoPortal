@model IEnumerable<Portal_2_0.Models.RM_cabecera>
@using Clases.Util;
@{
    ViewBag.Title = "Listado de Remisiones";
    ViewBag.PrimerNivel = "remisiones_manuales";
    ViewBag.SegundoNivel = "listado_remisiones";
    ViewBag.ControllerName = ViewContext.RouteData.Values["controller"];

    Clases.Util.MensajesSweetAlert mensajeAlerta = (Clases.Util.MensajesSweetAlert)ViewBag.MensajeAlert;
    //obtiene los filtros
    Portal_2_0.Models.Paginacion paginacionFiltros = (Portal_2_0.Models.Paginacion)ViewBag.Paginacion;
}

@section estilos
{
    <!-- DataTables -->
    @Styles.Render("~/Content/dataTables_css")
    <!-- SweetAlert2 -->
    <link href="@Url.Content("~/Content/vendors/sweetalert2-theme-bootstrap-4/bootstrap-4.min.css")" rel="stylesheet">
    <!-- Select2 -->
    <link href="@Url.Content("~/Content/vendors/select2/css/select2.css")" rel="stylesheet">
    <link href="@Url.Content("~/Content/vendors/select2-bootstrap4-theme/select2-bootstrap4.min.css")" rel="stylesheet">
    <style>
    </style>
}
@{Html.RenderPartial("_BlockUI", Model);}

@*Para SweetAlert*@
@if (mensajeAlerta != null)
{
    <input type="hidden" value="@mensajeAlerta.Mensaje" id="mensajeAlert" />
    <input type="hidden" value="@mensajeAlerta.getTipoMensaje()" id="mensajeAlertTipo" />
}


<div class="right_col" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                @*<h3>@ViewBag.ControllerName</h3>*@
            </div>
        </div>

        <div class="clearfix"></div>

        <div class="row">
            <div class="col-md-12 col-sm-12 ">
                <div class="x_panel">
                    <div class="x_title">
                        <h2><i class="fa fa-truck-fast"></i> @ViewBag.Title</h2>
                        <ul class="nav navbar-right panel_toolbox">
                            @*Utilizado para mover a la derecha los iconos del card*@
                            <span style="visibility:hidden">_______</span>
                            <li>
                                <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                            </li>
                        </ul>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="card-box ">
                                    @if (User.IsInRole(TipoRoles.RM_CREACION))
                                    {
                                        <div class="form-group">
                                            <a href="@Url.Action("Create", ViewBag.ControllerName)" class="btn btn-success">
                                                <i class="fa fa-plus-square"></i>
                                                Crear nuevo
                                            </a>
                                        </div>
                                    }
                                    <div class="ln_solid"></div>
                                    <div class="form-group row">
                                        <span style="color:black"><b>B&Uacute;SQUEDA</b></span>
                                    </div>
                                    <div class="form-group">
                                        @using (Html.BeginForm(null, null, FormMethod.Get, new { id = "buscarForm", @class = "form-horizontal form-label-left" }))
                                        {
                                            <div class="form-group row">
                                                <label class="control-label col-md-1 col-sm-1" for="id_estatus" style="text-align:right">Estatus:</label>
                                                <div class="col-md-10 col-sm-10 ">
                                                    <div class="btn-group btn-group-toggle" data-toggle="buttons">
                                                        @{string valorEstatus = (Request.QueryString["estatus"] != null ? Request.QueryString["estatus"] : string.Empty);
                                                            Dictionary<string, int> estatusAmountDictionary = (Dictionary<string, int>)ViewBag.estatusAmount;
                                                        }
                                                        @foreach (KeyValuePair<string, string> kvp in (Dictionary<string, string>)ViewBag.estatusMap)
                                                        {
                                                            <label class="btn @(kvp.Key == valorEstatus? "active": string.Empty)" role="button">
                                                                <input type="radio" name="estatus" value="@kvp.Key">@kvp.Value
                                                                <span class="badge  @(kvp.Key == valorEstatus? "bg-red": "bg-secondary")" style="color:white">@estatusAmountDictionary[kvp.Key]</span>
                                                            </label>
                                                        }
                                                    </div>
                                                </div>
                                            </div>
                                            @*<div class="form-group row">
                                                    <label class="control-label col-md-1 col-sm-1" for="id_estatus" style="text-align:right">Estatus:</label>
                                                    <div class="col-md-4 col-sm-4 ">
                                                        @Html.DropDownList("estatus", null, htmlAttributes: new { @class = "form-control select2bs4", @style = "width:100%" })
                                                    </div>
                                                </div>*@
                                            <div class="form-group row">
                                                <label class="control-label col-md-1 col-sm-1" for="id_planta" style="text-align:right">Planta:</label>
                                                <div class="col-md-2 col-sm-2 ">
                                                    @Html.DropDownList("id_planta", null, htmlAttributes: new { @class = "form-control select2bs4", @style = "width:100%" })
                                                </div>
                                                <label class="control-label col-md-1 col-sm-1" for="almacenClave" style="text-align:right">Almac&eacute;n:</label>
                                                <div class="col-md-2 col-sm-2 ">
                                                    @Html.DropDownList("almacenClave", null, htmlAttributes: new { @class = "form-control select2bs4", @style = "width:100%" })
                                                </div>
                                                <label class="control-label col-md-1 col-sm-1" for="clave" style="text-align:right">Clave Remisi&oacute;n:</label>
                                                <div class="col-md-2 col-sm-2 ">
                                                    @Html.DropDownList("clave", null, htmlAttributes: new { @class = "form-control select2bs4", @style = "width:100%" })
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <label class="control-label col-md-1 col-sm-1" for="motivoClave" style="text-align:right">Motivo:</label>
                                                <div class="col-md-4 col-sm-4">
                                                    @Html.DropDownList("motivoClave", null, htmlAttributes: new { @class = "form-control select2bs4", @style = "width:100%" })
                                                </div>
                                                <label class="control-label col-md-1 col-sm-1 label-align" for="fecha_inicial">Fecha Inicial</label>
                                                <div class="col-md-2 col-sm-4">
                                                    <input type="date" class="form-control search date" name="fecha_inicial" id="fecha_inicial" value="@Request.Params["fecha_inicial"]">
                                                </div>
                                                <label class="control-label col-md-1 col-sm-1 label-align" for="fecha_final">Fecha Final</label>
                                                <div class="col-md-2 col-sm-4">
                                                    <input type="date" class="form-control search date" name="fecha_final" id="fecha_final" value="@Request.Params["fecha_final"]">
                                                </div>                                               
                                            </div>
                                            <div class="form-group row">
                                                <label class="control-label col-md-1 col-sm-1" for="clienteClave" style="text-align:right">Cliente:</label>
                                                <div class="col-md-4 col-sm-4">
                                                    @Html.DropDownList("clienteClave", null, htmlAttributes: new { @class = "form-control select2bs4", @style = "width:100%" })
                                                </div>
                                                <label class="control-label col-md-1 col-sm-1" for="clienteOtro" style="text-align:right">Cliente (otro):</label>
                                                <div class="col-md-3 col-sm-3">
                                                    <input type="text" name="clienteOtro" id="clienteOtro" class="form-control" autocomplete="off" value="@Request.QueryString["clienteOtro"]" />
                                                </div>
                                                <div class="col-md-1 col-sm-1">
                                                    <a id="btn-refresh" href="@Url.Action( "Index", ViewBag.ControllerName)" class="btn btn-warning float-right">
                                                        <i class="fa fa-refresh"></i>
                                                    </a>
                                                </div>
                                                <div class="col-md-1 col-sm-1">
                                                    <input type="button" id="btn-submit" value="Buscar" class="btn btn-info" />
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                
                                            </div>
                                        }
                                    </div>

                                </div><div class="ln_solid"></div>


                                <table id="datatable_1" class="table table-striped table-bordered nowrap" cellspacing="0" width="100%">
                                    <thead>
                                        <tr>
                                            <th>Acciones</th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.remisionNumero)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.ultimoEstatus)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.FechaCreacion)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.CreadaPor)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.almacenClave)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.NombreCliente)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.EnviadoA)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.Transporte)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.motivoClave)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.TotalCantidadRemision)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.TotalPesoRemision)
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td nowrap>

                                                    @if (User.IsInRole(TipoRoles.RM_CREACION))
                                                    {

                                                        if (
                                                            item.ultimoEstatus == (int)Bitacoras.Util.RM_estatus_enum.Creada
                                                            || item.ultimoEstatus == (int)Bitacoras.Util.RM_estatus_enum.Editada
                                                            || item.ultimoEstatus == (int)Bitacoras.Util.RM_estatus_enum.Aprobada
                                                            || item.ultimoEstatus == (int)Bitacoras.Util.RM_estatus_enum.Impresa
                                                            )
                                                        {
                                                            <a href="@Url.Action("Edit", ViewBag.ControllerName, new { id = item.clave, tipo_edit=(int)Bitacoras.Util.RM_estatus_enum.Editada })" class="btn btn-success btn-sm" data-toggle="tooltip" data-placement="top" title="Editar">
                                                                <i class="fa-regular fa-pen-to-square"></i>
                                                            </a>
                                                            <a href="@Url.Action("Cancel", ViewBag.ControllerName, new { id = item.clave })" class="btn btn-danger btn-sm" data-toggle="tooltip" data-placement="top" title="Cancelar">
                                                                <i class="fa-regular fa-circle-xmark"></i>
                                                            </a>
                                                        }
                                                    }
                                                    @if (User.IsInRole(TipoRoles.RM_APROBAR)
                                                        && (item.ultimoEstatus == (int)Bitacoras.Util.RM_estatus_enum.Editada
                                                            || item.ultimoEstatus == (int)Bitacoras.Util.RM_estatus_enum.Creada))
                                                    {
                                                        <a href="@Url.Action("Edit", ViewBag.ControllerName, new { id = item.clave, tipo_edit=(int)Bitacoras.Util.RM_estatus_enum.Aprobada })" class="btn btn-info btn-sm" style="background-color:green" data-toggle="tooltip" data-placement="top" title="Aprobar">
                                                            <i class="fa-solid fa-check-to-slot"></i>
                                                        </a>
                                                    }

                                                    @if (User.IsInRole(TipoRoles.RM_REGULARIZAR) &&
                                                        item.ultimoEstatus == (int)Bitacoras.Util.RM_estatus_enum.Aprobada)
                                                    {
                                                        <a href="@Url.Action("Regularizar", ViewBag.ControllerName, new { id = item.clave })" class="btn btn-primary btn-sm" data-toggle="tooltip" data-placement="top" title="Regularizar">
                                                            <i class="fa-solid fa-computer"></i>
                                                        </a>
                                                    }
                                                    @if (User.IsInRole(TipoRoles.RM_CREACION) || User.IsInRole(TipoRoles.RM_DETALLES))
                                                    {
                                                        if (
                                                          item.ultimoEstatus == (int)Bitacoras.Util.RM_estatus_enum.Aprobada
                                                          || item.ultimoEstatus == (int)Bitacoras.Util.RM_estatus_enum.Regulariza
                                                          )
                                                        {
                                                            <a onclick="imprimir(@item.clave)" class="btn btn-success btn-sm" style="background-color:#808080; color:white;" data-toggle="tooltip" data-placement="top" title="Imprimir">
                                                                <i class="fa-solid fa-print"></i>
                                                            </a>
                                                        }
                                                        <a href="@Url.Action("Details", ViewBag.ControllerName, new { id = item.clave })" class="btn btn-info btn-sm" data-toggle="tooltip" data-placement="top" title="Detalles">
                                                            <i class="fa-solid fa-circle-info"></i>
                                                        </a>
                                                    }

                                                </td>
                                                <td style="font-weight:bold">
                                                    @Html.DisplayFor(modelItem => item.ConcatNumeroRemision)
                                                </td>
                                                @{ string color = "color:";
                                                    switch (item.ultimoEstatus)
                                                    {
                                                        case 1:
                                                        case 2:
                                                            color += "#F54300;";
                                                            break;
                                                        case 3:
                                                            color += "blue;";
                                                            break;
                                                        case 4:
                                                            color += "green;";
                                                            break;
                                                        case 5:
                                                            color += "red;";
                                                            break;
                                                        default:
                                                            color += "black;";
                                                            break;
                                                    };
                                                }
                                                <td style="font-weight:bold; @color">
                                                    @Html.DisplayFor(modelItem => item.RM_estatus.descripcion)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.FechaCreacion)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.CreadaPor)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.RM_almacen.descripcion)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.NombreCliente)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.EnviadoA)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Transporte)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.RM_remision_motivo.descripcion)
                                                </td>
                                                <td style="text-align:right">
                                                    @item.TotalCantidadRemision.ToString("0.00")
                                                </td>
                                                <td style="text-align:right">
                                                    @item.TotalPesoRemision.ToString("0.00")
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <br />
                        @if (Model.Count() > 0)
                        {
                            <nav id="nav_paginacion" aria-label="...">
                                @{Html.RenderPartial("_Paginacion", Model);}
                            </nav>
                            <div class="form-group">

                                <a href="@Url.Action("Exportar", ViewBag.ControllerName, new
                                                {
                                                    estatus = Request.QueryString["estatus"],
                                                    id_planta = Request.QueryString["id_planta"],
                                                    almacenClave = Request.QueryString["almacenClave"],
                                                    clave = Request.QueryString["clave"],
                                                    motivoClave = Request.QueryString["motivoClave"],
                                                    clienteClave = Request.QueryString["clienteClave"],
                                                    clienteOtro = Request.QueryString["clienteOtro"],
                                                    fecha_inicial = Request.Params["fecha_inicial"],
                                                    fecha_final = Request.Params["fecha_final"],

                                                })" class="btn btn-success btm-sm" target="_blank" title="Reporte" style="background-color:#1D6F42">
                                    <i class="fa-regular fa-file-excel"></i> Exportar a Excel
                                </a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</div>
@section scripts
{
    <!-- SweetAlert2 -->
    @Scripts.Render(Url.Content("~/Content/vendors/sweetalert2/sweetalert2.min.js"))
    @Scripts.Render(Url.Content("~/Scripts/AlertasSweetAlert.js"))
    @Scripts.Render(Url.Content("~/Content/vendors/select2/js/select2.full.min.js"))
    @Scripts.Render("~/bundles/dataTables_js")
    <script src="~/Content/vendors/twbs-toggle-buttons/jquery.twbs-toggle-buttons.min.js"></script>
    <script>
        $(document).ready(function () {
            //inicializa los data table
            var tabla = $('#datatable_1').DataTable({
                "paging": false,
                "ordering": false,
                "searching": false,
                "scrollX": true,
                "info": false
            });

            //inicializa radio toogle
            $(".btn-group-toggle").twbsToggleButtons();

            // Initialize Select2 Elements (debe ir después de asignar el valor)
            $('.select2bs4').select2({
                theme: 'bootstrap4'
            });

            $("#btn-submit").click(function () {
                EnviaBusqueda()
            });
            $("#btn-refresh").click(function () {
                EnviaBusqueda()
            });

            //Envia el formulario cada vez que se modifica el combo
            $(".select2bs4").change(function () {
                EnviaBusqueda()
            });

            //detecta el cambio en el radio de estatus
            $('input[type=radio][name=estatus]').change(function () {
                EnviaBusqueda()
            });

            //detecta cuando deja de escribir
            let $comment = document.getElementById("clienteOtro")
            let timeout

            //El evento lo puedes reemplazar con keyup, keypress y el tiempo a tu necesidad
            $comment.addEventListener('keydown', () => {
                clearTimeout(timeout)
                timeout = setTimeout(() => {
                    EnviaBusqueda()
                    clearTimeout(timeout)
                }, 1800)
            })

            //El evento on change de date
            $(".date").change(function () {
                clearTimeout(timeout)
                timeout = setTimeout(() => {
                    EnviaBusqueda();
                    clearTimeout(timeout)
                }, 1500)
            });

            $.unblockUI();
        });

        function imprimir(id) {
            //window.open('/@ViewBag.ControllerName/print/' + id, 'popup', 'width=600,height=600');
            popupCenter({ url: '/@ViewBag.ControllerName/print/' + id, title: 'Imprimir Remisión', w: screen.width * .70, h: screen.height * .70 });
        }

        function EnviaBusqueda() {
            $("#buscarForm").submit();
            BloqueaPantalla();
        }

        //agranda el tamaño de la barra
        window.onload = function () {
            clicMenu(1);
        }
    </script>

}


