        //funcion para agregar los eventos de cantidades a los input
        function asignaEventosInput() {
            //Agrega el evento a todos los input
            $(".debe").each(function () {
                $(this).on('input', function (e) {
                    calculaDatos()
                });
            });

            $(".haber").each(function () {
                $(this).on('input', function (e) {
                    calculaDatos()
                });
            });
        }

        //cálcula datos
        function calculaDatos() {

            //realiza la suma de conceptos Debe
            let total_debe = ObtieneTotalDebe();
            let total_haber = ObtieneTotalHaber();

            //asigna el valor de total debe
            if (total_debe != null) {
                $("#total_debe").html("$ " + total_debe.toFixed(2));
            } else {
                $("#total_debe").html("$ 0.00");
            }

            //asigna el valor de total haber
            if (total_haber != null) {
                $("#total_haber").html("$ " + total_haber.toFixed(2));
            } else {
                $("#total_haber").html("$ 0.00");
            }


            //cambia el color de las celdas

            $('#total_debe').removeClass("fondo_amarillo")
            $('#total_debe').removeClass("fondo_verde")
            $('#total_haber').removeClass("fondo_amarillo")
            $('#total_haber').removeClass("fondo_verde")

            if (total_debe == total_haber) {

                $('#total_debe').addClass("fondo_verde")
                $('#total_haber').addClass("fondo_verde")
            } else {
                $('#total_debe').addClass("fondo_amarillo")
                $('#total_haber').addClass("fondo_amarillo")
            }

        }

        //----cambia el color de la celda----
        function cambiaColorCelda(celda, clase) {
            var celda = $('#' + celda);
            valor = Math.abs(valor);

            celda.removeClass("fondo_verde");
            celda.removeClass("fondo_rojo");

            //agrega fondo segun el valor
            celda.addClass(clase);
        }

        function ObtieneTotalDebe() {
            var suma = 0;
            $('.debe').each(function () {
