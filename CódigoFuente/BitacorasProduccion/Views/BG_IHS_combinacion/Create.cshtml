@model Portal_2_0.Models.BG_IHS_combinacion

@{
    ViewBag.Title = "Crear Combinación IHS";
    ViewBag.PrimerNivel = "budget_ihs";
    ViewBag.SegundoNivel = "budget_ihs_catalogos";
    ViewBag.ControllerName = "budget_ihs_catalogos";

    int contador = 100;

    List<Portal_2_0.Models.BG_IHS_item> listadoIHSItems = (List<Portal_2_0.Models.BG_IHS_item>)ViewBag.listadoIHSItems;
}

@section estilos
{
    <!-- Select2 -->
    <link href="@Url.Content("~/Content/vendors/select2/css/select2.css")" rel="stylesheet">
    <link href="@Url.Content("~/Content/vendors/select2-bootstrap4-theme/select2-bootstrap4.min.css")" rel="stylesheet">


}


<div class="right_col" role="main">
    <div class="">

        <div class="clearfix"></div>

        <div class="row">
            <div class="col-md-12 col-sm-12  ">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>@ViewBag.Title</h2>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">

                        @using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "form-horizontal form-label-left" }))
                        {
                            @Html.AntiForgeryToken()

                            if (!Html.ViewData.ModelState.IsValid)
                            {
                                <div class="alert alert-danger" role="alert">
                                    @Html.ValidationSummary("", "Advertencia:")
                                </div>
                            }

                            <div class="form-group row">
                                <span style="color:black"><b>DATOS GENERALES</b></span>
                            </div>

                            <div class="item form-group">
                                @Html.LabelFor(model => model.vehicle, new { @class = "col-form-label col-md-1 col-sm-1 label-align" })
                                <div class="col-md-5 col-sm-5 ">
                                    @Html.EditorFor(model => model.vehicle, new { htmlAttributes = new { @class = "form-control", @autocomplete = "off" } })
                                    @Html.ValidationMessageFor(model => model.vehicle, "", new { @class = "text-danger" })
                                </div>
                                @Html.LabelFor(model => model.production_brand, new { @class = "col-form-label col-md-1 col-sm-1 label-align" })
                                <div class="col-md-5 col-sm-5">
                                    @Html.EditorFor(model => model.production_brand, new { htmlAttributes = new { @class = "form-control", @autocomplete = "off" } })
                                    @Html.ValidationMessageFor(model => model.production_brand, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="item form-group">
                                @Html.LabelFor(model => model.sop_start_of_production, new { @class = "col-form-label col-md-1 col-sm-1 label-align" })
                                <div class="col-md-5 col-sm-5">
                                    <input type="month" id="sop_start_of_production" name="sop_start_of_production" class="form-control" value="@(Model.sop_start_of_production.HasValue? Model.sop_start_of_production.Value.ToString("yyyy-MM") : String.Empty )" />
                                    @Html.ValidationMessageFor(model => model.sop_start_of_production, "", new { @class = "text-danger" })
                                </div>
                                @Html.LabelFor(model => model.eop_end_of_production, new { @class = "col-form-label col-md-1 col-sm-1 label-align" })
                                <div class="col-md-5 col-sm-5">
                                    <input type="month" id="eop_end_of_production" name="eop_end_of_production" class="form-control" value="@(Model.eop_end_of_production.HasValue? Model.eop_end_of_production.Value.ToString("yyyy-MM") : String.Empty )" />
                                    @Html.ValidationMessageFor(model => model.eop_end_of_production, "", new { @class = "text-danger" })
                                </div>

                            </div>


                            <div class="ln_solid"></div>
                            <div class="form-group row">
                                <span style="color:black"><b>ELEMENTOS IHS</b></span>
                            </div>

                            @*SELECCION DE ELEMENTOS IHS*@

                            <div id="div_rel_combinaciones">
                                @foreach (var rel_combinacion in Model.BG_IHS_rel_combinacion)
                                {
                                    <div class="form-group row" id="div_items_ihs_@contador">
                                        @* Necesario para auto binding *@
                                        <input type="hidden" name="BG_IHS_rel_combinacion.Index" id="BG_IHS_rel_combinacion.Index" value="@contador" />
                                        <input type="hidden" name="BG_IHS_rel_combinacion[@contador].id" id="BG_IHS_rel_combinacion[@contador].id" value="@rel_combinacion.id" />
                                        <input type="hidden" name="BG_IHS_rel_combinacion[@contador].id_ihs_combinacion" id="BG_IHS_rel_combinacion[@contador].id_ihs_combinacion" value="@Model.id" />
                                        <label class="control-label col-md-1" for="BG_IHS_rel_combinacion[@contador].id_ihs_item">
                                            <span class="float-right">IHS item</span>
                                        </label>
                                        <div class="col-md-8">
                                            <select name="BG_IHS_rel_combinacion[@contador].id_ihs_item" id="BG_IHS_rel_combinacion[@contador].id_ihs_item" data-row="@contador" class="form-control select2bs4" style="width:100%" required>
                                                <option value=''>-- Seleccione un valor --</option>
                                                @foreach (var item in listadoIHSItems)
                                                {
                                                    <option value="@item.id" @(rel_combinacion.id_ihs_item == item.id ? "selected" : null )>@item.ConcatCodigo</option>
                                                }
                                            </select>
                                            <span class="field-validation-valid text-danger" data-valmsg-for="BG_IHS_rel_combinacion[@contador].id_ihs_item" data-valmsg-replace="true"></span>
                                        </div>
                                        <div class="col-md-1 col-sm-1">
                                            <button type="button" id="btn-info-cell_@contador" onclick="mostrarDetalles(@contador); return false;" class="btn btn-primary btn-sm" title="Ver Detalles"> <i class="fa-solid fa-eye"></i></button>
                                        </div>

                                    </div>

                                    contador++;
                                }
                            </div>


                            <div class="form-group row">

                            </div>
                            <div class="form-group row">
                                <div class="col-md-11">
                                    <input type="button" value="Agregar" class="btn btn-round btn-warning float-right" onclick="AgregarConcepto(); return false;">
                                </div>
                            </div>

                            <div class="ln_solid"></div>
                            <div class="item form-group">
                                @Html.LabelFor(model => model.comentario, new { @class = "control-label col-md-12 col-sm-12", @style = "text-align:left" })
                            </div>
                            <div class="item form-group">
                                <div class="col-md-12">
                                    @Html.TextAreaFor(model => model.comentario, new { @class = "form-control", @rows = "4", @autocomplete = "off" })
                                    @Html.ValidationMessageFor(model => model.comentario, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="ln_solid"></div>
                            <div class="item form-group">
                                <div class="col-md-12 col-sm-12 ">
                                    <button type="submit" class="btn btn-success btn-lg float-right"><i class="fa-regular fa-floppy-disk"></i> Guardar</button>
                                </div>
                            </div>
                        }
                    </div>
                </div>
                <div>
                    <br />
                    <a href="@Url.Action("Index", ViewBag.ControllerName)" class="btn btn-round btn-info btm-sm" title="Volver">
                        <i class="fa fa-arrow-circle-left"></i> Volver al listado
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- options -->
<div id="select_options" style="display:none">
    <option value='' selected>-- Seleccione un valor --</option>
    @foreach (var item in listadoIHSItems)
    {
        <option value="@item.id">@item.ConcatCodigo</option>
    }
</div>

@section Scripts {
    @Scripts.Render(Url.Content("~/Content/vendors/jquery-iu/jquery-ui.min.js"))
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render(Url.Content("~/Content/vendors/select2/js/select2.full.min.js"))

    <script>
        $(document).ready(function () {

            // Initialize Select2 Elements (debe ir después de asignar el valor)
            $('.select2bs4').select2({
                theme: 'bootstrap4'
            })


            asignaEvents();
        });

        //variable global para el id
        var num = 0;
        //variable global de los select
        var textoSelectOptions = obtieneSelect();

        function asignaEvents() {
            //vuelve a asigar el evento on a cada input de los lotes
            $('.select2bs4').each(function () {
                $(this).change(function () {

                    var row = $(this).attr("data-row");
                    if (row != null)
                        verificaInfo(row);
                });

            });
        }

        function verificaInfo(contador) {

            var e = document.getElementById("BG_IHS_rel_combinacion[" + contador + "].id_ihs_item");
            var value = e.value;

            //si material esta vacia
            if (value == "") {
                $("#btn-info-cell_" + contador).prop("disabled", true);
                $("#btn-info-cell_" + contador).hide('explode', 400);
            }
            else {
                $("#btn-info-cell_" + contador).prop("disabled", false);
                $("#btn-info-cell_" + contador).show('explode', 350);

            }
        }

        //agrega una fila para los conceptos
        function AgregarConcepto() {

            $("#div_rel_combinaciones").append(
                `
                                                <div class="form-group row" id="div_items_ihs_`+ num + `">
                                        @* Necesario para auto binding *@
                                        <input type="hidden" name="BG_IHS_rel_combinacion.Index" id="BG_IHS_rel_combinacion.Index" value="`+ num + `" />
                                        <input type="hidden" name="BG_IHS_rel_combinacion[`+ num + `].id_ihs_combinacion" id="BG_IHS_rel_combinacion[`+ num + `].id_ihs_combinacion" value="@Model.id" />
                                        <label class="control-label col-md-1" for="BG_IHS_rel_combinacion[`+ num + `].id_ihs_item">
                                            <span class="float-right">IHS item</span>
                                        </label>
                                        <div class="col-md-8">
                                            <select name="BG_IHS_rel_combinacion[`+ num + `].id_ihs_item" id="BG_IHS_rel_combinacion[` + num + `].id_ihs_item" data-row="` + num + `" class="form-control select2bs4" style="width:100%" required>
                                                `+ textoSelectOptions + `
                                            </select>
                                            <span class="field-validation-valid text-danger" data-valmsg-for="BG_IHS_rel_combinacion[`+ num + `].id_ihs_item" data-valmsg-replace="true"></span>
                                        </div>
                                         <div class="col-md-1 col-sm-1">
                                            <button type="button" id="btn-info-cell_`+ num + `" onclick="mostrarDetalles(` + num + `); return false;" class="btn btn-primary btn-sm" style="display:none"  title="Ver Detalles"> <i class="fa-solid fa-eye"></i></button>
                                        </div>
                                        <div class="col-md-1">
                                            <input type="button" value="Borrar" class="btn btn-danger" onclick="borrarPieza(`+ num + `); return false;">
                                        </div>
                                    </div>

                                                   `
            );
            $("#div_items_ihs_" + num).hide().fadeIn(700);

            // Initialize Select2 Elements (debe ir después de asignar el valor)
            $('.select2bs4').select2({
                theme: 'bootstrap4'
            })

            num++;

            asignaEvents();
        }

    //obtiene los select de las categorias
    function obtieneSelect() {
        let stringSelects = $('#select_options').html();


        return stringSelects;
        }

        function borrarPieza(id) {

            $("#div_items_ihs_" + id).fadeOut(0, function () {
                $(this).remove();
            });
        }

    function mostrarDetalles(contador) {
        var e = document.getElementById("BG_IHS_rel_combinacion[" + contador + "].id_ihs_item");
        var value = e.value;
        window.open('/BG_IHS_item/Details/' + value + '', 'popup', "width=" + screen.width * .80 + ",height=" + screen.height * .80 + "");

    }
        window.onload = function () {
            clicMenu(1);
        }
    </script>
}


