            background-color: white;
            color: green;
            border: 2px solid green;
            padding: 1px 20px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
        }

        .evaluar-link:hover, .evaluar-link:active {
            background-color: green;
            color: white;
        }

        .detalles-link:link, .detalles-link:visited {
            background-color: white;
            color: #009ff5;
            border: 2px solid #009ff5;
            padding: 1px 20px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
        }

        .detalles-link:hover, .detalles-link:active {
            background-color: #009ff5;
            color: white;
        }

        .pagination {
            display: inline-block;
        }

