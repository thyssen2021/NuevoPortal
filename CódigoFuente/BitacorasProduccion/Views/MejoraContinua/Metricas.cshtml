@section scripts
{
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    @Scripts.Render(Url.Content("~/Content/vendors/sweetalert2/sweetalert2.min.js"))
    @Scripts.Render(Url.Content("~/Scripts/AlertasSweetAlert.js"))
    <!--Select2-->
    @Scripts.Render(Url.Content("~/Content/vendors/select2/js/select2.full.min.js"))
    @Scripts.Render("~/bundles/dataTables_js")
    <script src="https://cdn.jsdelivr.net/npm/chartjs-plugin-datalabels"></script>


    <script>

        // Paleta de colores fija para evitar que cambie en cada recarga
        var paletaColores = [
            '#FF6384', '#36A2EB', '#FFCE56', '#4BC0C0', '#9966FF', '#FF9F40', '#E7E9ED', '#FF6347', '#ADFF2F', '#8A2BE2'
        ];

        // Obtener los datos del modelo para Ideas por Planta
        var etiquetasPlantas = @Html.Raw(Json.Encode(Model.IdeasPorPlanta.Select(x => x.NombrePlanta)));
        var datosIdeasPlantas = @Html.Raw(Json.Encode(Model.IdeasPorPlanta.Select(x => x.TotalIdeas)));
        var coloresIdeasPlantas = paletaColores.slice(0, datosIdeasPlantas.length);


        // Crear la gráfica de Ideas por Planta utilizando Chart.js
        var ctx1 = document.getElementById('ideasPorPlantaChart').getContext('2d');
        var chart1 = new Chart(ctx1, {
            type: 'bar',
            data: {
                labels: etiquetasPlantas,
                datasets: [{
                    label: 'Cantidad de Ideas de Mejora por Planta',
                    data: datosIdeasPlantas,
                    backgroundColor: coloresIdeasPlantas,
                    borderColor: coloresIdeasPlantas,
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    datalabels: {
                        formatter: function (value, context) {
                            return value;
                        },
                        color: '#000',
                        font: {
                            weight: 'bold'
                        }
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            },
            plugins: [ChartDataLabels]
        });

         // Gráfica de Pastel: Solicitudes por Estatus
        var etiquetasEstatus = @Html.Raw(Json.Encode(Model.SolicitudesPorEstatus.Select(x => x.Estatus)));
        var datosEstatus = @Html.Raw(Json.Encode(Model.SolicitudesPorEstatus.Select(x => x.Total)));
        var coloresEstatus = paletaColores.slice(0, datosEstatus.length);

        var ctx5 = document.getElementById('solicitudesPorEstatusChart').getContext('2d');
        var chart5 = new Chart(ctx5, {
            type: 'bar',
            data: {
                labels: etiquetasEstatus,
                datasets: [{
                    label: 'Cantidad de Solicitudes por Estatus',
                    data: datosEstatus,
                    backgroundColor: coloresEstatus,
                    borderColor: coloresEstatus,
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    legend: {
                        position: 'top',
                    },
                    datalabels: {
                        formatter: function (value, context) {
                            return value;
                        },
                        color: '#000',
                        font: {
                            weight: 'bold'
                        }
                    }
                }
            },
            plugins: [ChartDataLabels]
        });

         // Gráfica: Clasificación de Ideas (En Equipo vs Individual)
        var etiquetasProponente = @Html.Raw(Json.Encode(Model.IdeasPorProponente.Select(x => x.Tipo)));
        var datosProponente = @Html.Raw(Json.Encode(Model.IdeasPorProponente.Select(x => x.Total)));
        var coloresProponente = ['#4BC0C0', '#FF6384'];

        var ctx6 = document.getElementById('ideasPorProponenteChart').getContext('2d');
        var chart6 = new Chart(ctx6, {
            type: 'bar',
            data: {
                labels: etiquetasProponente,
                datasets: [{
                    label: 'Cantidad de Ideas por Tipo de Proponente',
                    data: datosProponente,
                    backgroundColor: coloresProponente,
                    borderColor: coloresProponente,
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    legend: {
                        position: 'top',
                    },
                    datalabels: {
                        formatter: function(value, context) {
                            return value;
                        },
                        color: '#000',
                        font: {
                            weight: 'bold'
                        }
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            },
            plugins: [ChartDataLabels]
        });

          // Gráfica: Ideas por Eliminación de Desperdicio
            var etiquetasDesperdicio = @Html.Raw(Json.Encode(Model.IdeasPorDesperdicio.Select(x => x.Desperdicio)));
            var datosDesperdicio = @Html.Raw(Json.Encode(Model.IdeasPorDesperdicio.Select(x => x.Total)));
            var coloresDesperdicio = ['#36A2EB', '#FF6384', '#FFCE56', '#4BC0C0', '#9966FF', '#FF9F40'];

            var ctx7 = document.getElementById('ideasPorDesperdicioChart').getContext('2d');
            var chart7 = new Chart(ctx7, {
                type: 'bar',
                data: {
                    labels: etiquetasDesperdicio,
                    datasets: [{
                        label: 'Cantidad de Ideas por Eliminación de Desperdicio',
                        data: datosDesperdicio,
                        backgroundColor: coloresDesperdicio,
                        borderColor: coloresDesperdicio,
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    plugins: {
                        legend: {
                            position: 'top',
                        },
                        datalabels: {
                            formatter: function(value, context) {
                                return value;
                            },
                            color: '#000',
                            font: {
                                weight: 'bold'
                            }
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true
                        }
                    }
                },
                plugins: [ChartDataLabels]
            });


            // Gráfica: Ideas por Nivel de Impacto
            var etiquetasImpacto = @Html.Raw(Json.Encode(Model.IdeasPorImpacto.Select(x => x.Impacto)));
            var datosImpacto = @Html.Raw(Json.Encode(Model.IdeasPorImpacto.Select(x => x.Total)));
            var totalIdeasImpacto = datosImpacto.reduce((a, b) => a + b, 0);
            var coloresImpacto = ['#FF6384', '#36A2EB', '#FFCE56', '#4BC0C0', '#9966FF', '#FF9F40'];

            var ctx8 = document.getElementById('ideasPorImpactoChart').getContext('2d');
            var chart8 = new Chart(ctx8, {
                type: 'bar',
                data: {
                    labels: etiquetasImpacto,
                    datasets: [{
                        label: 'Cantidad de Ideas por Nivel de Impacto',
                        data: datosImpacto,
                        backgroundColor: coloresImpacto,
                        borderColor: coloresImpacto,
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    plugins: {
                        legend: {
                            position: 'top',
                        },
                        datalabels: {
                            formatter: function (value, context) {
                                var porcentaje = ((value / totalIdeasImpacto) * 100).toFixed(2) + "%";
                                return value + ' (' + porcentaje + ')';
                            },
                            color: '#000',
                            font: {
                                weight: 'bold'
                            }
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true
                        }
                    }
                },
                plugins: [ChartDataLabels]
            });

        // Gráfica: Ideas de Mejora por Mes de Captura y Planta
        var ideasPorMesPlanta = @Html.Raw(Json.Encode(Model.IdeasPorMesPlanta));
        var meses = [...new Set(ideasPorMesPlanta.map(item => item.MesPlanta.split('-').slice(0, 2).join('-')))].sort(); // Obtener los meses únicos
        var plantas = [...new Set(ideasPorMesPlanta.map(item => item.PlantaNombre))]; // Obtener nombres únicos de las plantas

        // Definir una paleta de colores manualmente
        var colores = [
            '#FF6384', '#36A2EB', '#FFCE56', '#4BC0C0', '#9966FF', '#FF9F40',
            '#F7464A', '#46BFBD', '#FDB45C', '#949FB1', '#4D5360', '#AC64AD'
        ]; // Puedes añadir más colores si hay más plantas

        // Crear un dataset por cada planta
        var datasets = plantas.map((planta, index) => {
            var data = meses.map(mes => {
                var item = ideasPorMesPlanta.find(x => x.PlantaNombre === planta && x.MesPlanta.startsWith(mes));
                return item ? item.Total : 0;
            });

            var color = colores[index % colores.length]; // Usar un color de la paleta definida

            return {
                label: planta,
                data: data,
                backgroundColor: Chart.helpers.color(color).alpha(0.5).rgbString(),
                borderColor: color,
                borderWidth: 2,
                fill: false
            };
        });

        var ctx9 = document.getElementById('ideasPorMesPlantaChart').getContext('2d');
        var chart9 = new Chart(ctx9, {
            type: 'line',
            data: {
                labels: meses,
                datasets: datasets
            },
            options: {
                responsive: true,
                plugins: {
                    legend: {
                        position: 'top',
                    },
                    datalabels: {
                        formatter: function(value, context) {
                            return value;
                        },
                        color: '#000',
                        font: {
                            weight: 'bold'
                        }
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true
                    },
                    x: {
                        type: 'category' // Cambiar el tipo de eje para etiquetas categóricas
                    }
                }
            },
            plugins: [ChartDataLabels]
        });

        // Gráfica: Solicitudes por Área y Planta
        var solicitudesPorAreaYPlanta = @Html.Raw(Json.Encode(Model.SolicitudesPorAreaYPlanta));
        var areas = [...new Set(solicitudesPorAreaYPlanta.map(item => item.AreaNombre))]; // Obtener nombres únicos de las áreas
        var plantas = [...new Set(solicitudesPorAreaYPlanta.map(item => item.PlantaNombre))]; // Obtener nombres únicos de las plantas

        // Definir una paleta de colores manualmente
        var colores = [
            '#FF6384', '#36A2EB', '#FFCE56', '#4BC0C0', '#9966FF', '#FF9F40',
            '#F7464A', '#46BFBD', '#FDB45C', '#949FB1', '#4D5360', '#AC64AD'
        ]; // Puedes añadir más colores si hay más plantas

        // Crear un dataset por cada planta
        var datasetsAreaYPlanta = plantas.map((planta, index) => {
            var data = areas.map(area => {
                var item = solicitudesPorAreaYPlanta.find(x => x.PlantaNombre === planta && x.AreaNombre === area);
                return item ? item.Total : 0;
            });

            var color = colores[index % colores.length]; // Usar un color de la paleta definida

            return {
