@model Portal_2_0.Models.IM_Idea_mejora

@{
    ViewBag.Active = "Create";
    ViewBag.Title = "Captura Nueva Idea";
    Layout = "~/Views/Shared/_MejoraContinua.cshtml";


    int contadorProponentes = 100;

    List<Portal_2_0.Models.empleados> listadoEmpleado = (List<Portal_2_0.Models.empleados>)ViewBag.ListadoEmpleados;
    List<Portal_2_0.Models.IM_cat_impacto> clasificacionImpactoList = (List<Portal_2_0.Models.IM_cat_impacto>)ViewBag.ClasificacionImpactoList;
    List<Portal_2_0.Models.IM_cat_desperdicio> desperdicioList = (List<Portal_2_0.Models.IM_cat_desperdicio>)ViewBag.DesperdicioList;


}

