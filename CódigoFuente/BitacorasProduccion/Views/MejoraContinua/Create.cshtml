<h2>Create</h2>

@using (Html.BeginForm("Create", null, FormMethod.Post, new { enctype = "multipart/form-data", id = "formulario" }))
{
    @Html.AntiForgeryToken()
    <input type="hidden" name="cambio_documento" id="cambio_documento" value="0" />
    <input type="hidden" name="tipo_idea" id="tipo_idea" value="Idea de Mejora" />


    <div class="container-main border">
        <div class="">
            <h4 style="font-weight: bold; color: #009ff5; padding-top:20px; text-align:center">@ViewBag.Title</h4>
            <hr />
            @if (!Html.ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger" role="alert">
                    @Html.ValidationSummary("", "Advertencia:")
                </div>
            }
            <div class="card">
                <div class="card-header">DATOS GENERALES</div>
                <div class="card-body">


                    <div class="form-group row">
                        <!-- Fecha Captura -->
                        @Html.LabelFor(model => model.id, new { @class = "etiqueta label-align col-md-1" })
                        <div class=" col-md-7">
                            <input type="text" class="form-control col-md-2" readonly />
                        </div>

                        @Html.LabelFor(model => model.captura, new { @class = "etiqueta label-align col-md-2" })
                        <div class=" col-md-2">
                            @Html.EditorFor(model => model.captura, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                            @Html.ValidationMessageFor(model => model.captura, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group row">
                        @Html.LabelFor(model => model.titulo, new { @class = "etiqueta label-align col-md-1" })
                        <div class=" col-md-11">
                            @Html.EditorFor(model => model.titulo, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                            @Html.ValidationMessageFor(model => model.titulo, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group row">
                        @Html.LabelFor(model => model.clave_planta, htmlAttributes: new { @class = "etiqueta label-align col-md-1" })
                        <div class="col-md-3">
                            @Html.DropDownList(nameof(Portal_2_0.Models.IM_Idea_mejora.clave_planta), null, htmlAttributes: new { @class = "form-control select2bs4", @style = "width:100%", @required = "required" })
                            @Html.ValidationMessageFor(model => model.clave_planta, "", new { @class = "text-danger" })
                        </div>
                        @*@Html.LabelFor(model => model.tipo_idea, htmlAttributes: new { @class = "etiqueta label-align col-md-3" })
                            <div class="col-md-3">
                                @Html.DropDownList(nameof(Portal_2_0.Models.IM_Idea_mejora.tipo_idea), null, htmlAttributes: new { @class = "form-control select2bs4", @style = "width:100%", @required = "required" })
                                @Html.ValidationMessageFor(model => model.tipo_idea, "", new { @class = "text-danger" })
                            </div>*@

                    </div>

                </div>
            </div>
            <hr />
            <div class="card">
                <div class="card-header">PROPONENTES</div>
                <div class="card-body">


                    <div id="div_proponentes">


                        @foreach (Portal_2_0.Models.IM_rel_proponente proponente in Model.IM_rel_proponente)
                        {
                            @* Necesario para auto binding *@
                            <input type="hidden" name="IM_rel_proponente.Index" id="IM_rel_proponente.Index" value="@contadorProponentes" />

                            <div class="form-group row" id="div_proponentes_@contadorProponentes">
                                <label class="etiqueta label-align col-md-2" for="IM_rel_proponente[@contadorProponentes].id_empleado">
                                    Proponente
                                </label>
                                <div class="col-md-7">
                                    <select name="IM_rel_proponente[@contadorProponentes].id_empleado" id="IM_rel_proponente[@contadorProponentes].id_empleado" class="categoria form-control select2bs4" style="width:100%" required>
                                        <option value=''>-- Seleccione un valor --</option>

                                        @foreach (Portal_2_0.Models.empleados empleado in listadoEmpleado)
                                        {
                                            <option value="@empleado.id" @(proponente.id_empleado == empleado.id ? "selected" : null )>@empleado.ConcatNumEmpleadoNombre</option>

                                        }

                                    </select>
                                    <span class="field-validation-valid text-danger" data-valmsg-for="IM_rel_proponente[@contadorProponentes].id_empleado" data-valmsg-replace="true"></span>
                                </div>

                                <div class="col-md-1">
                                    <input type="button" value="Borrar" class="btn btn-danger" onclick="borrarProponente(@contadorProponentes); return false;">
                                </div>
                            </div>

                            contadorProponentes++;
                        }
                    </div>
                    <div class="form-group row">
                        <div class="col-md-11" style="padding-top:25px;">
                            <input type="button" value="Agregar" class="btn btn-round btn-warning float-right" onclick="AgregarProponente(); return false;">
                        </div>
                    </div>

                </div>
            </div>
            <hr />

            <div class="card">
                <div class="card-header">CLASIFICACIÓN DE LA PROPUESTA DE MEJORA</div>
                <div class="card-body">
                    <div class="form-group row">

                        @foreach (var item in clasificacionImpactoList)
                        {

                            <div class="col-md-3 col-sm-3">
                                <div class="col-md-12 col-sm-12">
                                    <div class="checkbox">
                                        <label style="color:#757575;">
                                            <input type="checkbox" name="SelectedImpacto" value="impacto_@item.id" @(Model.IM_rel_impacto.Any(x => x.catalogoIdeaMejoraImpactoClave == item.id) == true ? "checked" : null )> @item.descripcion
                                        </label>
                                    </div>
                                </div>
                            </div>
                        }

                    </div>
                </div>
            </div>


            <hr />

            <div class="card">
                <div class="card-header">DESCRIPCIÓN DE LA IDEA DE MEJORA</div>
                <div class="card-body">
                    <div class="row form-group">

                        <div class="col-md-6 col-sm-6 ">
                            @Html.LabelFor(model => model.situacionActual, new { @class = "etiqueta col-md-12 col-sm-12" })
                            <div class="col-md-12 col-sm-12 ">
                                @Html.TextAreaFor(model => model.situacionActual, new { @class = "form-control", @rows = "6", @autocomplete = "off", @required = "required" })
                                @Html.ValidationMessageFor(model => model.situacionActual, "", new { @class = "text-danger" })
                            </div>
                            @Html.LabelFor(model => model.objetivo, new { @class = "etiqueta col-md-12 col-sm-12" })
                            <div class="col-md-12 col-sm-12 ">
                                @Html.TextAreaFor(model => model.objetivo, new { @class = "form-control", @rows = "6", @autocomplete = "off", @required = "required" })
                                @Html.ValidationMessageFor(model => model.objetivo, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-md-6 col-sm-6 ">
                            @Html.LabelFor(model => model.descripcion, new { @class = "etiqueta col-md-12 col-sm-12" })
                            <div class="col-md-12 col-sm-12 ">
                                @Html.TextAreaFor(model => model.descripcion, new { @class = "form-control", @rows = "14", @autocomplete = "off", @required = "required" })
                                @Html.ValidationMessageFor(model => model.descripcion, "", new { @class = "text-danger" })
                            </div>
                        </div>


                    </div>
                </div>
            </div>



            <hr />

            <div class="card">
                <div class="card-header">ELIMINACIÓN/REDUCCIÓN DE DESPERDICIO (SÍ APLICA)</div>
                <div class="card-body">
                    <div class="row form-group">

                        @foreach (var item in desperdicioList)
                        {

                            <div class="col-md-3 col-sm-3">
                                <div class="col-md-12 col-sm-12">
                                    <div class="checkbox">
                                        <label style="color:#757575;">
                                            <input type="checkbox" name="SelectedDesperdicio" value="desperdicio_@item.id" @(Model.IM_rel_reduccion_desperdicio.Any(x => x.catalogoIdeaMejoraDesperdicioClave == item.id) == true ? "checked" : null )> @item.descripcion
                                        </label>
                                    </div>
                                </div>
                            </div>
                        }


                    </div>
                </div>
            </div>



            <hr />
            @if (!Html.ViewData.ModelState.IsValid && (bool)ViewBag.ArchivosPrevios == true)
            {
                <div class="alert alert-danger" role="alert">
                    Indique nuevamente los archivos de evidencias.
                </div>
            }
            <div class="card">
                <div class="card-header">PORTAFOLIO DE EVIDENCIAS (OPCIONAL)</div>
                <div class="card-body">
                    <div class="form-group row">
                        <label class="control-label col-md-3 label-align etiqueta">@Html.DisplayNameFor(model => model.PostedFile1)</label>
                        <div class="col-md-6">

                            <div class="input-group">
                                <div class="custom-file">
                                    @Html.TextBoxFor(m => m.PostedFile1, new { @class = "custom-file-input", type = "file" })
                                    <label class="custom-file-label" for="PostedFileSolicitud_1" style="text-align:left" data-browse="Seleccionar">Seleccione un archivo...</label>
                                </div>
                            </div>
                            @Html.ValidationMessageFor(m => m.PostedFile1, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="control-label col-md-3 label-align etiqueta">@Html.DisplayNameFor(model => model.PostedFile2) </label>
                        <div class="col-md-6">

                            <div class="input-group">
                                <div class="custom-file">
                                    @Html.TextBoxFor(m => m.PostedFile2, new { @class = "custom-file-input", type = "file" })
                                    <label class="custom-file-label" for="PostedFileSolicitud_2" style="text-align:left" data-browse="Seleccionar">Seleccione un archivo...</label>
                                </div>
                            </div>
                            @Html.ValidationMessageFor(m => m.PostedFile2, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="control-label col-md-3 label-align etiqueta">@Html.DisplayNameFor(model => model.PostedFile3) </label>
                        <div class="col-md-6">

                            <div class="input-group">
                                <div class="custom-file">
                                    @Html.TextBoxFor(m => m.PostedFile3, new { @class = "custom-file-input", type = "file" })
                                    <label class="custom-file-label" for="PostedFileSolicitud_3" style="text-align:left" data-browse="Seleccionar">Seleccione un archivo...</label>
                                </div>
                            </div>
                            @Html.ValidationMessageFor(m => m.PostedFile3, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="control-label col-md-3 label-align etiqueta">@Html.DisplayNameFor(model => model.PostedFile4)</label>
                        <div class="col-md-6">

                            <div class="input-group">
                                <div class="custom-file">
                                    @Html.TextBoxFor(m => m.PostedFile4, new { @class = "custom-file-input", type = "file" })
                                    <label class="custom-file-label" for="PostedFileSolicitud_4" style="text-align:left" data-browse="Seleccionar">Seleccione un archivo...</label>
                                </div>
                            </div>
                            @Html.ValidationMessageFor(m => m.PostedFile4, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    @*<div class="form-group row">
                            <div class="col-md-11" style="padding-top:25px;">
                                <input type="button" value="Agregar" class="btn btn-round btn-warning float-right" onclick="AgregarArchivo(); return false;">
                            </div>
                        </div>*@

                </div>
            </div>



            <hr />

            <div class="form-group row">
                <div class="col-md-2 offset-md-10">
                    <button type="button" id="btn-ok" class="btn btn-success btn-lg float-right"><i class="fa-regular fa-floppy-disk"></i> Guardar</button>
                </div>
            </div>
        </div>
    </div>
}

<!-- Select para empleados -->
