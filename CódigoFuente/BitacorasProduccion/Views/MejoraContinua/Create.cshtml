    <option value="">-- Seleccionar --</option>
    @foreach (var item in listadoEmpleado)
    {
        <option value="@item.id">@item.ConcatNumEmpleadoNombre</option>
    }
</div>

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    <!-- SweetAlert2 -->
    @Scripts.Render(Url.Content("~/Content/vendors/sweetalert2/sweetalert2.min.js"))
    <!--Select2-->
    @Scripts.Render(Url.Content("~/Content/vendors/select2/js/select2.full.min.js"))
    <!-- iCheck -->
    @Scripts.Render(Url.Content("~/Content/vendors/iCheck/icheck.min.js"))
    <script src="https://cdn.jsdelivr.net/npm/bs-custom-file-input/dist/bs-custom-file-input.min.js"></script>


    <script>
        //variable global para el id
        var numPropoponentes = 0;
        var numArchivos = 0;

        var textoSelectProponentes = $('#select-empleados').html();
        var documento_soporte_cambios = 1;


        $(document).ready(function () {

            // Initialize Select2 Elements (debe ir después de asignar el valor)
            $('.select2bs4').select2({
                theme: 'bootstrap4'
            })

            //inicializa en input file
            bsCustomFileInput.init()

            $('input').iCheck({
                checkboxClass: 'icheckbox_square-blue',
                radioClass: 'iradio_square-blue',
                increaseArea: '20%' // optional
            });


            //aumenta en uso cada vez que se hace un cambio en el archivo de soporte
            $(".custom-file-input").on("change", function () {
                console.log('cambio: ' + documento_soporte_cambios)
                document.getElementById('cambio_documento').value = ++documento_soporte_cambios;
            });


            $('form#formulario').submit(function () {
                $(window).unbind('beforeunload');
            });
        });

        //agreaga una fila para lotes
        function AgregarArchivo() {
            //obtine los valores de lotes
            $("#div_archivos").append(

                `
                                                                <div class="form-group row" id="div_archivos_`+ numArchivos + `">

                                                                                <label class="etiqueta label-align col-md-2" for="IM_rel_archivos[`+ numArchivos + `].id_archivo">
                                                                                    Archivo
                                                                                </label>
                                                                                <div class="col-md-7">
                                                                                      <div class="custom-file">
                                                                                        <input type="file" class="custom-file-input" name="IM_rel_archivos[`+ numArchivos + `].id_archivo"  id="IM_rel_archivos[` + numArchivos + `].id_archivo">
                                                                                        <label class="custom-file-label" for="IM_rel_archivos[`+ numArchivos + `].id_archivo">Elige un archivo...</label>
                                                                                      </div>
                                                                                    <span class="field-validation-valid text-danger" data-valmsg-for="IM_rel_archivos[` + numArchivos + `].id_archivo" data-valmsg-replace="true"></span>
                                                                                </div>

                                                                                <div class="col-md-1">
                                                                                    <input type="button" value="Borrar" class="btn btn-danger" onclick="borrarArchivo(` + numArchivos + `); return false;">
                                                                                </div>
                                                                    </div>
                                                                                                                                                                            `
            );
            $("#div_archivos_" + numArchivos).hide().fadeIn(500);


            // Initialize Select2 Elements (debe ir después de asignar el valor)
            $('.select2bs4').select2({
                theme: 'bootstrap4'
            })

            //inicializa input
            bsCustomFileInput.init()

            //aumenta el contador
            numArchivos++;
        }

        $('form #btn-ok').click(function (e) {
            let $form = $(this).closest('form');

            const swalWithBootstrapButtons = Swal.mixin({
                customClass: {
                    confirmButton: 'btn btn-success',
                    cancelButton: 'btn btn-danger'
                },
                buttonsStyling: false,
            })


            swalWithBootstrapButtons.fire({
                title: '¿Desea Continuar?',
                html: "Una vez envíada la idea de mejora, no podrán hacerse modificaciones.",
                showCancelButton: true,
                confirmButtonText: 'Aceptar',
                cancelButtonText: 'Cerrar'
            }).then((result) => {
                if (result.value) {
                    //espera a que se cierre el modal para enviar el formulario
                    setTimeout(function () {
                        $form.submit();
                    }, 900);
                }
            });

        });

        //agreaga una fila para lotes
        function AgregarProponente() {
            //obtine los valores de lotes


            $("#div_proponentes").append(

                `
                                                                <div class="form-group row" id="div_proponentes_`+ numPropoponentes + `">
                                                                                <label class="etiqueta label-align col-md-2" for="IM_rel_proponente[`+ numPropoponentes + `].id_empleado">
                                                                                    Proponente
                                                                                </label>
                                                                                <div class="col-md-7">
                                                                                        <select name="IM_rel_proponente[`+ numPropoponentes + `].id_empleado" id="IM_rel_proponente[` + numPropoponentes + `].id_empleado" class="categoria form-control select2bs4" style = "width:100%" required>
                                                                                        `+ textoSelectProponentes + `
                                                                                    </select >
                                                                                    <span class="field-validation-valid text-danger" data-valmsg-for="IM_rel_proponente[` + numPropoponentes + `].id_empleado" data-valmsg-replace="true"></span>
                                                                                </div>

                                                                                <div class="col-md-1">
                                                                                    <input type="button" value="Borrar" class="btn btn-danger" onclick="borrarProponente(` + numPropoponentes + `); return false;">
                                                                                </div>
                                                                    </div>
                                                                                                                                                                            `
            );
            $("#div_proponentes_" + numPropoponentes).hide().fadeIn(500);


            // Initialize Select2 Elements (debe ir después de asignar el valor)
            $('.select2bs4').select2({
                theme: 'bootstrap4'
            })

            //aumenta el contador
            numPropoponentes++;
        }

        function borrarProponente(id) {

            $("#div_proponentes_" + id).fadeOut(0, function () {
                $(this).remove();
            });
        }
        function borrarArchivo(id) {

            $("#div_archivos_" + id).fadeOut(0, function () {
                $(this).remove();
            });
        }

        // Warning
        $(window).on('beforeunload', function () {
            return "Los cambios no guardados se perderán.";
        });


    </script>
}




