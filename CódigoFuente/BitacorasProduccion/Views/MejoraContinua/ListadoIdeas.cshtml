@using Clases.Util;

@model IEnumerable<Portal_2_0.Models.view_ideas_mejora>

@{
    ViewBag.Title = "Listado de Ideas";
    ViewBag.Active = "ListadoIdeas";
    Layout = "~/Views/Shared/_MejoraContinua.cshtml";
    ViewBag.ControllerName = ViewContext.RouteData.Values["controller"];

    Clases.Util.MensajesSweetAlert mensajeAlerta = (Clases.Util.MensajesSweetAlert)ViewBag.MensajeAlert;



}

@section estilos
{
    <link href="~/Content/home.css" rel="stylesheet" />
    <!-- Select2 -->
    <link href="@Url.Content("~/Content/vendors/select2/css/select2.css")" rel="stylesheet">
    <link href="@Url.Content("~/Content/vendors/select2-bootstrap4-theme/select2-bootstrap4.min.css")" rel="stylesheet">

    <style>
        .titulo {
            padding-top: 70px;
            padding-bottom: 35px;
            /*padding-left: 10px;*/
            color: #009ff5;
        }

        body {
            background-image: url('../../content/images/white-background.jpg');
        }


        .color-thysssen {
            color: #009ff5 !important;
        }

        .solution_cards_box .solution_card:hover .solu_title h3,
        .solution_cards_box .solution_card:hover .solu_description p {
            color: #ffffff !important;
        }

        th {
            font-size: 14px;
        }

        td {
            font-size: 14px;
        }

        .evaluar-link:link, .evaluar-link:visited {
            background-color: white;
            color: green;
            border: 2px solid green;
            padding: 1px 20px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
        }

        .evaluar-link:hover, .evaluar-link:active {
            background-color: green;
            color: white;
        }

        .detalles-link:link, .detalles-link:visited {
            background-color: white;
            color: #009ff5;
            border: 2px solid #009ff5;
            padding: 1px 20px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
        }

        .detalles-link:hover, .detalles-link:active {
            background-color: #009ff5;
            color: white;
        }
    </style>
}

@*Para SweetAlert*@
@if (mensajeAlerta != null)
{
    <input type="hidden" value="@mensajeAlerta.Mensaje" id="mensajeAlert" />
    <input type="hidden" value="@mensajeAlerta.getTipoMensaje()" id="mensajeAlertTipo" />
}

<div class="container-main border">
    <div class="col-md-12 col-sm-12 ">
        <div class="x_panel">
            <div class="x_title">
                <h2>-</h2>

                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <div class="row">
                    <div class="form-group">


                    </div>

                    <div class="col-sm-12">
                        <div class="card-box">
                            <div class="card">
                                <div class="card-header">Búsqueda</div>
                                <div class="card-body">

                                    @using (Html.BeginForm(null, null, FormMethod.Get, new { id = "buscarForm", @class = "form-horizontal form-label-left" }))
                                    {

                                        <div class="form-group row">
                                            <label class="control-label col-md-1 col-sm-1" for="planta_clave" style="text-align:right">Planta:</label>
                                            <div class="col-md-3 col-sm-3 ">
                                                @Html.DropDownList("id_planta", null, htmlAttributes: new { @class = "form-control select2bs4", @style = "width:100%" })
                                            </div>
                                            <label class="control-label col-md-1 col-sm-1" for="titulo" style="text-align:right">Título:</label>
                                            <div class="col-md-6 col-sm-6">
                                                <input type="text" class="form-control search" name="titulo" id="titulo" value="@Request.Params["titulo"]">
                                            </div>

                                        </div>
                                        <div class="form-group row">
                                            <label class="control-label col-md-1 col-sm-1" for="id_estatus" style="text-align:right">Estatus:</label>
                                            <div class="col-md-3 col-sm-3 ">
                                                @Html.DropDownList("id_estatus", null, htmlAttributes: new { @class = "form-control select2bs4", @style = "width:100%" })
                                            </div>
                                            <label class="control-label col-md-1 col-sm-1" for="fecha_inicial" style="text-align:right">Fecha Inicial:</label>
                                            <div class="col-md-2 col-sm-2">
                                                <input type="date" class="form-control search date" name="fecha_inicial" id="fecha_inicial" value="@Request.Params["fecha_inicial"]">
                                            </div>
                                            <label class="control-label col-md-1 col-sm-1" for="fecha_final" style="text-align:right">Fecha Final:</label>
                                            <div class="col-md-2 col-sm-2">
                                                <input type="date" class="form-control search date" name="fecha_final" id="fecha_final" value="@Request.Params["fecha_final"]">
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label class="control-label col-md-1 col-sm-1" for="folio" style="text-align:right">Título:</label>
                                            <div class="col-md-3 col-sm-3">
                                                <input type="text" class="form-control search" name="folio" id="folio" value="@Request.Params["folio"]">
                                            </div>
                                            <label class="control-label col-md-1 col-sm-1" for="id_proponente" style="text-align:right; padding-right:0px">Proponente:</label>
                                            <div class="col-md-5 col-sm-5">
                                                @Html.DropDownList("id_proponente", null, htmlAttributes: new { @class = "form-control select2bs4", @style = "width:100%" })
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <div class="offset-md-8 col-md-2 col-sm-2">
                                                <a href="@Url.Action("ListadoIdeas", ViewBag.ControllerName)" class="btn btn-warning float-right">
                                                    <i class="fa fa-refresh"></i> Restablecer
                                                </a>
                                            </div>
                                            <div class="col-md-2 col-sm-2">
                                                <button type="submit" class="btn btn-info float-right"><i class="fa-solid fa-magnifying-glass"></i> Buscar</button>
                                            </div>

                                        </div>
                                    }

                                </div>
                            </div>


                            <div class="form-group">


                            </div>
                            <div class="form-group">

                                <a href="@Url.Action( "Create", ViewBag.ControllerName)" class="btn btn-success">
                                    <i class="fa fa-plus-square"></i>
                                    Registrar Nueva Idea
                                </a>
                                @if (User.IsInRole(TipoRoles.IM_ADMIN))
                                {
                                    <a href="@Url.Action( "Exportar", ViewBag.ControllerName, new
                                                {
                                                    id_planta = Request.Params["id_planta"],
                                                    titulo = Request.Params["titulo"],
                                                    id_estatus = Request.Params["id_estatus"],
                                                    fecha_inicial = Request.Params["fecha_inicial"],
                                                    fecha_final = Request.Params["fecha_final"],
                                                    id_proponente = Request.Params["id_proponente"],

                                                }
                                            )" class="btn btn-success float-right" style="background-color: #117e43 ">
                                        <i class="fa-regular fa-file-excel"></i>
                                        Descargar Reporte
                                    </a>
                                }

                            </div>

                            <table id="datatable" class="table table-striped table-bordered" cellspacing="0" width="100%">
                                <tr>
                                    <th nowrap>
                                        @Html.DisplayNameFor(model => model.folio)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.nombre_planta)
                                    </th>
                                    <th nowrap>
                                        @Html.DisplayNameFor(model => model.fecha_captura)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.titulo)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.estatus_text)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.tipo_idea)
                                    </th>
                                    <th>Detalles</th>
                                    @if (User.IsInRole(TipoRoles.IM_ADMIN))
                                    {
                                        <th>Evaluar</th>
                                    }
                                </tr>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td nowrap>
                                                @Html.DisplayFor(modelItem => item.folio)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.nombre_planta)
                                            </td>
                                            <td nowrap>
                                                @(item.fecha_captura.ToString())
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.titulo)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.estatus_text)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.tipo_idea)
                                            </td>
                                            <td>
                                                @Html.ActionLink("Detalles", "Details", new { id = item.id }, new { @class = "detalles-link" })
                                            </td>
                                            @if (User.IsInRole(TipoRoles.IM_ADMIN))
                                            {
                                                <td>
                                                    @Html.ActionLink("Evaluar", "Evaluar", new { id = item.id }, new { @class = "evaluar-link" })
                                                </td>
                                            }
                                        </tr>
                                    }
                                </tbody>
                            </table>

                        </div>
                        <br />
                        @if (Model.Count() > 0)
                        {
                            <nav id="nav_paginacion" aria-label="..." style="padding-bottom: 38px;">
                                @{Html.RenderPartial("_Paginacion", Model);}
                            </nav>
                        }

                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

@section scripts
{
    @Scripts.Render(Url.Content("~/Content/vendors/sweetalert2/sweetalert2.min.js"))
    @Scripts.Render(Url.Content("~/Scripts/AlertasSweetAlert.js"))
    <!--Select2-->
    @Scripts.Render(Url.Content("~/Content/vendors/select2/js/select2.full.min.js"))
    @Scripts.Render("~/bundles/dataTables_js")

    <script>
        $(document).ready(function () {

            // Initialize Select2 Elements (debe ir después de asignar el valor)
            $('.select2bs4').select2({
                theme: 'bootstrap4'
            })

            //Envia el formulario cada vez que se modifica el combo
            $(".select2bs4").change(function () {
                EnviaFormulario();
            });

            let timeout

            //El evento lo puedes reemplazar con keyup, keypress y el tiempo a tu necesidad
            $(".search").on("keydown", function () {
                clearTimeout(timeout)
                timeout = setTimeout(() => {
                    EnviaFormulario();
                    clearTimeout(timeout)
                }, 1800)
            });

        });

        //Envía el formulario de búsqueda
        function EnviaFormulario() {

            $("#buscarForm").submit();
            $.blockUI({
                css: {
                    border: 'none',
                    padding: '15px',
                    backgroundColor: '#000',
                    '-webkit-border-radius': '10px',
                    '-moz-border-radius': '10px',
                    opacity: .3,
                    color: '#fff'
                },
                message: '<h3>Cargando...</h3>'

            });

        }
    </script>
}