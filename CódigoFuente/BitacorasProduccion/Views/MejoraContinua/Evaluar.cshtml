                            <div class="col-md-2 col-sm-2" style="padding-top: 5px">
                                @Html.EditorFor(model => model.enProcesoBool, new { htmlAttributes = new { @class = "form-control", @autocomplete = "off" } })
                                @Html.ValidationMessageFor(model => model.enProcesoBool, "", new { @class = "text-danger" })
                            </div>
                        </div>


                        <div class="form-group row">


                        </div>
                    </div>
                </div>
                <!--Disabled TAB-->
                <div class="card div_impacto_clasificacion_disabled" style="display:@(ImpactoClasificacionEnabled ? "none":string.Empty)">
                    <div class="card-header card-evaluacion-disabled">3.- IMPACTO Y CLASIFICACIÓN</div>
                </div>
                <!-- Fin disabled tab -->
                <hr />
                <div class="card div_implementacion" style="display:@(!ImplementacionEnabled ? "none":string.Empty)">
