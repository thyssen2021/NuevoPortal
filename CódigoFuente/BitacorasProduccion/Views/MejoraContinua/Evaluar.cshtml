                                    @Html.TextAreaFor(model => model.objetivo, new { @class = "form-control", @rows = "6", @autocomplete = "off", @readonly = "readonly" })
                                </div>
                            </div>
                            <div class="col-md-6 col-sm-6 ">
                                @Html.LabelFor(model => model.descripcion, new { @class = "etiqueta col-md-12 col-sm-12" })
                                <div class="col-md-12 col-sm-12 ">
                                    @Html.TextAreaFor(model => model.descripcion, new { @class = "form-control", @rows = "14", @autocomplete = "off", @readonly = "readonly" })
                                </div>
                            </div>


                        </div>
                    </div>
                </div>
                <hr />

                <div class="card">
                    <div class="card-header">ELIMINACIÓN/REDUCCIÓN DE DESPERDICIO (SÍ APLICA)</div>
                    <div class="card-body">
                        <div class="row form-group">

                            @foreach (var item in desperdicioList)
                            {

                                <div class="col-md-3 col-sm-3">
                                    <div class="col-md-12 col-sm-12">
                                        <div class="checkbox">
                                            <label style="color:#757575;">
                                                <input type="checkbox" name="SelectedDesperdicio" value="desperdicio_@item.id" @(Model.IM_rel_reduccion_desperdicio.Any(x => x.catalogoIdeaMejoraDesperdicioClave == item.id) == true ? "checked" : null ) disabled> @item.descripcion
                                            </label>
                                        </div>
                                    </div>
                                </div>
                            }


                        </div>
                    </div>
                </div>
                <hr />
                <div class="card">
                    <div class="card-header">PORTAFOLIO DE EVIDENCIAS </div>
                    <div class="card-body">

                        @if (Model.IM_rel_archivos.Any())
                        {

                            foreach (var item in Model.IM_rel_archivos)
                            {

                                <div class="form-group row">
                                    <label class="etiqueta label-align col-md-2">
                                        Archivo
                                    </label>
                                    <div class="col-md-6">
                                        <input type="text" class="form-control" value="@Html.DisplayFor(model => item.biblioteca_digital.Nombre )" readonly />
                                    </div>
                                    <div class="col-md-3">
                                        <a href="@Url.Action("DownloadFileIM","Combos", new { idDocumento = item.id_archivo})" class="btn btn-success btm-sm" title="Download">
                                            <i class="fa fa-download"></i>
                                        </a>
                                        <a href="@Url.Action("DownloadFileIM","Combos", new { idDocumento = item.id_archivo, inline=true})" class="btn btn-info btm-sm" target="_blank" title="Inline">
                                            <i class="fa-regular fa-eye"></i>
                                        </a>
                                    </div>

                                </div>
                            }
                        }
                        else
                        {
                            <p style="color:#757575">No hay archivos...</p>
                        }

                    </div>
                </div>
                <hr />

            </div>

        </div>

        @using (Html.BeginForm(null, null, FormMethod.Post, new { enctype = "multipart/form-data", id = "formulario" }))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.id)
            @Html.HiddenFor(model => model.captura)
            @Html.HiddenFor(model => model.clave_planta)
            @Html.HiddenFor(model => model.titulo)
            @Html.HiddenFor(model => model.tipo_idea)
            @Html.HiddenFor(model => model.situacionActual)
            @Html.HiddenFor(model => model.objetivo)
            @Html.HiddenFor(model => model.descripcion)


            <div id="evaluacion" class="tabcontent">

                @if (!Html.ViewData.ModelState.IsValid)
                {
                    <div class="alert alert-danger " role="alert">
                        @Html.ValidationSummary("", new { @class = "text-white" })
                    </div>
                }
                <div class="card">
                    <div class="card-header card-evaluacion" style="">DATOS GENERALES</div>
                    <div class="card-body">


                        <div class="form-group row">
                            <!-- Fecha Captura -->
                            @Html.LabelFor(model => model.id, new { @class = "etiqueta label-align col-md-1" })
                            <div class=" col-md-7">
                                <input type="text" class="form-control col-md-2" value="@Html.DisplayFor(model => model.ConcatFolio)" readonly />
                            </div>

                            @Html.LabelFor(model => model.captura, new { @class = "etiqueta label-align col-md-2" })
                            <div class=" col-md-2">
                                <input type="text" class="form-control" value="@Html.DisplayFor(model => model.captura)" readonly />
                            </div>
                        </div>

                        <div class="form-group row">
                            @Html.LabelFor(model => model.titulo, new { @class = "etiqueta label-align col-md-1" })
                            <div class=" col-md-11">
                                <input type="text" class="form-control" value="@Html.DisplayFor(model => model.titulo)" readonly />
                            </div>
                        </div>

                        <div class="form-group row">
                            @Html.LabelFor(model => model.clave_planta, htmlAttributes: new { @class = "etiqueta label-align col-md-1" })
                            <div class="col-md-3">
                                <input type="text" class="form-control" value="@Html.DisplayFor(model => model.plantas.descripcion)" readonly />
                            </div>

                        </div>

                    </div>
                </div>
                <hr />

                <div class="card">
                    <div class="card-header card-evaluacion">1.- ¿IDEA ACEPTADA / RECIBIDA?</div>
                    <div class="card-body">

                        <div class="form-group row">
                            <div class="col-md-10" style="padding-left:50px">
                                <input type="radio" id="radio_inicio_2" name="evaluacion_inicial" value="2" @(evaluacion_inicial == 2 ? "checked" : string.Empty) />
