@section Scripts {
    @Scripts.Render(Url.Content("~/Content/vendors/jquery_block_ui/jquery.blockUI.js"))

    <!-- SweetAlert2 -->
    @Scripts.Render(Url.Content("~/Content/vendors/sweetalert2/sweetalert2.min.js"))
    <!--Select2-->
    @Scripts.Render(Url.Content("~/Content/vendors/select2/js/select2.full.min.js"))
    <!-- iCheck -->
    @Scripts.Render(Url.Content("~/Content/vendors/iCheck/icheck.min.js"))
    @Scripts.Render(Url.Content("~/Content/vendors/jquery-iu/jquery-ui.min.js"))
    <!-- input mask -->
    @Scripts.Render(Url.Content("~/Content/vendors/jquery.inputmask/dist/jquery.inputmask.bundle.js"))

    <script>
        //variables globales
        var numImplementadores = 0;
        var textoSelectImplementadores = $('#select-empleados').html();

        $(document).ready(function () {
            //abre la pestaña por defecto
            if ("@recarga" !== "@true")
                document.getElementById("defaultOpen").click();
            else
                document.getElementById("valuacionOpen").click();

            // Initialize Select2 Elements (debe ir después de asignar el valor)
            $('.select2bs4').select2({
                theme: 'bootstrap4'
            });

            $('input').iCheck({
                checkboxClass: 'icheckbox_square-blue',
                radioClass: 'iradio_square-blue',
                increaseArea: '20%' // optional
            });

            $('#idea_recibida_radio_id').on('ifToggled', function (event) {

                //En caso de que se hace seleccionado
                if (event.target.checked) {
                    //del directamente relacionado
                    muestraDiv(event.target.checked, '.div_evaluacion_comite');
                    muestraDiv(false, '.div_evaluacion_comite_disabled');

                    if (document.getElementById("evaluacion_comite_1").checked) {
                        muestraDiv(event.target.checked, '.div_impacto_clasificacion');
                        muestraDiv(false, '.div_impacto_clasificacion_disabled');
                    }
                    //debe validar dos checklists
                    if (document.getElementById("enProcesoBool").checked && document.getElementById("evaluacion_comite_1").checked) {
                        muestraDiv(event.target.checked, '.div_implementacion');
                        muestraDiv(false, '.div_implementacion_disabled');
                    }


                } else {//si no selecciono
                    muestraDiv(event.target.checked, '.div_evaluacion_comite');
                    muestraDiv(event.target.checked, '.div_impacto_clasificacion');
                    muestraDiv(event.target.checked, '.div_implementacion');
                    //muestra los disabled
                    muestraDiv(true, '.div_evaluacion_comite_disabled');
                    muestraDiv(true, '.div_impacto_clasificacion_disabled');
                    muestraDiv(true, '.div_implementacion_disabled');
                }


            });

            $('#evaluacion_comite_1').on('ifToggled', function (event) {
                //se selecciono idea aceptada
                if (event.target.checked) {
                    muestraDiv(event.target.checked, '.div_impacto_clasificacion');
                    muestraDiv(false, '.div_impacto_clasificacion_disabled');

                    if (document.getElementById("enProcesoBool").checked) {
                        muestraDiv(event.target.checked, '.div_implementacion');
                        muestraDiv(false, '.div_implementacion_disabled');
                    }

                } else { // si no se selecciono
                    muestraDiv(event.target.checked, '.div_impacto_clasificacion');
                    muestraDiv(event.target.checked, '.div_implementacion');
                    muestraDiv(true, '.div_impacto_clasificacion_disabled');
                    muestraDiv(true, '.div_implementacion_disabled');
                }

            });

            $('#enProcesoBool').on('ifToggled', function (event) {
                muestraDiv(event.target.checked, '.div_implementacion');
                muestraDiv(!event.target.checked, '.div_implementacion_disabled');

            });


            $('#idea_implementada').on('ifToggled', function (event) {
                muestraDiv(event.target.checked, '.div_idea_implementada_fecha');
            });

            //combo para area
            $("#id_planta_implementacion").change(function () {
                actualizaAreas();
            });

            //agrega mask de precio
            $('.precio').inputmask({ 'alias': 'decimal', 'groupSeparator': ',', 'autoGroup': true, 'digits': 2, 'digitsOptional': false, 'prefix': '$ ', 'allowMinus': false, 'placeholder': '0', 'autoUnmask': true, 'removeMaskOnSubmit': true });


        });

        function muestraDiv(muestra, clase) {
            if (muestra) {
                $(clase).show('blind', 250);
            } else {
                $(clase).hide('blind', 200);
            }
        }

        function actualizaAreas(id) {
            let planta = $("#id_planta_implementacion option:selected").val();

            $.ajax({
                type: 'POST',
                url: '/Combos/obtieneAreasMC',
                data: { clavePlanta: planta },
                success: function (data) {
                    populateDropdown($("#areaImplementacionClave"), data);
                },
                async: true
            });

            // Initialize Select2 Elements
            $('.select2bs4').select2({
                theme: 'bootstrap4'
            })

        }

        //completa el selec con los datos recibidos
        function populateDropdown(select, data) {
            select.html('');
            $.each(data, function (id, option) {
                select.append($('<option></option>').val(option.value).html(option.name));
            });
        }

        function openTab(evt, tabName) {
            // Declare all variables
            var i, tabcontent, tablinks;

            // Get all elements with class="tabcontent" and hide them
            tabcontent = document.getElementsByClassName("tabcontent");
            for (i = 0; i < tabcontent.length; i++) {
                tabcontent[i].style.display = "none";
            }

            // Get all elements with class="tablinks" and remove the class "active"
            tablinks = document.getElementsByClassName("tablinks");
            for (i = 0; i < tablinks.length; i++) {
                tablinks[i].className = tablinks[i].className.replace(" active", "");
            }

            // Show the current tab, and add an "active" class to the button that opened the tab
            document.getElementById(tabName).style.display = "block";
            evt.currentTarget.className += " active";
        }

        //agreaga una fila para lotes
        function AgregarImplentador() {


            $("#div_implementadores").append(

                `
                <div class="form-group row" id="div_implementadores_`+ numImplementadores + `">
                               <input type="hidden" name="IM_rel_implementador.Index" id="IM_rel_implementador.Index" value="`+ numImplementadores + `" />

                                <label class="etiqueta label-align col-md-2" for="IM_rel_implementador[`+ numImplementadores + `].id_empleado">
                                    Implementador
                                </label>
                                <div class="col-md-4">
                                        <select name="IM_rel_implementador[`+ numImplementadores + `].id_empleado" id="IM_rel_implementador[` + numImplementadores + `].id_empleado" class="categoria form-control select2bs4" style = "width:100%" required>
                                        `+ textoSelectImplementadores + `
                                    </select >
                                    <span class="field-validation-valid text-danger" data-valmsg-for="IM_rel_implementador[` + numImplementadores + `].id_empleado" data-valmsg-replace="true"></span>
                                </div>
                                    <label class="etiqueta label-align col-md-1" for="IM_rel_implementador[` + numImplementadores + `].actividad">
                                        Actividad
                                    </label>
                                    <div class="col-md-4">
                                        <input type="text" name="IM_rel_implementador[` + numImplementadores + `].actividad" id="IM_rel_implementador[` + numImplementadores + `].actividad" class="form-control col-md-12 entero" value="" autocomplete="off" required>
                                        <span class="field-validation-valid text-danger" data-valmsg-for="IM_rel_implementador[` + numImplementadores + `].actividad" data-valmsg-replace="true"></span>
                                    </div>
                                <div class="col-md-1">
                                    <input type="button" value="Borrar" class="btn btn-danger" onclick="borrarImplementador(` + numImplementadores + `); return false;">
                                </div>
                    </div>
                                                                                                                                                                                                                                                  `
            );
            $("#div_implementadores_" + numImplementadores).hide().fadeIn(500);


            // Initialize Select2 Elements (debe ir después de asignar el valor)
            $('.select2bs4').select2({
                theme: 'bootstrap4'
            })

            //aumenta el contador
            numImplementadores++;
        }

        function borrarImplementador(id) {

            $("#div_implementadores_" + id).fadeOut(0, function () {
                $(this).remove();
            });
        }

        $('form #btn-ok').click(function (e) {
            let $form = $(this).closest('form');

            const swalWithBootstrapButtons = Swal.mixin({
                customClass: {
                    confirmButton: 'btn btn-success',
                    cancelButton: 'btn btn-danger'
                },
                buttonsStyling: false,
            })


            swalWithBootstrapButtons.fire({
                title: '¿Desea Continuar?',
                html: "Se guardarán los datos ingresados y se enviará un correo de notificación a los proponentes de la idea.",
                showCancelButton: true,
                confirmButtonText: 'Aceptar',
                cancelButtonText: 'Cerrar'
            }).then((result) => {
                if (result.value) {
                    //espera a que se cierre el modal para enviar el formulario
                    setTimeout(function () {
                        $form.submit();
                    }, 600);
                }
            });

        });
    </script>
}
