                                @Html.DropDownList("id_planta_implementacion", null, htmlAttributes: new { @class = "form-control select2bs4", @style = "width:100%", @required = "required" })
                                @Html.ValidationMessageFor(model => model.id_planta_implementacion, "", new { @class = "text-danger" })
                            </div>
