                                    @foreach (Portal_2_0.Models.IM_rel_implementador implementador in Model.IM_rel_implementador)
                                    {

                                        <div class="form-group row" id="div_implementadores_@contadorImplementadores">
                                            @* Necesario para auto binding *@
                                            <input type="hidden" name="IM_rel_implementador.Index" id="IM_rel_implementador.Index" value="@contadorImplementadores" />
                                            <input type="hidden" name="IM_rel_implementador[@contadorImplementadores].id" id="IM_rel_implementador[@contadorImplementadores].id" value="@implementador.id" />

                                            <label class="etiqueta label-align col-md-2" for="IM_rel_implementador[@contadorImplementadores].id_empleado">
                                                Implementador
                                            </label>
                                            <div class="col-md-4">
                                                <select name="IM_rel_implementador[@contadorImplementadores].id_empleado" id="IM_rel_implementador[@contadorImplementadores].id_empleado" class="categoria form-control select2bs4" style="width:100%" required>
                                                    <option value=''>-- Seleccione un valor --</option>

                                                    @foreach (Portal_2_0.Models.empleados empleado in listadoEmpleado)
                                                    {
                                                        <option value="@empleado.id" @(implementador.id_empleado == empleado.id ? "selected" : null )>@empleado.ConcatNumEmpleadoNombre</option>
                                                    }

                                                </select>
                                                <span class="field-validation-valid text-danger" data-valmsg-for="IM_rel_implementador[@contadorImplementadores].id_empleado" data-valmsg-replace="true"></span>
                                            </div>
                                            <label class="etiqueta label-align col-md-1" for="IM_rel_implementador[@contadorImplementadores].actividad">
                                                Actividad
                                            </label>
                                            <div class="col-md-4">
                                                <input type="text" name="IM_rel_implementador[@contadorImplementadores].actividad" id="IM_rel_implementador[@contadorImplementadores].actividad" class="form-control col-md-12 entero" value="@(!string.IsNullOrEmpty(implementador.actividad) ? implementador.actividad : string.Empty)" autocomplete="off" required>
                                                <span class="field-validation-valid text-danger" data-valmsg-for="IM_rel_implementador[@contadorImplementadores].actividad" data-valmsg-replace="true"></span>
                                            </div>
                                            <div class="col-md-1">
                                                <input type="button" value="Borrar" class="btn btn-danger" onclick="borrarImplementador(@contadorImplementadores); return false;">
                                            </div>
                                        </div>

                                        contadorImplementadores++;
                                    }

                                </div>

                                <div class="col-md-11" style="padding-top:10px; padding-bottom:50px;">
                                    <input type="button" value="Agregar" class="btn btn-round btn-warning float-right" onclick="AgregarImplentador(); return false;">
                                </div>

                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-12">
                                <hr />
                            </div>
                            <label class="etiqueta label-align col-md-2">¿Idea Implementada?</label>
                            <div class="col-md-3" style="padding-left:50px">
