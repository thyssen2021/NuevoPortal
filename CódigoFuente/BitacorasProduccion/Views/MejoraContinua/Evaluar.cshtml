                    <div class="card-body">
                        <div class="form-group row">
                            <div class="col-md-10" style="padding-left:50px">
                                <input type="radio" id="evaluacion_comite_1" name="comiteAceptada" value="1" @(Model.comiteAceptada.HasValue && Model.comiteAceptada == 1 ? "checked" : string.Empty) />
                                <label for="evaluacion_comite_1" style="color:#757575">Idea Aceptada por Comite</label>
                            </div>
                            <div class="col-md-10" style="padding-left:50px">
                                <input type="radio" id="evaluacion_comite_2" name="comiteAceptada" value="0" @(Model.comiteAceptada.HasValue && Model.comiteAceptada == 0 ? "checked" : string.Empty) />
                                <label for="evaluacion_comite_2" style="color:#757575">Idea Rechazada por Comite</label>
                            </div>
                        </div>
                    </div>
                </div>
                <!--Disabled TAB-->
                <div class="card div_evaluacion_comite_disabled" style="display:@(EvaluacionComiteEnabled?"none":string.Empty)">
                    <div class="card-header card-evaluacion-disabled">2.- EVALUACIÓN DEL COMITE</div>
                </div>
                <!-- Fin disabled tab -->
                <hr />
                <div class="card div_impacto_clasificacion" style="display:@(!ImpactoClasificacionEnabled ? "none":string.Empty)">
                    <div class="card-header card-evaluacion">3.- IMPACTO Y CLASIFICACIÓN</div>
                    <div class="card-body">
                        <div class="form-group row">
                            @*<label class="etiqueta label-align col-md-2">Clasificación de la Idea</label>
                                <div class="col-md-2" style="padding-left:50px">
                                    <input type="radio" id="clasificacion_sencilla" name="clasificacionClave" value="2" @(Model.clasificacionClave.HasValue && Model.clasificacionClave == 2 ? "checked" : string.Empty) />
                                    <label for="clasificacion_sencilla" style="color:#757575">Idea Sencilla</label>
                                </div>
                                <div class="col-md-2" style="padding-left:50px">
                                    <input type="radio" id="clasificacion_mayor" name="clasificacionClave" value="3" @(Model.clasificacionClave.HasValue && Model.clasificacionClave == 3 ? "checked" : string.Empty) />
                                    <label for="clasificacion_mayor" style="color:#757575">Idea Mayor</label>
                                </div>*@
                            @Html.ValidationMessageFor(model => model.clasificacionClave, "", new { @class = "text-danger" })

                            <div class="col-md-12">
                            </div>

                            @Html.LabelFor(model => model.nivelImpactoClave, htmlAttributes: new { @class = "etiqueta label-align   col-md-2" })
                            <div class="col-md-3">
                                @Html.DropDownList(nameof(Portal_2_0.Models.IM_Idea_mejora.nivelImpactoClave), null, htmlAttributes: new { @class = "form-control select2bs4", @style = "width:100%" })
                                @Html.ValidationMessageFor(model => model.nivelImpactoClave, "", new { @class = "text-danger" })
                            </div>

                            <div class="col-md-12">

                            </div>
                            @*Valor oculto para idea en equipo*@
                            @Html.HiddenFor(model => model.ideaEnEquipoBool)

                            @Html.LabelFor(model => model.ideaEnEquipoBool, new { @class = "etiqueta label-align col-md-2 col-sm-2" })
                            <div class="col-md-2 col-sm-2" style="padding-top: 5px">
                                @(Model.ideaEnEquipoBool?"Sí":"No")

                            </div>
                            <div class="col-md-12">
                                <hr />
                            </div>
