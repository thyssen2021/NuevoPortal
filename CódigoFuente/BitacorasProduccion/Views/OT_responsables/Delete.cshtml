@model Portal_2_0.Models.OT_responsables

@{
    ViewBag.Title = "Eliminar Responsable de OT";
    ViewBag.PrimerNivel = "orden_trabajo";
    ViewBag.SegundoNivel = "OT_responsables";
    ViewBag.ControllerName = "OT_responsables";
}

<div class="right_col" role="main">
    <div class="">

        <div class="clearfix"></div>

        <div class="row">
            <div class="col-md-12 col-sm-12  ">
                <div class="x_panel">

                    <!-- /.col -->
                    <div class="col-md-8">
                        <div class="table-responsive">
                            <h3>¿Realmente desea deshabilitar este registro?</h3>
                            <table class="table">
                                <tbody>
                                    <tr>
                                        <th>@Html.DisplayNameFor(model => model.id_empleado)</th>
                                        <td>@Model.empleados.ConcatNombre</td>
                                    </tr>

                                    <tr>
                                        <th style="width:50%"> @Html.DisplayNameFor(model => model.supervisor)</th>
                                        <td>
                                            @if (Model.supervisor)
                                            {
                                                <span>S&iacute;</span>
                                            }
                                            else
                                            {
                                                <span>NO</span>
                                            }
                                        </td>
                                    </tr>
                                    <tr>
                                        <th>@Html.DisplayNameFor(model => model.id_supervisor)</th>
                                        <td>
                                            @if (Model.empleados1 != null)
                                            {
                                                <span>@Model.empleados1.ConcatNombre</span>
                                            }
                                            else
                                            {
                                                <span>N/A</span>
                                            }
                                        </td>
                                    </tr>
                                    <tr>
                                        <th style="width:50%"> @Html.DisplayNameFor(model => model.activo)</th>
                                        <td>
                                            @if (Model.activo)
                                            {
                                                <span>Activo</span>
                                            }
                                            else
                                            {
                                                <span>Inactivo</span>
                                            }
                                        </td>
                                    </tr>

                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="col-md-12">                       
                        <p class="float-md-right">
                            @using (Html.BeginForm())
                            {
                                @Html.AntiForgeryToken()

                                <div class="form-actions no-color float-md-right">
                                    <input type="submit" value="Deshabilitar" class="btn btn-danger btm-sm" />
                                </div>
                            }
                        </p>
                    </div>
                </div>
                <div>
                    <br />
                    <a href="@Url.Action("Index", ViewBag.ControllerName)" class="btn btn-round btn-info btm-sm" title="Volver">
                        <i class="fa fa-arrow-circle-left"></i> Volver al listado
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>