@using Clases.Util;
@model IEnumerable<Portal_2_0.Models.GV_comprobacion>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";

    ViewBag.PrimerNivel = "gastos_viaje_comprobacion";
    ViewBag.ControllerName = "GV_solicitud";

    Clases.Util.MensajesSweetAlert mensajeAlerta = (Clases.Util.MensajesSweetAlert)ViewBag.MensajeAlert;

    //obtiene los filtros
    Portal_2_0.Models.Paginacion paginacionFiltros = (Portal_2_0.Models.Paginacion)ViewBag.Paginacion;


    string estatus = string.Empty, action_result = String.Empty;

    if (paginacionFiltros.ValoresQueryString["estatus"] != null)
    {
        estatus = paginacionFiltros.ValoresQueryString["estatus"].ToString();
    }
    if (paginacionFiltros.ValoresQueryString["action_result"] != null)
    {
        action_result = paginacionFiltros.ValoresQueryString["action_result"].ToString();
    }

}

@section estilos
{
    <!-- DataTables -->
    @Styles.Render("~/Content/dataTables_css")

    <!-- SweetAlert2 -->
    <link href="@Url.Content("~/Content/vendors/sweetalert2-theme-bootstrap-4/bootstrap-4.min.css")" rel="stylesheet">

    <!-- Select2 -->
    <link href="@Url.Content("~/Content/vendors/select2/css/select2.css")" rel="stylesheet">
    <link href="@Url.Content("~/Content/vendors/select2-bootstrap4-theme/select2-bootstrap4.min.css")" rel="stylesheet">
}

@*Para SweetAlert*@
@if (mensajeAlerta != null)
{
    <input type="hidden" value="@mensajeAlerta.Mensaje" id="mensajeAlert" />
    <input type="hidden" value="@mensajeAlerta.getTipoMensaje()" id="mensajeAlertTipo" />
}


<div class="right_col" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">
            </div>
        </div>

        <div class="clearfix"></div>

        <div class="row">
            <div class="col-md-12 col-sm-12 ">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>@ViewBag.Title</h2>
                        <ul class="nav navbar-right panel_toolbox">
                            @*Utilizado para mover a la derecha los iconos del card*@
                            <span style="visibility:hidden">_______</span>
                            <li>
                                <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                            </li>
                        </ul>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="card-box">

                                    <div class="form-group">
                                        @using (Html.BeginForm(null, null, FormMethod.Get, new { id = "buscarForm", @class = "form-horizontal form-label-left" }))
                                        {
                                            <div class="form-group row ">
                                                <label class="control-label col-md-1 col-sm-1" for="estatus" style="text-align:right">Estatus:</label>
                                                <div class="col-md-3 col-sm-3 ">
                                                    @Html.DropDownList("estatus", null, htmlAttributes: new { @class = "form-control select2bs4", @style = "width:100%" })
                                                </div>
                                                <div class="col-md-6 col-sm-6">
                                                </div>
                                                <div class="col-md-2 col-sm-2">
                                                    <button type="submit" class="btn btn-info float-right"><i class="fa-solid fa-magnifying-glass"></i> Buscar</button>
                                                </div>
                                            </div>
                                        }
                                        <hr />

                                    </div>

                                    @if (String.IsNullOrEmpty(estatus))
                                    {
                                        <div class="alert alert-info" role="alert">
                                            Seleccione un estatus de solicitud para mostrar los resultados.
                                        </div>
                                    }
                                    else
                                    {
                                        <table id="datatable_1" class="table table-striped table-bordered" cellspacing="0" width="100%">
                                            <thead>
                                                <tr>
                                                    <th>
                                                        @Html.DisplayNameFor(model => model.GV_solicitud.id)
                                                    </th>                                                  
                                                    <th>
                                                        @Html.DisplayNameFor(model => model.GV_solicitud.id_solicitante)
                                                    </th>
                                                    <th>
                                                        @Html.DisplayNameFor(model => model.GV_solicitud.id_empleado)
                                                    </th>
                                                    @if (action_result == "SOLICITUDESCONTROLLING")
                                                    {
                                                        <th>
                                                            @Html.DisplayNameFor(model => model.GV_solicitud.id_controlling)
                                                        </th>
                                                    }
                                                    @if (action_result == "SOLICITUDESNOMINA")
                                                    {
                                                        <th>
                                                            @Html.DisplayNameFor(model => model.GV_solicitud.id_nomina)
                                                        </th>
                                                    }
                                                    @if (action_result == "SOLICITUDESCONTABILIDAD")
                                                    {
                                                        <th>
                                                            @Html.DisplayNameFor(model => model.GV_solicitud.id_contabilidad)
                                                        </th>
                                                    }
                                                    <th>
                                                        @Html.DisplayNameFor(model => model.GV_solicitud.origen)
                                                    </th>
                                                    <th>
                                                        @Html.DisplayNameFor(model => model.GV_solicitud.destino)
                                                    </th>
                                                    <th>
                                                        @Html.DisplayNameFor(model => model.GV_solicitud.fecha_salida)
                                                    </th>
                                                    <th>
                                                        @Html.DisplayNameFor(model => model.GV_solicitud.fecha_regreso)
                                                    </th>
                                                    <th>
                                                        @Html.DisplayNameFor(model => model.GV_solicitud.comentario_rechazo)
                                                    </th>
                                                    <th>
                                                        @Html.DisplayNameFor(model => model.estatus)
                                                    </th>
                                                    <th>Acciones</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var item in Model)
                                                {
                                                    <tr>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.GV_solicitud.id)
                                                        </td>                                                    
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.GV_solicitud.empleados5.ConcatNombre)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.GV_solicitud.empleados2.ConcatNombre)
                                                        </td>
                                                        @if (action_result == "SOLICITUDESCONTROLLING")
                                                        {
                                                            <td>
                                                                @Html.DisplayFor(modelItem => item.GV_solicitud.empleados1.ConcatNombre)
                                                            </td>
                                                        }
                                                        @if (action_result == "SOLICITUDESNOMINA")
                                                        {
                                                            <td>
                                                                @Html.DisplayFor(modelItem => item.GV_solicitud.empleados4.ConcatNombre)
                                                            </td>
                                                        }
                                                        @if (action_result == "SOLICITUDESCONTABILIDAD")
                                                        {
                                                            <td>
                                                                @Html.DisplayFor(modelItem => item.GV_solicitud.empleados.ConcatNombre)
                                                            </td>
                                                        }
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.GV_solicitud.origen)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.GV_solicitud.destino)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.GV_solicitud.fecha_salida)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.GV_solicitud.fecha_regreso)
                                                        </td>
                                                        <td style="font-weight: bold; color:red">
                                                            @Html.DisplayFor(modelItem => item.GV_solicitud.comentario_rechazo)
                                                        </td>
                                                        <td>
                                                            @Bitacoras.Util.GV_comprobacion_estatus.DescripcionStatus(item.estatus)
                                                        </td>
                                                        <td nowrap>

                                                            @if (User.IsInRole(TipoRoles.GV_SOLICITUD) && action_result == "SOLICITUDES" &&
                                                                (item.estatus == Bitacoras.Util.GV_comprobacion_estatus.CREADO || item.estatus == Bitacoras.Util.GV_comprobacion_estatus.RECHAZADO_JEFE
                                                                || item.estatus == Bitacoras.Util.GV_comprobacion_estatus.RECHAZADO_CONTROLLING || item.estatus == Bitacoras.Util.GV_comprobacion_estatus.RECHAZADO_CONTABILIDAD
                                                                        || item.estatus == Bitacoras.Util.GV_comprobacion_estatus.RECHAZADO_NOMINA))
                                                            {
                                                                <a href="@Url.Action("Edit", ViewBag.ControllerName, new { id = item.GV_solicitud.id, s_estatus = estatus })" class="btn btn-success " title="Editar">
                                                                    <i class="fa-regular fa-pen-to-square"></i>
                                                                </a>
                                                            }

                                                            @if (User.IsInRole(TipoRoles.GV_SOLICITUD) && action_result == "SOLICITUDES" &&
                                                              (item.estatus == Bitacoras.Util.GV_comprobacion_estatus.CREADO || item.estatus == Bitacoras.Util.GV_comprobacion_estatus.RECHAZADO_JEFE
                                                              || item.estatus == Bitacoras.Util.GV_comprobacion_estatus.RECHAZADO_CONTROLLING || item.estatus == Bitacoras.Util.GV_comprobacion_estatus.RECHAZADO_CONTABILIDAD
                                                                      || item.estatus == Bitacoras.Util.GV_comprobacion_estatus.RECHAZADO_NOMINA))
                                                            {
                                                                <a href="@Url.Action("EnviarAJefeDirecto", ViewBag.ControllerName, new { id = item.GV_solicitud.id, s_estatus = estatus })" class="btn btn-primary " title="Enviar a Jefe Directo">
                                                                    <i class="fa-regular fa-paper-plane"></i>
                                                                </a>
                                                            }

                                                            @if (User.IsInRole(TipoRoles.GV_JEFE_DIRECTO) && action_result == "SOLICITUDESJEFEDIRECTO" &&
                                                             (item.estatus == Bitacoras.Util.GV_comprobacion_estatus.ENVIADO_A_JEFE))
                                                            {

                                                                <a href="@Url.Action("AutorizarJefeDirecto", ViewBag.ControllerName, new { id = item.GV_solicitud.id, s_estatus = estatus })" class="btn btn-success " title="Autorizar/Rechazar">
                                                                    <i class="fa-regular fa-circle-check"></i>
                                                                </a>
                                                            }

                                                            @if (User.IsInRole(TipoRoles.GV_CONTROLLING) && action_result == "SOLICITUDESCONTROLLING" &&
                                                              (item.estatus == Bitacoras.Util.GV_comprobacion_estatus.ENVIADO_CONTROLLING))
                                                            {

                                                                <a href="@Url.Action("AutorizarControlling", ViewBag.ControllerName, new { id = item.GV_solicitud.id, s_estatus = estatus })" class="btn btn-success " title="Autorizar/Rechazar">
                                                                    <i class="fa-regular fa-circle-check"></i>
                                                                </a>
                                                            }
                                                            @if (User.IsInRole(TipoRoles.GV_NOMINA) && action_result == "SOLICITUDESNOMINA" &&
                                                             (item.estatus == Bitacoras.Util.GV_comprobacion_estatus.ENVIADO_NOMINA ))
                                                            {

                                                                <a href="@Url.Action("AutorizarNomina", ViewBag.ControllerName, new { id = item.GV_solicitud.id, s_estatus = estatus })" class="btn btn-success " title="Confirmar">
                                                                    <i class="fa-regular fa-circle-check"></i>
                                                                </a>
                                                            }
                                                            @if (User.IsInRole(TipoRoles.GV_CONTABILIDAD) && action_result == "SOLICITUDESCONTABILIDAD" &&
                                                             (item.estatus == Bitacoras.Util.GV_comprobacion_estatus.CONFIRMADO_NOMINA ))
                                                            {

                                                                <a href="@Url.Action("AutorizarContabilidad", ViewBag.ControllerName, new { id = item.GV_solicitud.id, s_estatus = estatus })" class="btn btn-success " title="Confirmar">
                                                                    <i class="fa-regular fa-circle-check"></i>
                                                                </a>
                                                            }
                                                            @if (User.IsInRole(TipoRoles.GV_SOLICITUD) && action_result == "SOLICITUDES" &&
                                                             (item.estatus == Bitacoras.Util.GV_comprobacion_estatus.CONFIRMADO_NOMINA || item.estatus == Bitacoras.Util.GV_comprobacion_estatus.CONFIRMADO_CONTABILIDAD))
                                                            {

                                                                <a href="@Url.Action("ConfirmarUsuario", ViewBag.ControllerName, new { id = item.GV_solicitud.id, s_estatus = estatus })" class="btn btn-success " title="Confirmar">
                                                                    <i class="fa-regular fa-circle-check"></i>
                                                                </a>
                                                            }
                                                            @if (User.IsInRole(TipoRoles.GV_SOLICITUD) && action_result == "SOLICITUDES" &&
                                                            (item.estatus == Bitacoras.Util.GV_comprobacion_estatus.FINALIZADO))
                                                            {

                                                                <a href="@Url.Action("ComprobacionGastos", "ComprobacionGV", new { id = item.GV_solicitud.id, s_estatus = estatus })" class="btn btn-success " title="Comprobar gastos">
                                                                    <i class="fa-solid fa-check-to-slot"></i>
                                                                </a>
                                                            }


                                                            <a href="@Url.Action("Details", ViewBag.ControllerName, new { id = item.GV_solicitud.id })" class="btn btn-secondary " title="Detalles">
                                                                <i class="fa fa-info-circle"></i>
                                                            </a>

                                                        </td>

                                                    </tr>
                                                }

                                            </tbody>
                                        </table>
                                    }
                                </div>
                                <br />
                                @if (Model.Count() > 0)
                                {
                                    <nav id="nav_paginacion" aria-label="...">
                                        @{Html.RenderPartial("_Paginacion", Model);}
                                    </nav>
                                }

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section scripts
{
    <!-- SweetAlert2 -->
    @Scripts.Render(Url.Content("~/Content/vendors/sweetalert2/sweetalert2.min.js"))
    @Scripts.Render(Url.Content("~/Scripts/AlertasSweetAlert.js"))
    @Scripts.Render(Url.Content("~/Content/vendors/select2/js/select2.full.min.js"))
    @Scripts.Render("~/bundles/dataTables_js")

    <script>

        $(document).ready(function () {

            //inicializa los data table
            var tabla = $('#datatable_1').DataTable({
                "paging": false,
                "ordering": false,
                "searching": false,
                "scrollX": true,
                "info": false
            });

            // Initialize Select2 Elements (debe ir después de asignar el valor)
            $('.select2bs4').select2({
                theme: 'bootstrap4'
            })

            //Envia el formulario cada vez que se modifica el combo
            $(".select2bs4").change(function () {
                $("#buscarForm").submit();
                BloqueaPantalla();
            });

        });



        //agranda el tamaño de la barra
        window.onload = function () {
            clicMenu(1); //dos veces para acomodar la tabla
        }


    </script>

}


