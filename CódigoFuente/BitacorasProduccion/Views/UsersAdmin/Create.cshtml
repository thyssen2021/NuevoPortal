@using Clases.Util;
@model IdentitySample.Models.RegisterViewModel

@{
    ViewBag.Title = "Crear nuevo usuario";
    ViewBag.PrimerNivel = "usuarios";
    ViewBag.SegundoNivel = "usuarios";
    ViewBag.ControllerName = "UsersAdmin";

    //agrega los permisos por defecto
    List<string> valoresDefault = new List<string>();

    valoresDefault.Add(TipoRoles.OT_SOLICITUD);
}

@section estilos
{
    <!-- iCheck -->
    <link href="@Url.Content("~/Content/vendors/iCheck/skins/flat/green.css")" rel="stylesheet">
    <!-- Select2 -->
    <link href="@Url.Content("~/Content/vendors/select2/css/select2.css")" rel="stylesheet">
    <link href="@Url.Content("~/Content/vendors/select2-bootstrap4-theme/select2-bootstrap4.min.css")" rel="stylesheet">
}

@if (@ViewBag.TipoU != null)
{
    <input type="hidden" value="@ViewBag.TipoU" id="tipoU" />
}

@if (@ViewBag.numEmpleado != null)
{
    <input type="hidden" value="@ViewBag.numEmpleado" id="e_numEmpleado" />
}
@if (@ViewBag.NombreE != null)
{
    <input type="hidden" value="@ViewBag.NombreE" id="e_nombre" />
}
<div class="right_col" role="main">
    <div class="">
        <div class="page-title">

        </div>

        <div class="clearfix"></div>

        <div class="row">
            <div class="col-md-12 col-sm-12  ">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>@ViewBag.Title</h2>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <br />
                        @using (Html.BeginForm("Create", "UsersAdmin", FormMethod.Post, new { @class = "form-horizontal form-label-left" }))
                        {
                            @Html.AntiForgeryToken()
                            <h4>Datos de la cuenta</h4>
                            <hr />
                            @Html.ValidationSummary("", new { @class = "text-danger" })

                            <div class="item form-group">
                                <label class="col-form-label col-md-3 col-sm-3 label-align">Tipo de Usuario</label>
                                <div class="col-md-6 col-sm-6 ">
                                    <div class="radio">
                                        <label>
                                            <input type="radio" id="radioEmpleado" value="empleado" checked name="tipoUsuario"> Empleado
                                        </label>
                                    </div>
                                    <div class="radio">
                                        <label>
                                            <input type="radio" id="radioOtro" value="otro" name="tipoUsuario"> Otro
                                        </label>
                                    </div>
                                </div>
                            </div>


                            <div class="item form-group" id="divEmpleado">
                                @Html.LabelFor(model => model.IdEmpleado, new { @class = "col-form-label col-md-3 col-sm-3 label-align" })
                                <div class="col-md-6 col-sm-6 ">
                                    @Html.DropDownList("IdEmpleado", (IEnumerable<SelectListItem>)ViewBag.EmpleadosList, new { @class = "form-control select2bs4", @style = "width:100%" })
                                    @Html.ValidationMessageFor(model => model.IdEmpleado, "", new { @class = "text-danger" })
                                </div>
                            </div>


                            <div class="item form-group" id="divNombre">
                                @Html.LabelFor(model => model.Nombre, new { @class = "col-form-label col-md-3 col-sm-3 label-align" })
                                <div class="col-md-6 col-sm-6 ">
                                    @Html.TextBoxFor(m => m.Nombre, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="item form-group">
                                @Html.LabelFor(model => model.Email, new { @class = "col-form-label col-md-3 col-sm-3 label-align" })
                                <div class="col-md-6 col-sm-6 ">
                                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                                    @*@Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })*@
                                </div>
                            </div>
                            <div class="item form-group">
                                @Html.LabelFor(model => model.Password, new { @class = "col-form-label col-md-3 col-sm-3 label-align" })
                                <div class="col-md-6 col-sm-6 ">
                                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                                    @*@Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })*@
                                </div>
                                <div class="col-md-1 col-sm-1 ">
                                    <button type="button" id="btn-pass" class="btn btn-success">Generar</button>
                                </div>

                            </div>
                            <div class="item form-group">
                                @Html.LabelFor(model => model.ConfirmPassword, new { @class = "col-form-label col-md-3 col-sm-3 label-align" })
                                <div class="col-md-6 col-sm-6 ">
                                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })
                                </div>
                                <div class="col-md-1 col-sm-1 ">
                                    <span id="passwordText"></span>
                                </div>
                            </div>

                            <div class="item form-group">
                                @Html.Label("Roles", new { @class = "col-form-label col-md-3 col-sm-3 label-align" })
                                <div class="col-md-6 col-sm-6 ">
                                    @foreach (var item in (SelectList)ViewBag.RoleId)
                                    {
                                        <div class="checkbox">
                                            <label>
                                                <input type="checkbox" class="flat" name="SelectedRoles" value="@item.Value" @(valoresDefault.Contains(item.Value) ? "checked" : "")>@item.Value
                                            </label>
                                        </div>
                                    }
                                </div>
                            </div>


                            <div class="ln_solid"></div>
                            <div class="item form-group">
                                <label class="col-form-label col-md-3 col-sm-3 label-align">Enviar Email de notificaci&oacute;n</label>
                                <div class="col-md-6 col-sm-6 ">
                                    <div class="radio">
                                        <label>
                                            <input type="radio" id="radioNotificacionTrue" value="true" checked name="notificacion"> S&iacute;
                                        </label>
                                    </div>
                                    <div class="radio">
                                        <label>
                                            <input type="radio" id="radioNotificacionFalse" value="false" name="notificacion"> No
                                        </label>
                                    </div>
                                </div>
                            </div>
                            <div class="ln_solid"></div>
                            <div class="item form-group">
                                <div class="col-md-6 col-sm-6 offset-md-3">
                                    <button type="submit" class="btn btn-success">Guardar</button>
                                </div>
                            </div>
                        }
                    </div>
                </div>
                <div>
                    <br />
                    <a href="@Url.Action("Index", ViewBag.ControllerName)" class="btn btn-round btn-info btm-sm" title="Volver">
                        <i class="fa fa-arrow-circle-left"></i> Volver al listado
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <!-- iCheck -->
    @Scripts.Render(Url.Content("~/Content/vendors/iCheck/icheck.min.js"))
    @Scripts.Render(Url.Content("~/Content/vendors/select2/js/select2.full.min.js"))
    @Scripts.Render(Url.Content("~/Scripts/Forms/usuarios.js"))
}


