@model IdentitySample.Models.ApplicationUser

@{
    ViewBag.Title = "Inhabilitar usuario";
    ViewBag.PrimerNivel = "usuarios";
    ViewBag.SegundoNivel = "usuarios";
    ViewBag.ControllerName = "UsersAdmin";
    Portal_2_0.Models.empleados empleado = (Portal_2_0.Models.empleados)ViewBag.Empleado;
}



<div class="right_col" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>Usuarios</h3>
            </div>
        </div>

        <div class="clearfix"></div>

        <div class="row">
            <div class="col-md-12 col-sm-12  ">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>@ViewBag.Title</h2>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">

                        <h5>¿Realmente desea inhabilitar este usuario?</h5>
                        <br />
                        <dl class="dl-horizontal">
                            <dt>
                                @Html.DisplayNameFor(model => model.UserName)
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.UserName)
                            </dd>
                            <dt>
                                @Html.DisplayNameFor(model => model.Email)
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.Email)
                            </dd>
                            @if (empleado == null)
                            {
                                <dt>
                                    @Html.DisplayNameFor(model => model.Nombre)
                                </dt>
                                <dd>
                                    @Html.DisplayFor(model => model.Nombre)
                                </dd>
                            }

                            <dt>
                                @Html.DisplayNameFor(model => model.FechaCreacion)
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.FechaCreacion)
                            </dd>
                            @if (empleado != null)
                            {
                                <dt>
                                    Número empleado
                                </dt>
                                <dd>
                                    @empleado.numeroEmpleado
                                </dd>
                                <dt>
                                    Nombre
                                </dt>
                                <dd>
                                    @(empleado.nombre+" "+empleado.apellido1+" "+empleado.apellido2)
                                </dd>
                            }
                        </dl>

                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-actions no-color float-right">
                                <input type="submit" value="Inhabilitar" class="btn btn-danger" />
                            </div>
                        }
                    </div>
                </div>
                <div>
                    <br />
                    <a href="@Url.Action("Index", ViewBag.ControllerName)" class="btn btn-round btn-info btm-sm" title="Volver">
                        <i class="fa fa-arrow-circle-left"></i> Volver al listado
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}



