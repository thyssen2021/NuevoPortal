@model IEnumerable<Portal_2_0.Models.BG_Forecast_item>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";

    ViewBag.Title = "Elementos de Reportes";
    ViewBag.PrimerNivel = "budget_forecast";
    ViewBag.SegundoNivel = "listado_forecast";
    ViewBag.ControllerName = "BG_Forecast_reporte";

    Clases.Util.MensajesSweetAlert mensajeAlerta = (Clases.Util.MensajesSweetAlert)ViewBag.MensajeAlert;

    //obtiene los filtros
    Portal_2_0.Models.Paginacion paginacionFiltros = (Portal_2_0.Models.Paginacion)ViewBag.Paginacion;

    string id = ViewContext.RouteData.Values["id"].ToString();
    string vehicle = String.Empty;

    if (paginacionFiltros.ValoresQueryString["vehicle"] != null)
    {
        vehicle = paginacionFiltros.ValoresQueryString["vehicle"].ToString();
    }

}

