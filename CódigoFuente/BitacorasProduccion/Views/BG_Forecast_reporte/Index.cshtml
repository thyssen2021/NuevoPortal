@model IEnumerable<Portal_2_0.Models.BG_Forecast_reporte>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";

    ViewBag.Title = "Listado de Reportes de Forecast";
    ViewBag.PrimerNivel = "budget_forecast";
    ViewBag.SegundoNivel = "listado_forecast";
    ViewBag.ControllerName = "BG_Forecast_reporte";

    Clases.Util.MensajesSweetAlert mensajeAlerta = (Clases.Util.MensajesSweetAlert)ViewBag.MensajeAlert;

    //obtiene los filtros
    Portal_2_0.Models.Paginacion paginacionFiltros = (Portal_2_0.Models.Paginacion)ViewBag.Paginacion;

    ViewBag.nav_style = "nav-sm";

    //string demanda = String.Empty;

    //if (paginacionFiltros.ValoresQueryString["demanda"] != null)
    //{
    //    demanda = paginacionFiltros.ValoresQueryString["demanda"].ToString();
    //}

}

@section estilos
{
    <!-- DataTables -->
    @Styles.Render("~/Content/dataTables_css")
    <!-- SweetAlert2 -->
    <link href="@Url.Content("~/Content/vendors/sweetalert2-theme-bootstrap-4/bootstrap-4.min.css")" rel="stylesheet">

    <!-- Select2 -->
    <link href="@Url.Content("~/Content/vendors/select2/css/select2.css")" rel="stylesheet">
    <link href="@Url.Content("~/Content/vendors/select2-bootstrap4-theme/select2-bootstrap4.min.css")" rel="stylesheet">
}

@*Para SweetAlert*@
@if (mensajeAlerta != null)
{
    <input type="hidden" value="@mensajeAlerta.Mensaje" id="mensajeAlert" />
    <input type="hidden" value="@mensajeAlerta.getTipoMensaje()" id="mensajeAlertTipo" />
}

<div class="right_col" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">
            </div>
        </div>

        <div class="clearfix"></div>

        <div class="row">
            <div class="col-md-12 col-sm-12 ">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>@ViewBag.Title</h2>
                        <ul class="nav navbar-right panel_toolbox">
                            @*Utilizado para mover a la derecha los iconos del card*@
                            <span style="visibility:hidden">_______</span>
                            <li>
                                <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                            </li>
                        </ul>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="card-box">

                                    <div class="form-group">
                                        @using (Html.BeginForm(null, null, FormMethod.Get, new { id = "buscarForm", @class = "form-horizontal form-label-left" }))
                                        {
                                            <div class="form-group row ">
                                                <label class="control-label col-md-1 col-sm-1" for="id" style="text-align:right">Reporte:</label>
                                                <div class="col-md-3 col-sm-3 ">
                                                    @Html.DropDownList("id", null, htmlAttributes: new { @class = "form-control select2bs4", @style = "width:100%" })
                                                </div>
                                                <div class="col-md-2 col-sm-2">
                                                    <button type="submit" class="btn btn-info float-right"><i class="fa-solid fa-magnifying-glass"></i> Buscar</button>
                                                </div>
                                            </div>
                                        }
                                        <hr />
                                    </div>

                                    <div class="form-group">
                                        <div class="form-group">
                                            <a href="@Url.Action("Create", ViewBag.ControllerName)" class="btn btn-success">
                                                <i class="fa-solid fa-circle-plus"></i>
                                                Agregar Nuevo Reporte
                                            </a>
                                            <a href="@Url.Action("FormatoPlantilla", ViewBag.ControllerName)" class="btn btn-info">
                                                <i class="fa-solid fa-file-arrow-down"></i>
                                                Descargar plantilla de carga
                                            </a>
                                            <a href="@Url.Action("GestionarCargas", "BG_Forecast_reporte")" class="btn btn-primary" style="background-color: #00487c; border-color: #00487c;">
                                                <i class="fa-solid fa-file-excel"></i>
                                                Gestionar Cargas Excel
                                            </a>
                                            <button class="btn btn-primary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                <i class="fa-solid fa-database"></i> Catálogos
                                            </button>
                                            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                                <a href="@Url.Action("Index", "BG_Forecast_cat_defaults")" class="dropdown-item">
                                                    Valores por Defecto
                                                </a>
                                                <a href="@Url.Action("Index", "BG_Forecast_cat_historico_scrap")" class="dropdown-item">
                                                    Histórico Scrap
                                                </a>
                                                <a href="@Url.Action("Index", "BG_Forecast_cat_clientes")" class="dropdown-item">
                                                    Clientes
                                                </a>
                                                <a href="@Url.Action("Index", "BG_Forecast_cat_historico_ventas")" class="dropdown-item">
                                                    Histórico Ventas
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                    <br />
                                    <div class="row">

                                        <div class="col-sm-12">
                                            <div class="card-box table-responsive">
                                                <table id="datatable_1" class="table table-striped table-bordered nowrap" cellspacing="0" width="100%">
                                                    <thead>
                                                        <tr>
                                                            <th width="0%">
                                                                @Html.DisplayNameFor(model => model.id)
                                                            </th>
                                                            <th>
                                                                @Html.DisplayNameFor(model => model.fecha)
                                                            </th>
                                                            <th>
                                                                @Html.DisplayNameFor(model => model.descripcion)
                                                            </th>
                                                            <th>
                                                                @Html.DisplayNameFor(model => model.id_ihs_version)
                                                            </th>
                                                            <th>
                                                                @Html.DisplayNameFor(model => model.activo)
                                                            </th>
                                                            <th>Acciones</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        @foreach (var item in Model)
                                                        {
                                                            <tr>
                                                                <td>
                                                                    @Html.DisplayFor(modelItem => item.id)
                                                                </td>
                                                                <td>
                                                                    @Html.DisplayFor(modelItem => item.fecha)
                                                                </td>
                                                                <td>
                                                                    @Html.DisplayFor(modelItem => item.descripcion)
                                                                </td>
                                                                <td>
                                                                    @Html.DisplayFor(modelItem => item.BG_IHS_versiones.ConcatVersion)
                                                                </td>
                                                                <td>
                                                                    @if (item.activo)
                                                                    {
                                                                        <span>Activo</span>
                                                                    }
                                                                    else
                                                                    {
                                                                        <span>Inactivo</span>
                                                                    }
                                                                </td>
                                                                <td>
                                                                    <a href="@Url.Action("EditarReporteGeneral", ViewBag.ControllerName, new { id = item.id})" class="btn btn-info btn-sm" style="background-color: #8e0607" data-toggle="tooltip" data-placement="bottom" data-html="true" title="Editar datos generales / Cargar nuevo reporte">
                                                                        <i class="fa-solid fa-file-lines"></i>
                                                                    </a>
                                                                    <a href="@Url.Action("EditarReporte", ViewBag.ControllerName, new { id = item.id})" class="btn btn-success btn-sm" data-toggle="tooltip" data-placement="bottom" data-html="true" title="Editar valores">
                                                                        <i class="fa-regular fa-pen-to-square"></i>
                                                                    </a>
                                                                    <a href="@Url.Action("EditarAsociacionIHS", ViewBag.ControllerName, new { id = item.id})" class="btn btn-primary btn-sm" data-toggle="tooltip" data-placement="bottom" data-html="true" title="Editar Asociaciones">
                                                                        <i class="fa-solid fa-tags"></i>
                                                                    </a>
                                                                    <a href="@Url.Action("GenerarReporte", ViewBag.ControllerName, new { id = item.id})" class="btn btn-primary btn-sm" style="background-color: #00487c" data-toggle="tooltip" data-placement="bottom" data-html="true" title="Generar Reporte">
                                                                        <i class="fa-solid fa-book"></i>
                                                                    </a>
                                                                    <button type="button" class="btn btn-success btn-sm" style="background-color: #415d43" onclick="BuscaReferenciasIHS(@item.id)" data-toggle="tooltip" data-placement="bottom" data-html="true" title="Actualizar Referencias Automáticamente">
                                                                        <i class="fa-solid fa-arrows-rotate"></i>
                                                                    </button>
                                                                    <a href="@Url.Action("Details", ViewBag.ControllerName, new { id = item.id})" class="btn btn-secondary btn-sm" data-toggle="tooltip" data-placement="bottom" data-html="true" title="Detalles">
                                                                        <i class="fa fa-info-circle"></i>
                                                                    </a>
                                                                    <a href="@Url.Action("ClonarReporte", ViewBag.ControllerName, new { id = item.id})" class="btn btn-primary btn-sm" style="background-color:blue" data-toggle="tooltip" data-placement="bottom" data-html="true" title="Clonar Reporte">
                                                                        <i class="fa-regular fa-clone"></i>
                                                                    </a>
                                                                    <button class="btn btn-info btn-sm dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                                        <i class="fa-solid fa-database"></i>
                                                                    </button>
                                                                    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                                                        <a href="@Url.Action("Index", "BG_forecast_cat_inventory_own", new { id_reporte = item.id})" class="dropdown-item">
                                                                            Inventory OWN
                                                                        </a>
                                                                    </div>

                                                                    @if (!item.activo)
                                                                    {
                                                                        <a href="@Url.Action("Enable", ViewBag.ControllerName, new { id = item.id })" class="btn btn-warning btn-sm" data-toggle="tooltip" data-placement="bottom" data-html="true" title="Habilitar">
                                                                            <i class="fa-solid fa-check"></i>
                                                                        </a>
                                                                    }
                                                                    else
                                                                    {
                                                                        <a href="@Url.Action("Disable", ViewBag.ControllerName, new { id = item.id })" class="btn btn-danger btn-sm" data-toggle="tooltip" data-placement="bottom" data-html="true" title="Deshabilitar">
                                                                            <i class="fa-solid fa-xmark"></i>
                                                                        </a>
                                                                    }
                                                                </td>
                                                            </tr>
                                                        }
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                    </div>

                                    <br />

                                    @if (Model.Count() > 0)
                                    {
                                        <nav id="nav_paginacion" aria-label="...">
                                            @{Html.RenderPartial("_Paginacion", Model);}
                                        </nav>
                                    }

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section scripts
{
    <!-- SweetAlert2 -->
    @Scripts.Render(Url.Content("~/Content/vendors/sweetalert2/sweetalert2.min.js"))
    @Scripts.Render(Url.Content("~/Scripts/AlertasSweetAlert.js"))
    @Scripts.Render(Url.Content("~/Content/vendors/select2/js/select2.full.min.js"))
    @Scripts.Render(Url.Content("~/Content/vendors/echarts/echarts.js"))
    @Scripts.Render(Url.Content("~/Scripts/Forms/ThemeEcharts.js"))
    @Scripts.Render("~/bundles/dataTables_js")

    <script>

        $(document).ready(function () {
            //inicializa los data table
            var tabla = $('#datatable_1').DataTable({
                "paging": false,
                "ordering": false,
                "searching": false,
                "scrollX": true,
                "info": false,
                //fixedColumns: {
                //    left: 3
                //}
            });


            // Initialize Select2 Elements (debe ir después de asignar el valor)
            $('.select2bs4').select2({
                theme: 'bootstrap4'
            })

            //Envia el formulario cada vez que se modifica el combo
            $(".select2bs4").change(function () {
                $("#buscarForm").submit();
                BloqueaPantalla();
            });

        });

        function BuscaReferenciasIHS(id) {

            let mensaje = "Se buscarán referencias de IHS automáticamente para este reporte. Al dar clic en 'Continuar' se perderán los datos no guardados.";

            Swal.fire({
                title: 'Mensaje',
                html: mensaje + "<br><br><b>¿Desea continuar?</b>",
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Continuar',
                cancelButtonText: 'Cancelar'
            }).then((result) => {
                /* Read more about isConfirmed, isDenied below */

                if (result.isConfirmed) {
                    BloqueaPantalla();
                    window.location.replace('/BG_Forecast_reporte/ActualizaReferencias/' + id);
                }
            });

        }

        //agranda el tamaño de la barra
        window.onload = function () {
            //clicMenu(2); //dos veces para acomodar la tabla
        }

    </script>


}
