@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <!-- SweetAlert2 -->
    @Scripts.Render(Url.Content("~/Content/vendors/sweetalert2/sweetalert2.min.js"))
    <script src="https://cdn.jsdelivr.net/npm/bs-custom-file-input/dist/bs-custom-file-input.min.js"></script>
    @Scripts.Render("~/bundles/dataTables_js")
    @Scripts.Render(Url.Content("~/Content/vendors/select2/js/select2.full.min.js"))


    <script>
        $(document).ready(function () {



            $("#archivo1").on("change", function () {
                obtieneHojas();
            });

            //inicializa los selects
            $('.select2bs4').select2({
                theme: 'bootstrap4'
            })

            //inicializa en input file
            bsCustomFileInput.init();
        });

        //inicializa los data table
        var tabla = $('#datatable_1').DataTable({
            "paging": true,
            "ordering": true,
            "searching": true,
            "scrollX": true,
            "info": true
        });

        //Funciom para leer las hojas del documento
        function obtieneHojas() {

            var formData = new FormData(document.getElementById("formuploadajax"));
            formData.append("dato", "valor");
            //formData.append(f.attr("name"), $(this)[0].files[0]);
            $.ajax({
                url: "/BG_Forecast_reporte/GetReportSheetNames",
                type: "post",
                dataType: "html",
                data: formData,
                cache: false,
                contentType: false,
                processData: false,
                success: function (data) {
                    try {
                        //convierte la respuesta en archivo json
                        let datos = JSON.parse(data)

                        if (datos[0].status == "OK") {
                            //completa el nombre de las hojas en el combo
                            $('#select_hoja').html(datos[0].value);
                            $('.select2bs4').select2({
                                theme: 'bootstrap4'
                            })
                        }

                    } catch (error) {
                        Swal.fire({
                            icon: 'error',
                            title: 'Error',
                            text: 'Ocurrió un error obteniendo la información: ' + error,
                            confirmButtonText: 'Aceptar',
                        })
                    }

                },
                error: function (textStatus, errorThrown) {
                    //en caso de error en la llamada ajax
                    Swal.fire({
                        icon: 'error',
                        title: 'Ocurrió un error: ' + errorThrown,
                        text: 'Intente nuevamente.'
                    })
                },
                async: true

            })
        }

        function recargaTabla(valor) {
            tabla.destroy();
            $("#table_body").html(valor);

            tabla = $('#datatable_1').DataTable({
                "paging": true,
                "ordering": true,
                "searching": true,
                "scrollX": true,
                "info": true
            });
        }

        //funcion para cargar el contenido del archivo excel
        $(function () {
            $("#formuploadajax").on("submit", function (e) {
                e.preventDefault();
                //var f = $(this);
                var formData = new FormData(document.getElementById("formuploadajax"));
                formData.append("dato", "valor");
                //formData.append(f.attr("name"), $(this)[0].files[0]);
                $.ajax({
                    url: "/BG_Forecast_reporte/GetReportRows",
                    type: "post",
                    dataType: "html",
                    data: formData,
                    cache: false,
                    contentType: false,
                    processData: false,
                    success: function (data) {
                        try {
                            //convierte la respuesta en archivo json
                            let datos = JSON.parse(data)
                            let estatus = datos[0].status;

                            //verifica si se leyó correctamente el archivo xlsx
                            if (estatus == "ERROR") {
                                $("#error-msj-div").html("Error: " + datos[0].value);
                                $("#error-msj-div").show();
                                $("#info-msj-div").hide();
                                //borra la tabla
                                recargaTabla('');

                            } else if (datos[0].status == "OK") {

                                recargaTabla(datos[0].value);

                                Swal.fire({
                                    icon: 'success',
                                    title: 'Mensaje',
                                    text: 'Se cargó correctamente el reporte. Seleccione "Guardar" para conservar los cambios.',
                                    confirmButtonText: 'Aceptar',
                                });
                                $("#error-msj-div").hide();
                            }

                        } catch (error) {
                            Swal.fire({
                                icon: 'error',
                                title: 'Error',
                                text: 'Ocurrió un error obteniendo la información: ' + error,
                                confirmButtonText: 'Aceptar',
                            })
                        }

                    },
                    error: function (textStatus, errorThrown) {
                        //en caso de error en la llamada ajax
                        Swal.fire({
                            icon: 'error',
                            title: 'Ocurrió un error: ' + errorThrown,
                            text: 'Intente nuevamente.'
                        })
                    },
                    async: true

                })

            });
        });


        window.onload = function () {
            clicMenu(1);
        }
    </script>
