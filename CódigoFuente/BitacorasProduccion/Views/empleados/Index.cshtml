@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
    <!-- SweetAlert2 -->
    @Scripts.Render(Url.Content("~/Content/vendors/sweetalert2/sweetalert2.min.js"))
    @Scripts.Render(Url.Content("~/Scripts/AlertasSweetAlert.js"))
    @Scripts.Render(Url.Content("~/Content/vendors/select2/js/select2.full.min.js"))
    @Scripts.Render("~/bundles/dataTables_js")


    <script>

        $(document).ready(function () {

            //maneja el envió el del formulario
            $('#limpiar-btn').click(function (e) {
                table.search('');
                table.columns().search('').draw();
                $('input', $('.filters th')[0]).each(function () {
                    $(this).val('');
                });

            });

            // Setup - add a text input to each footer cell
            $('#datatable_individual_searching tfoot th').each(function () {
                var title = $(this).text();
                $(this).html('<input type="text" placeholder="' + title.trim() + '"/>');
            });

            // DataTable
            table = $('#datatable_individual_searching').DataTable({
                buttons: [
                    'copy', 'excel', 'pdf'
                ],
                initComplete: function () {
                    //coloca los filtros al inicio de la tabla
                    var r = $('#datatable_individual_searching tfoot tr');
                    r.find('th').each(function () {
                        $(this).css('padding', 8);
                    });
                    $('#datatable_individual_searching thead').append(r);
                    $('#search_0').css('text-align', 'center');
                    // Apply the search
                    this.api()
                        .columns()
                        .every(function () {
                            var that = this;

                            $('input', this.footer()).on('keyup change clear', function () {
                                if (that.search() !== this.value) {
                                    that.search(this.value).draw();
                                }
                            });
                        });
                },
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.16/i18n/Spanish.json"
                },
                stateSave: true,

            });

            var state = table.state.loaded();
            if (state) {

                table.columns().eq(0).each(function (colIdx) {

                    var colSearch = state.columns[colIdx].search;

                    if (colSearch.search) {

                        let indice = 0;
                        //  $('input', $('.filters th')[colIdx]).val(colSearch.search);
                        $('input', $('.filters th')[colIdx]).each(function () {
                            if (indice == colIdx + 1)
                                $(this).val(colSearch.search);
                            indice++;
                        });
                    }
                });
                table.draw();
            }

            //evento para exportar a excel
            $("#export-btn").click(function () {
                exportar("exportar");
            });
            $("#export-tkmmnet-btn").click(function () {
                exportar("exportartkmm");
            });

            // Initialize Select2 Elements (debe ir después de asignar el valor)
            $('.select2bs4').select2({
                theme: 'bootstrap4'
            })

            $.unblockUI();

        });

        function exportar(ruta) {
            let index = 0;
            //variables de búsqueda
            let numeroEmpleado = '';
            let nombre = '';
            let planta = '';
            let departamento = '';
            let puesto = '';
            let jefe_directo = '';
            let C8ID = '';
            let correo = '';
            let activo = '';

            $('input', $('.filters th')[0]).each(function () {
                switch (index) {
                    case 3:
                        numeroEmpleado = $(this).val();
                        break;
                    case 4:
                        nombre = $(this).val();
                        break;
                    case 5:
                        planta = $(this).val();
                        break;
                    case 6:
                        departamento = $(this).val();
                        break;
                    case 7:
                        puesto = $(this).val();
                        break;
                    case 8:
                        jefe_directo = $(this).val();
                        break;
                    case 9:
                        C8ID = $(this).val();
                        break;
                    case 10:
                        correo = $(this).val();
                        break;
                    case 11:
                        activo = $(this).val();
                        break;
                }
                index++;
            });

            //carga ventana con parámetros url
            let url = new URL(location.href + "/" + ruta);
            if (numeroEmpleado != '')
                url.searchParams.set('numeroEmpleado', numeroEmpleado)
            if (nombre != '')
                url.searchParams.set('nombre', nombre)
            if (planta != '')
                url.searchParams.set('planta', planta)
            if (departamento != '')
                url.searchParams.set('departamento', departamento)
            if (puesto != '')
                url.searchParams.set('puesto', puesto)
            if (jefe_directo != '')
                url.searchParams.set('jefe_directo', jefe_directo)
            if (C8ID != '')
                url.searchParams.set('C8ID', C8ID)
            if (correo != '')
                url.searchParams.set('correo', correo)
            if (activo != '')
                url.searchParams.set('activo', activo)

            window.open(url);
        }

        //variable global para la tabla
        var table;


        //muestra el modal de autorizar
        function mostrarModalJefe() {
            $('#modalJefe').modal('show')

        }

        //agranda el tamaño de la barra
        window.onload = function () {
            document.getElementById('menu_toggle').click();
        }
    </script>

}

