@model IEnumerable<Portal_2_0.Models.empleados>

@{
    ViewBag.Title = "Listado de Empleados";
    ViewBag.PrimerNivel = "recursos_humanos";
    ViewBag.SegundoNivel = "empleados";
    ViewBag.ControllerName = "Empleados";

    Clases.Util.MensajesSweetAlert mensajeAlerta = (Clases.Util.MensajesSweetAlert)ViewBag.MensajeAlert;


}

@section estilos
{
    <!-- DataTables -->
    @Styles.Render("~/Content/dataTables_css")    

    <!-- SweetAlert2 -->
    <link href="@Url.Content("~/Content/vendors/sweetalert2-theme-bootstrap-4/bootstrap-4.min.css")" rel="stylesheet">
    <!-- Select2 -->
    <link href="@Url.Content("~/Content/vendors/select2/css/select2.css")" rel="stylesheet">
    <link href="@Url.Content("~/Content/vendors/select2-bootstrap4-theme/select2-bootstrap4.min.css")" rel="stylesheet">

    <style>
        tfoot input {
            width: 100%;
            padding: 3px;
            box-sizing: border-box;
        }

        .carga {
            padding: 15px;
            background-color: black;
            opacity: .3;
            color: red;
        }
    </style>
}

@{Html.RenderPartial("_BlockUI", Model);}

@*Para SweetAlert*@
@if (mensajeAlerta != null)
{
    <input type="hidden" value="@mensajeAlerta.Mensaje" id="mensajeAlert" />
    <input type="hidden" value="@mensajeAlerta.getTipoMensaje()" id="mensajeAlertTipo" />
}

<div class="right_col" role="main">


    <div class="">
        <div class="page-title">
            <div class="title_left">

            </div>
        </div>

        <div class="clearfix"></div>

        <div class="row">
            <div class="col-md-12 col-sm-12 ">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>@ViewBag.Title</h2>
                        <ul class="nav navbar-right panel_toolbox">
                            @*Utilizado para mover a la derecha los iconos del card*@
                            <span style="visibility:hidden">_______</span>
                            <li>
                                <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                            </li>
                        </ul>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="card-box table-responsive">
                                    <div class="form-group">

                                        <a href="@Url.Action( "Create", ViewBag.ControllerName)" class="btn btn-success">
                                            <i class="fa fa-plus-square"></i>
                                            Crear nuevo
                                        </a>
                                    </div>
                                     <div class="form-group" style="text-align:right;color:black">

                                        <a  class="btn btn-warning" id="limpiar-btn">
                                            <i class="fa-solid fa-arrows-rotate"></i>
                                            Limpiar Filtros
                                        </a>
                                    </div>
                                    <table id="datatable_individual_searching" class="table table-striped table-bordered" cellspacing="0" style="width:100%">
                                        <thead>
                                            <tr>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.nombre)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.numeroEmpleado)
                                                </th>
                                                <th>
                                                    Planta
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.id_area)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.id_jefe_directo)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.C8ID)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.correo)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.activo)
                                                </th>
                                                <th>Acciones</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model)
                                            {
                                                <tr style="@(item.activo == false ? "background-color:#FF5050; color:#990000; font-weight:600" :"" )">
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.ConcatNombre)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.numeroEmpleado)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.plantas.descripcion)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Area.descripcion)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.empleados2.ConcatNombre)
                                                    </td>

                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.C8ID)
                                                    </td>

                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.correo)
                                                    </td>
                                                    <td>
                                                        @if (item.activo.HasValue && item.activo.Value)
                                                        {
                                                            <span>SI</span>
                                                        }
                                                        else
                                                        {
                                                            <span>NO</span>
                                                        }
                                                    </td>
                                                    <td nowrap>
                                                        <a href="@Url.Action("Edit", ViewBag.ControllerName, new { id = item.id})" class="btn btn-success btn-sm" title="Editar">
                                                            <i class="fa-regular fa-pen-to-square"></i>
                                                        </a>
                                                        <a href="@Url.Action("Details", ViewBag.ControllerName, new { id = item.id})" class="btn btn-info btn-sm" title="Detalles">
                                                            <i class="fa fa-info-circle"></i>
                                                        </a>

                                                        @if (item.activo.HasValue)
                                                        {
                                                            if (!item.activo.Value)
                                                            {
                                                                <a href="@Url.Action("Enable", ViewBag.ControllerName, new { id = item.id })" class="btn btn-warning btn-sm" title="Habilitar">
                                                                    <i class="fa fa-check"></i>
                                                                </a>
                                                            }
                                                            else
                                                            {
                                                                <a href="@Url.Action("Disable", ViewBag.ControllerName, new { id = item.id })" class="btn btn-danger btn-sm" title="Dar de Baja">
                                                                    <i class="fa fa-times"></i>
                                                                </a>
                                                            }
                                                        }
                                                        else
                                                        {
                                                            <a href="@Url.Action("Enable", ViewBag.ControllerName, new { id = item.id })" class="btn btn-warning btn-sm" title="Habilitar">
                                                                <i class="fa fa-check"></i>
                                                            </a>
                                                        }


                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                        <tfoot>
                                            <tr>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.nombre)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.numeroEmpleado)
                                                </th>
                                                <th>
                                                    Planta
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.id_area)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.id_jefe_directo)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.C8ID)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.correo)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.activo)
                                                </th>
                                                <th>Acciones</th>
                                            </tr>
                                        </tfoot>
                                    </table>
                                </div>
                                <br />

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section scripts
{
    <!-- SweetAlert2 -->
    @Scripts.Render(Url.Content("~/Content/vendors/sweetalert2/sweetalert2.min.js"))
    @Scripts.Render(Url.Content("~/Scripts/AlertasSweetAlert.js"))
    @Scripts.Render(Url.Content("~/Content/vendors/select2/js/select2.full.min.js"))
    @Scripts.Render("~/bundles/dataTables_js")

    <script>

        $(document).ready(function () {

            //maneja el envió el del formulario
            $('#limpiar-btn').click(function (e) {
                BloqueaPantalla();
              
                //Actualizamos la página
                location.reload();
              
            });

            // Setup - add a text input to each footer cell
            $('#datatable_individual_searching tfoot th').each(function () {
                var title = $(this).text();
                $(this).html('<input type="text" placeholder="' + title.trim() + '"/>');
            });

            // DataTable
            var table = $('#datatable_individual_searching').DataTable({
                buttons: [
                    'copy', 'excel', 'pdf'
                ],
                initComplete: function () {
                    //coloca los filtros al inicio de la tabla
                    var r = $('#datatable_individual_searching tfoot tr');
                    r.find('th').each(function () {
                        $(this).css('padding', 8);
                    });
                    $('#datatable_individual_searching thead').append(r);
                    $('#search_0').css('text-align', 'center');
                    // Apply the search
                    this.api()
                        .columns()
                        .every(function () {
                            var that = this;

                            $('input', this.footer()).on('keyup change clear', function () {
                                if (that.search() !== this.value) {
                                    that.search(this.value).draw();
                                }
                            });
                        });
                },
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.16/i18n/Spanish.json"
                },
              
            });

            $.unblockUI();

        });


        //agranda el tamaño de la barra
        window.onload = function () {
            document.getElementById('menu_toggle').click();
        }
    </script>

}

