                                @Html.LabelFor(model => model.fecha_direccion, new { @class = "control-label col-md-2 float-right" })

                            <div class="col-md-4">
                                @if (Model.fecha_direccion.HasValue)
                                {
                                    <input type="text" class="form-control col-md-12" value="@Model.fecha_direccion.Value" readonly>
                                }
                                else if (Model.id_direccion.HasValue && Model.estatus == Bitacoras.Util.PM_Status.RECHAZADO_DIRECCION)
                                {
                                    <input type="text" class="form-control col-md-12" value="RECHAZADO" readonly>
                                }
