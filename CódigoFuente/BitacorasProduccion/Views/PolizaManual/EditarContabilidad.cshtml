                                <input type="text" class="form-control col-md-5" value="@Model.empleados.ConcatNombre" readonly>
                            }
                            else
                            {
                                <input type="text" class="form-control col-md-5" value="NO DISPONIBLE" readonly>
                            }

                            <!-- Fecha validadcion -->
                            @Html.LabelFor(model => model.fecha_autorizacion, new { @class = "control-label col-md-2 float-right" })

                            <div class="col-md-4">
                                @if (Model.fecha_autorizacion.HasValue)
                                {
                                    <input type="text" class="form-control col-md-12" value="@Model.fecha_autorizacion.Value" readonly>
                                }
                                else if (Model.id_autorizador.HasValue && Model.estatus == Bitacoras.Util.PM_Status.RECHAZADO_AUTORIZADOR)
