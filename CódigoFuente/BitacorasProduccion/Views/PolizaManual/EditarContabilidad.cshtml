                        @*PARA SUBIR EL DOCUMENTO DE SOPORTE DE REGISTRO EN SAP*@

                        <div class="ln_solid"></div>
                        <div class="form-group row">
                            <span style="color:black"><b>DOCUMENTO DE REGISTRO</b></span>
                        </div>
                        @using (Html.BeginForm("EditarContabilidad", null, FormMethod.Post, new { enctype = "multipart/form-data" }))
