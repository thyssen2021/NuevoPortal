@model Portal_2_0.Models.poliza_manual

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Crear Nueva Poliza Manual";
    ViewBag.PrimerNivel = "polizas_manuales";
    ViewBag.SegundoNivel = "PM_registro";
    ViewBag.ControllerName = "PolizaManual";

    Portal_2_0.Models.empleados solicitante = (Portal_2_0.Models.empleados)ViewBag.Solicitante;

}

@section estilos
{
    <!-- Select2 -->
    <link href="@Url.Content("~/Content/vendors/select2/css/select2.css")" rel="stylesheet">
    <link href="@Url.Content("~/Content/vendors/select2-bootstrap4-theme/select2-bootstrap4.min.css")" rel="stylesheet">

    <style>
        label {
            text-align: right;
        }

            label::after {
                content: ":";
            }
    </style>
}



<div class="right_col" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">
            </div>
        </div>

        <div class="clearfix"></div>

        <div class="row">
            <div class="col-md-12 col-sm-12  ">
                <div class="x_panel">
                    @*<div class="x_title">
                            <h2>@ViewBag.Title</h2>
                            <div class="clearfix"></div>
                        </div>*@
                    <div class="x_content">
                        <br />

                        @using (Html.BeginForm("Create", "PolizaManual", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal form-label-left" }))
                        {
                            @Html.AntiForgeryToken()


                            if (!Html.ViewData.ModelState.IsValid)
                            {
                                <div class="alert alert-danger" role="alert">
                                    @Html.ValidationSummary("", new { @class = "text-white" })
                                </div>
                            }

                            //Valores ocultos
                            <input type="hidden" id="id_elaborador" name="id_elaborador" value="@solicitante.id">
                            <input type="hidden" id="id_planta" name="id_planta" value="@solicitante.planta_clave">


                            //@Html.HiddenFor(model => model.id_planta)

                            <div class="form-group row">
                                <div class="col-md-12" style="text-align:center">
                                    <h3 class="green"><i class="fa fa-table"></i> POLIZA DE DIARIO</h3>
                                </div>
                            </div>

                            <div class="ln_solid"></div>

                            <div class="form-group row">
                                <span style="color:black"><b>DATOS GENERALES</b></span>
                            </div>

                            <div class="form-group row">
                                <!--Planta-->
                                @Html.LabelFor(model => model.id_planta, new { @class = "control-label col-md-1" })
                                <input type="text" class="form-control col-md-3" value="@solicitante.plantas.descripcion" readonly>
                                @Html.ValidationMessageFor(model => model.id_elaborador, "", new { @class = "text-danger" })

                                <!--Documento SAP-->
                                @Html.LabelFor(model => model.numero_documento_sap, new { @class = "control-label col-md-2" })
                                <div class="col-md-2">
                                    @Html.EditorFor(m => m.numero_documento_sap, new { htmlAttributes = new { @class = "form-control", @autocomplete = "off" } })
                                    @Html.ValidationMessageFor(model => model.numero_documento_sap, "", new { @class = "text-danger" })
                                </div>
                                <!-- Id póliza -->
                                <label class="control-label col-md-2 float-right">
                                    # P&oacute;liza
                                </label>
                                <div class="col-md-2">
                                    <input type="text" class="form-control col-md-12" style="text-align: right;" value="" readonly>
                                </div>
                            </div>

                            <div class="form-group row">
                            </div>

                            <div class="form-group row">

                                <!-- Tipo -->
                                @Html.LabelFor(model => model.id_PM_tipo_poliza, new { @class = "control-label col-md-1" })
                                <div class="col-md-3">
                                    @Html.DropDownList("id_PM_tipo_poliza", null, htmlAttributes: new { @class = "form-control select2bs4", @style = "width:100%" })
                                    @Html.ValidationMessageFor(model => model.id_PM_tipo_poliza, "", new { @class = "text-danger" })
                                </div>

                                <!-- Moneda -->
                                @Html.LabelFor(model => model.currency_iso, new { @class = "control-label col-md-1" })
                                <div class="col-md-3">
                                    @Html.DropDownList("currency_iso", null, htmlAttributes: new { @class = "form-control select2bs4", @style = "width:100%" })
                                    @Html.ValidationMessageFor(model => model.currency_iso, "", new { @class = "text-danger" })
                                </div>
                                <!--Fecha-->
                                @Html.LabelFor(model => model.fecha_documento, new { @class = "control-label col-md-2 float-right" })
                                <div class="col-md-2">
                                    @Html.EditorFor(m => m.fecha_documento, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.fecha_documento, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="ln_solid"></div>
                            <div class="form-group row">
                                <span style="color:black"><b>CONCEPTOS</b></span>
                            </div>

                            <div id="div_conceptos">
                                @*@foreach (Portal_2_0.Models.PM_conceptos item in Model.c)
                {


                    contador++;
                }*@

                            </div>


                            <div class="form-group row">

                            </div>
                            <div class="form-group row">
                                <div class="col-md-11">
                                    <input type="button" value="Agregar" class="btn btn-round btn-warning float-right" onclick="AgregarConcepto(); return false;">
                                </div>
                            </div>


                            <div class="ln_solid"></div>
                            <div class="form-group row">
                                <span style="color:black"><b>DESCRIPCI&Oacute;N</b></span>
                            </div>

                            <div class="item form-group">
                                @Html.LabelFor(model => model.descripcion_poliza, new { @class = "control-label col-md-12 col-sm-12", @style = "text-align: left" })

                            </div>
                            <div class="item form-group">
                                <div class="col-md-12">
                                    @Html.TextAreaFor(model => model.descripcion_poliza, new { @class = "form-control", @rows = "4", @autocomplete = "off" })
                                    @Html.ValidationMessageFor(model => model.descripcion_poliza, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="ln_solid"></div>
                            <div class="form-group row">
                                <span style="color:black"><b>MOVIMIENTOS</b></span>
                            </div>

                            <div class="form-group row">
                                @Html.LabelFor(model => model.id_elaborador, new { @class = "control-label col-md-1" })
                                <input type="text" class="form-control col-md-5" value="@solicitante.ConcatNombre" readonly>
                                @Html.ValidationMessageFor(model => model.id_elaborador, "", new { @class = "text-danger" })

                                <!-- Fecha validadcion -->
                                @Html.LabelFor(model => model.fecha_creacion, new { @class = "control-label col-md-2 float-right" })

                                <div class="col-md-4">
                                    <input type="text" class="form-control col-md-12" value="@(Model.fecha_creacion.Year > 2000 ? Model.fecha_creacion.ToString() : "NO DISPONIBLE" )" readonly>
                                </div>
                            </div>
                            <div class="form-group row">
                                <!-- Autorizador -->
                                @Html.LabelFor(model => model.id_validador, new { @class = "control-label col-md-1" })
                                <div class="col-md-5">
                                    @Html.DropDownList("id_validador", null, htmlAttributes: new { @class = "form-control select2bs4", @style = "width:100%" })
                                    @Html.ValidationMessageFor(model => model.id_validador, "", new { @class = "text-danger" })
                                </div>

                                <!-- Fecha validadcion -->
                                @Html.LabelFor(model => model.fecha_validacion, new { @class = "control-label col-md-2 float-right" })

                                <div class="col-md-4">
                                    @if (Model.fecha_validacion.HasValue)
                                    {
                                        <input type="text" class="form-control col-md-12" value="@Model.fecha_validacion.Value" readonly>
                                    }
                                    else
                                    {
                                        <input type="text" class="form-control col-md-12" value="NO DISPONIBLE" readonly>
                                    }
                                </div>

                            </div>

                            <div class="item form-group">
                                <div class="col-md-12 col-sm-12 offset-md-12">
                                    <button type="submit" class="btn btn-success btn-lg float-lg-right"> <i class="fa fa-save"></i>&nbsp;Guardar</button>
                                </div>
                            </div>
                        }
                    </div>
                </div>
                <div>
                    <br />
                    <a href="javascript: history.go(-1)" class="btn btn-round btn-info btm-sm" title="Volver">
                        <i class="fa fa-arrow-circle-left"></i> Volver
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render(Url.Content("~/Content/vendors/select2/js/select2.full.min.js"))
    @Scripts.Render(Url.Content("~/Scripts/MvcFoolproofJQueryValidation.js"))
    <script>
        $(document).ready(function () {

            //valoresPredeterminados();


            // Initialize Select2 Elements (debe ir después de asignar el valor)
            $('.select2bs4').select2({
                theme: 'bootstrap4'
            })


        });

        //variable global para el id
        var num = 0;
        //agreaga una fila para lotes
        function AgregarConcepto() {
            //obtine los valores de lotes


            $("#div_conceptos").append(
                `
                                                        <div class="form-group row" id="div_concepto_`+ num + `">
                                                                        <input type="hidden" name="produccion_lotes.Index" id="produccion_lotes.Index" value="`+ num + `" />
                                                                        <label class="control-label col-md-1" for="produccion_lotes[`+ num + `].numero_lote_izquierdo">
                                                                            <span class="float-right">Lote Izquierdo</span>
                                                                        </label>
                                                                        <div class="col-md-2">
                                                                            <input style="text-align:right" type="number" min="0" step="1" max="50000" name="produccion_lotes[`+ num + `].numero_lote_izquierdo" id="produccion_lotes[` + num + `].lote_izquierdo" class="form-control col-md-12" value="" autocomplete="off">
                                                                            <span class="field-validation-valid text-danger" data-valmsg-for="produccion_lotes[` + num + `].numero_lote_izquierdo" data-valmsg-replace="true"></span>
                                                                        </div>
                                                                        <label class="control-label col-md-1" for="produccion_lotes[`+ num + `].numero_lote_derecho">
                                                                            <span class="float-right">Lote Derecho</span>
                                                                        </label>
                                                                        <div class="col-md-2">
                                                                            <input type="number" min="0" step="1" max="50000" name="produccion_lotes[`+ num + `].numero_lote_derecho" id="produccion_lotes[` + num + `].lote_derecho" class="form-control col-md-12" value="" autocomplete="off">
                                                                            <span class="field-validation-valid text-danger" data-valmsg-for="produccion_lotes[` + num + `].numero_lote_derecho" data-valmsg-replace="true"></span>
                                                                        </div>
                                                                        <label class="control-label col-md-2" for="produccion_lotes[`+ num + `].piezas_paquete">
                                                                             <span class="float-right">Piezas por paquete</span>
                                                                        </label>
                                                                        <div class="col-md-2">
                                                                            <input type="number" min="0" step="1" max="5000" name="produccion_lotes[`+ num + `].piezas_paquete" id="produccion_lotes[` + num + `].piezas_paquete" class="form-control col-md-12 total_piezas" value="" maxlength="10" required>
                                                                               <span class="field-validation-valid text-danger" data-valmsg-for="produccion_lotes[` + num + `].piezas_paquete" data-valmsg-replace="true"></span>
                                                                            </div>
                                                                        <div class="col-md-1">
                                                                            <input type="button" value="Borrar" class="btn btn-danger" onclick="borrarConcepto(` + num + `); return false;">
                                                                        </div>
                                                                    </div>
                                                                `
            );
            $("#div_concepto_" + num).hide().fadeIn(700);
            num++;


            //vuelve a asigar el evento on a cada input de los lotes
            $('.total_piezas').each(function () {
                $(this).on('input', function (e) {
                    calculaDatos();
                });
            });
        }

        //borra un concepto
        function borrarConcepto(id) {

            $("#div_concepto_" + id).fadeOut(700, function () {
                $(this).remove();
            });
            calculaDatos();
        }


        window.onload = function () {
            clicMenu(1);
        }
    </script>
}

