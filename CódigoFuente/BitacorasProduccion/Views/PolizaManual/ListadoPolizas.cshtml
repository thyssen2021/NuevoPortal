@model IEnumerable<Portal_2_0.Models.poliza_manual>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.PrimerNivel = "polizas_manuales";
    ViewBag.ControllerName = "PolizaManual";

    Clases.Util.MensajesSweetAlert mensajeAlerta = (Clases.Util.MensajesSweetAlert)ViewBag.MensajeAlert;

    //obtiene los filtros
    Portal_2_0.Models.Paginacion paginacionFiltros = (Portal_2_0.Models.Paginacion)ViewBag.Paginacion;
}

@section estilos
{
    <!-- DataTables -->
    @Styles.Render("~/Content/dataTables_css")

    <!-- SweetAlert2 -->
    <link href="@Url.Content("~/Content/vendors/sweetalert2-theme-bootstrap-4/bootstrap-4.min.css")" rel="stylesheet">

    <!-- Select2 -->
    <link href="@Url.Content("~/Content/vendors/select2/css/select2.css")" rel="stylesheet">
    <link href="@Url.Content("~/Content/vendors/select2-bootstrap4-theme/select2-bootstrap4.min.css")" rel="stylesheet">
}

@*Para SweetAlert*@
@if (mensajeAlerta != null)
{
    <input type="hidden" value="@mensajeAlerta.Mensaje" id="mensajeAlert" />
    <input type="hidden" value="@mensajeAlerta.getTipoMensaje()" id="mensajeAlertTipo" />
}


<div class="right_col" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">
            </div>
        </div>

        <div class="clearfix"></div>

        <div class="row">
            <div class="col-md-12 col-sm-12 ">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>@ViewBag.Title</h2>
                        <ul class="nav navbar-right panel_toolbox">
                            @*Utilizado para mover a la derecha los iconos del card*@
                            <span style="visibility:hidden">_______</span>
                            <li>
                                <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                            </li>
                        </ul>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="card-box">
                                    <div class="form-group">
                                        @if (ViewBag.Create != null && ViewBag.Create)
                                        {
                                            <a onclick="mostrarModalDemo()" class="btn btn-success" style="color:white">
                                                <i class="fa fa-plus-square"></i>
                                                Crear nuevo
                                            </a>
                                        }
                                    </div>

                                    <table id="datatable_1" class="table table-striped table-bordered nowrap" cellspacing="0" width="100%">
                                        <thead>
                                            <tr>
                                                <th>Acciones</th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.id)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.numero_documento_sap)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.descripcion_poliza)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.fecha_creacion)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.fecha_documento)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.fecha_validacion)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.fecha_autorizacion)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.estatus)
                                                </th>

                                                <th>
                                                    @Html.DisplayNameFor(model => model.id_elaborador)
                                                </th>

                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model)
                                            {
                                                <tr>

                                                    <td>
                                                        @if (ViewBag.Autorizar != null && ViewBag.Autorizar)
                                                        {
                                                            <a href="@Url.Action("AutorizarControlling", ViewBag.ControllerName, new { id = item.id })" class="btn btn-info " title="Autorizar/Rechazar">
                                                                <i class="fa fa-check-circle-o"></i>
                                                            </a>
                                                        }
                                                        @if (ViewBag.AutorizarDireccion != null && ViewBag.AutorizarDireccion)
                                                        {
                                                            <a href="@Url.Action("AutorizarDireccion", ViewBag.ControllerName, new { id = item.id })" class="btn btn-info " title="Autorizar/Rechazar">
                                                                <i class="fa fa-check-circle-o"></i>
                                                            </a>
                                                        }
                                                        @if (ViewBag.Validar != null && ViewBag.Validar)
                                                        {
                                                            <a href="@Url.Action("ValidarArea", ViewBag.ControllerName, new { id = item.id })" class="btn btn-success " title="Validar">
                                                                <i class="fa fa-check-circle-o"></i>
                                                            </a>
                                                        }
                                                        @if (ViewBag.Finalizar != null && ViewBag.Finalizar)
                                                        {
                                                            <a href="@Url.Action("EditarContabilidad", ViewBag.ControllerName, new { id = item.id })" class="btn btn-success " title="Finalizar">
                                                                <i class="fa fa-list-alt"></i>
                                                            </a>
                                                        }
                                                        @if (ViewBag.EditContabilidad != null && ViewBag.EditContabilidad)
                                                        {
                                                            <a href="@Url.Action("EditarContabilidad", ViewBag.ControllerName, new { id = item.id })" class="btn btn-success" title="Editar">
                                                                <i class="fa fa-list-alt"></i>
                                                            </a>
                                                        }
                                                        @if (ViewBag.Edit != null && ViewBag.Edit)
                                                        {
                                                            <a href="@Url.Action("Edit", ViewBag.ControllerName, new { id = item.id})" class="btn btn-success " title="Editar">
                                                                <i class="fa fa-pencil-square-o"></i>
                                                            </a>
                                                        }

                                                        @if (ViewBag.EnviarValidacion != null && ViewBag.EnviarValidacion)
                                                        {
                                                            <a href="@Url.Action("EnviarParaValidacion", ViewBag.ControllerName, new { id = item.id })" class="btn btn-info " title="Enviar">
                                                                <i class="fa fa-send"></i>
                                                            </a>
                                                        }

                                                        @if (ViewBag.Details != null && ViewBag.Details)
                                                        {
                                                            <a href="@Url.Action("Details", ViewBag.ControllerName, new { id = item.id })" class="btn btn-secondary " title="Detalles">
                                                                <i class="fa fa-info-circle"></i>
                                                            </a>
                                                        }

                                                    </td>
                                                    <td style="text-align:center">
                                                        @Html.DisplayFor(modelItem => item.id)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.numero_documento_sap)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.descripcion_poliza)
                                                    </td>
                                                    <td>
                                                        @item.fecha_creacion
                                                    </td>
                                                    <td style="text-align:center">
                                                        @Html.DisplayFor(modelItem => item.fecha_documento)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.fecha_validacion)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.fecha_autorizacion)
                                                    </td>
                                                    <td>
                                                        @Bitacoras.Util.PM_Status.DescripcionStatus(item.estatus)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.empleados3.ConcatNombre)
                                                    </td>
                                                </tr>
                                            }

                                        </tbody>
                                    </table>

                                </div>
                                <br />
                                @if (Model.Count() > 0)
                                {
                                    <nav id="nav_paginacion" aria-label="...">
                                        @{Html.RenderPartial("_Paginacion", Model);}
                                    </nav>
                                }

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal DEMO Modelo -->
<div class="modal fade" id="modalModelo" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h6 class="modal-title" id="exampleModalLongTitle">Usar P&oacute;liza Modelo</h6>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            @using (Html.BeginForm("Create", null, FormMethod.Get))
            {
            <div class="modal-body">
            <div class="form-group row">
                <h6>¿Desea utilizar una p&oacute;liza modelo?</h6>
            </div>
                @if (ViewBag.id_poliza_modelo != null)
                {
                    <div class="form-group row">
                        <div class="col-md-12">
                            @Html.DropDownList("id_poliza_modelo", null, htmlAttributes: new { @class = "select2bs4 col-md-12", @style = "width:100%" })
                        </div>
                    </div>
                }
            </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-primary">Continuar</button>
                </div>
            }
            </div>
    </div>
</div>
@section scripts
{
    <!-- SweetAlert2 -->
    @Scripts.Render(Url.Content("~/Content/vendors/sweetalert2/sweetalert2.min.js"))
    @Scripts.Render(Url.Content("~/Scripts/AlertasSweetAlert.js"))
    @Scripts.Render(Url.Content("~/Content/vendors/select2/js/select2.full.min.js"))
    @Scripts.Render("~/bundles/dataTables_js")

    <script>

        $(document).ready(function () {

            //inicializa los data table
            var tabla = $('#datatable_1').DataTable({
                "paging": false,
                "ordering": false,
                "searching": false,
                "scrollX": true,
                "info": false
            });

            // Initialize Select2 Elements (debe ir después de asignar el valor)
            $('.select2bs4').select2({
                theme: 'bootstrap4'
            })

        });

        //muestra el modal de autorizar
        function mostrarModalDemo() {
            $('#modalModelo').modal('show')

        }

        //agranda el tamaño de la barra
        window.onload = function () {
            clicMenu(2); //dos veces para acomodar la tabla
        }


    </script>

}

