
@model Portal_2_0.Models.SCDM_cat_rel_gerentes_clientes

@{
    ViewBag.Title = "Borrar Asignación de Gerente de Cuentas";
    ViewBag.PrimerNivel = "scdm_mm";
    ViewBag.SegundoNivel = "scdm_catalogos";
    ViewBag.ControllerName = ViewContext.RouteData.Values["controller"];

    ViewBag.nav_style = "nav-sm";

}
@section estilos
{

}

<div class="right_col" role="main">
    <div class="">

        <div class="clearfix"></div>

        <div class="row">
            <div class="col-md-12 col-sm-12  ">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>@ViewBag.Title</h2>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">

                        <div class="col-md-4">
                            <div class="table-responsive">
                                <h3 style="color:#8e0000">¿Realmente desea eliminar este registro?</h3>
                                <table class="table">
                                    <tbody>
                                        <tr>
                                            <th>@Html.DisplayNameFor(model => model.id_cliente)</th>
                                            <td>@Html.DisplayFor(model => model.clientes.descripcion)</td>
                                        </tr>
                                        <tr>
                                            <th>@Html.DisplayNameFor(model => model.id_empleado)</th>
                                            <td>@Html.DisplayFor(model => model.empleados.ConcatNumEmpleadoNombre)</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="col-md-3">
                                <p class="float-md-left">
                                    <a href="@Url.Action("Edit", ViewBag.ControllerName, new { id = Model.id})" class="btn btn-success btm-sm" title="Editar">
                                        <i class="fa-regular fa-pen-to-square"></i> Editar
                                    </a>
                                </p>
                            </div> 
                            <div class="col-md-4">
                                @using (Html.BeginForm())
                                {
                                    @Html.AntiForgeryToken()

                                    <div class="form-actions no-color ">
                                        <input type="submit" value="Borrar" class="btn btn-danger btm-sm" />
                                    </div>
                                }
                            </div>
                           

                        </div>
                    </div>
                </div>
                <div>
                    <br />
                    <a href="@Url.Action(" Index", ViewBag.ControllerName)" class="btn btn-round btn-info btm-sm" title="Volver">
                        <i class="fa fa-arrow-circle-left"></i> Volver al listado
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")


    <script>
        $(document).ready(function () {

        });
    </script>
}

