@model IEnumerable<Portal_2_0.Models.produccion_registros>

@{
    ViewBag.Title = "Registro de producción";
    ViewBag.PrimerNivel = "bitacoras_produccion";
    ViewBag.SegundoNivel = "produccion_registros";
    ViewBag.ControllerName = "ProduccionRegistros";

    Clases.Util.MensajesSweetAlert mensajeAlerta = (Clases.Util.MensajesSweetAlert)ViewBag.MensajeAlert;

    //obtiene los filtros
    Portal_2_0.Models.Paginacion paginacionFiltros = (Portal_2_0.Models.Paginacion)ViewBag.Paginacion;

    string filtroPlanta = string.Empty;
    if (paginacionFiltros.ValoresQueryString["planta"] != null)
    {
        filtroPlanta = paginacionFiltros.ValoresQueryString["planta"].ToString();
    }

    string filtroLinea = string.Empty;
    if (paginacionFiltros.ValoresQueryString["linea"] != null)
    {
        filtroLinea = paginacionFiltros.ValoresQueryString["linea"].ToString();
    }

}

@section estilos
{
    <!-- DataTables -->
    @Styles.Render("~/Content/dataTables_css")

    <!-- SweetAlert2 -->
    <link href="@Url.Content("~/Content/vendors/sweetalert2-theme-bootstrap-4/bootstrap-4.min.css")" rel="stylesheet">
    <!-- Select2 -->
    <link href="@Url.Content("~/Content/vendors/select2/css/select2.css")" rel="stylesheet">
    <link href="@Url.Content("~/Content/vendors/select2-bootstrap4-theme/select2-bootstrap4.min.css")" rel="stylesheet">

}

@*Para SweetAlert*@
@if (mensajeAlerta != null)
{
    <input type="hidden" value="@mensajeAlerta.Mensaje" id="mensajeAlert" />
    <input type="hidden" value="@mensajeAlerta.getTipoMensaje()" id="mensajeAlertTipo" />
}

@if (!String.IsNullOrEmpty(filtroPlanta))
{
    <input type="hidden" value="@filtroPlanta" id="cPlanta" />
}
@if (!String.IsNullOrEmpty(filtroLinea))
{
    <input type="hidden" value="@filtroLinea" id="iLinea" />
}

<div class="right_col" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>@ViewBag.Title</h3>
            </div>
        </div>

        <div class="clearfix"></div>

        <div class="row">
            <div class="col-md-12 col-sm-12 ">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>@ViewBag.Title</h2>
                        <ul class="nav navbar-right panel_toolbox">
                            @*Utilizado para mover a la derecha los iconos del card*@
                            <span style="visibility:hidden">_______</span>
                            <li>
                                <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                            </li>
                        </ul>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="card-box table-responsive">
                                    <div class="form-group">
                                        @using (Html.BeginForm(null, null, FormMethod.Get, new { id = "buscarForm", @class = "form-horizontal form-label-left" }))
                                        {
                                            <div class="form-group row ">
                                                <label class="control-label col-md-2 col-sm-2" for="planta">Planta</label>
                                                <div class="col-md-6 col-sm-6 ">
                                                    @Html.DropDownList("planta", null, "-- Seleccione un valor --", htmlAttributes: new { @class = "form-control select2bs4", @style = "width:100%", @required = "required" })
                                                </div>

                                            </div>
                                            <div class="form-group row ">
                                                <label class="control-label col-md-2 col-sm-2" for="linea">L&iacute;nea</label>
                                                <div class="col-md-6 col-sm-6 ">
                                                    @Html.DropDownList("linea", null, "-- Seleccione un valor --", htmlAttributes: new { @class = "form-control select2bs4", @style = "width:100%", @required = "required" })
                                                </div>
                                                <div class="col-md-1 col-sm-1">
                                                    <input type="button" value="borrar" class="btn btn-danger" id="borrarForm" />
                                                </div>
                                                <div class="col-md-1 col-sm-1">
                                                    <input type="submit" value="buscar" class="btn btn-info" />
                                                </div>
                                            </div>

                                        }

                                    </div>
                                    <div class="form-group">
                                        @using (Html.BeginForm("create", null, FormMethod.Get, new { id = "createForm", @class = "form-horizontal form-label-left" }))
                                        {
                                            <input type="hidden" name="linea" value="@filtroLinea" id="hidden_linea" />
                                            <input type="hidden" name="planta" value="@filtroPlanta" id="hidden_planta" />

                                            <input type="button" style="display:none" value="Crear nuevo registro" class="btn btn-success float-left" id="crearFormButton" disabled />
                                        }
                                    </div>
                                    <hr />
                                    @if (Model.Count() > 0)
                                    {

                                        <table id="s" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0" width="100%">
                                            <thead>
                                                <tr>
                                                    <th>
                                                        @Html.DisplayNameFor(model => model.sap_platina)
                                                    </th>
                                                    <th>
                                                        @Html.DisplayNameFor(model => model.sap_rollo)
                                                    </th>
                                                    <th>
                                                        @Html.DisplayNameFor(model => model.fecha)
                                                    </th>
                                                    <th>
                                                        @Html.DisplayNameFor(model => model.plantas.descripcion)
                                                    </th>
                                                    <th>
                                                        @Html.DisplayNameFor(model => model.produccion_datos_entrada.orden_sap)
                                                    </th>
                                                    <th>
                                                        L&iacute;nea
                                                    </th>                                                  
                                                    <th>
                                                        Operador
                                                    </th>
                                                    <th>
                                                        Supervisor
                                                    </th>
                                                    <th>
                                                        @Html.DisplayNameFor(model => model.produccion_turnos.descripcion)
                                                    </th>
                                                    <th>
                                                        @Html.DisplayNameFor(model => model.activo)
                                                    </th>
                                                    <th></th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var item in Model)
                                                {
                                                <tr>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.sap_platina)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.sap_rollo)
                                                    </td>
                                                    <td>
                                                        @item.fecha
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.plantas.descripcion)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.produccion_datos_entrada.orden_sap)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.produccion_lineas.linea)
                                                    </td>
                                                    <td>
                                                        @item.produccion_operadores.empleados.nombre @item.produccion_operadores.empleados.apellido1
                                                    </td>
                                                    <td>
                                                        @item.produccion_supervisores.empleados.nombre @item.produccion_operadores.empleados.apellido1
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.produccion_turnos.descripcion)
                                                    </td>
                                                    <td>
                                                        @if (item.activo.HasValue && item.activo.Value)
                                                        {
                                                            <span style="color:darkgreen">Activo</span>
                                                        }
                                                        else
                                                        {
                                                            <span style="color:darkred">Inactivo</span>
                                                        }
                                                    </td>
                                                    <td>
                                                        @Html.ActionLink("Edit", "Edit", new { id = item.id }) |
                                                        @Html.ActionLink("Details", "Details", new { id = item.id }) |
                                                        @Html.ActionLink("Delete", "Delete", new { id = item.id })
                                                    </td>
                                                </tr>
                                                }

                                            </tbody>
                                        </table>
                                    }
                                    else
                                    {
                                        <h4>¡La b&uacute;squeda no obtuvo registros!</h4>
                                    }
                                </div>

                                @if (Model.Count() > 0)
                                {
                                    <nav aria-label="...">
                                        @{Html.RenderPartial("_Paginacion", Model);}
                                    </nav>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts
{
    @Scripts.Render(Url.Content("~/Content/vendors/select2/js/select2.full.min.js"))
    <!-- SweetAlert2 -->
    @Scripts.Render(Url.Content("~/Content/vendors/sweetalert2/sweetalert2.min.js"))
    @Scripts.Render(Url.Content("~/Scripts/AlertasSweetAlert.js"))

    @Scripts.Render("~/bundles/dataTables_js")

    @Scripts.Render(Url.Content("~/Scripts/Forms/ProduccionRegistrosIndex.js"))

}

