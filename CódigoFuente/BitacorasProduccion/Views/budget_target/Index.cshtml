@model IEnumerable<Portal_2_0.Models.budget_target>
@{
    ViewBag.Title = "Listado de Targets";
    ViewBag.PrimerNivel = "budget";
    ViewBag.SegundoNivel = "catalogos";
    ViewBag.TercelNivel = "budget_target";

    ViewBag.ControllerName = ViewContext.RouteData.Values["controller"];
    ViewBag.nav_style = "nav-sm";
}

@section estilos {
    <!-- Se incluye el CSS de DataTables -->
    <link rel="stylesheet" href="//cdn.datatables.net/1.10.25/css/jquery.dataTables.min.css" />
    <style>
        /* Estilos para DataTable usando el color corporativo */
        table.dataTable thead {
            background-color: #009ff5;
            color: #fff;
        }

        table.dataTable {
            width: 100%;
        }

        .btn-custom {
            margin-bottom: 15px;
        }
    </style>
}

<div class="right_col" role="main">
    <div class="">
        <div class="clearfix"></div>
        <div class="row">
            <div class="col-md-12 col-sm-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>@ViewBag.Title</h2>
                       
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <!-- Inicio Contenido -->
                        <!-- Botón para ir a la vista Edit -->
                        <a href="@Url.Action("Edit", "Budget_target")" class="btn btn-success btn-custom pull-right">
                            Editar
                        </a>
                        <hr />
                        <table id="targetsTable" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Cuenta SAP</th>
                                    <th>Centro de Costo</th>
                                    <th>Año Fiscal</th>
                                    <th>Target</th>
                                    <th>Activado</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var target in Model)
                                {
                                    <tr>
                                        <td>@target.id</td>
                                        <td>@target.id_cuenta_sap</td>
                                        <td>@target.id_centro_costo</td>
                                        <td>@target.id_anio_fiscal</td>
                                        <td>@target.target</td>
                                        <td>@(target.activado ? "Sí" : "No")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <!-- Fin Contenido -->
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <!-- Se incluyen las librerías jQuery y DataTables -->
    <script src="//cdn.datatables.net/1.10.25/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#targetsTable').DataTable({
                // Puedes agregar opciones adicionales de DataTables aquí
            });
        });
    </script>
}
