@model Portal_2_0.Models.puesto

@{
    ViewBag.Title = "Deshabilitar Puesto";
    ViewBag.PrimerNivel = "recursos_humanos";
    ViewBag.SegundoNivel = "puestos";
    ViewBag.ControllerName = "Puestos";
}


<div class="right_col" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">
            </div>
        </div>

        <div class="clearfix"></div>

        <div class="row">
            <div class="col-md-12 col-sm-12  ">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>@ViewBag.Title</h2>
                        <div class="clearfix"></div>
                    </div>

                    <!-- /.col -->
                    <!-- /.col -->
                    <div class="col-md-8">
                        <div class="table-responsive">
                            <div class="item form-group">
                                @Html.LabelFor(model => model.shared_services, new { @class = "col-form-label col-md-3 col-sm-3 label-align" })
                                <div class="col-md-1 col-sm-1">
                                    @Html.EditorFor(m => m.shared_services, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
                                </div>
                            </div><div class="item form-group">
                                <label class="col-form-label col-md-3 col-sm-3 label-align"> Planta </label>
                                <div class="col-md-9 col-sm-9">
                                    @if (Model != null && Model.shared_services)
                                    {
                                        <input type="text" class="form-control" value="SHARED SERVICES" readonly/>
                                    }
                                    else
                                    {
                                        <input type="text" class="form-control" value="@Html.DisplayFor(model => model.Area.plantas.descripcion)" readonly />
                                    }
                                </div>
                            </div>

                            <div class="item form-group">
                                @Html.LabelFor(model => model.areaClave, htmlAttributes: new { @class = "col-form-label col-md-3 col-sm-3 label-align" })
                                <div class="col-md-9 col-sm-9">
                                    <input type="text" class="form-control" value="@Html.DisplayFor(model => model.Area.descripcion)" readonly />
                                </div>
                            </div>

                            <div class="item form-group">
                                @Html.LabelFor(model => model.descripcion, new { @class = "col-form-label col-md-3 col-sm-3 label-align" })
                                <div class="col-md-9 col-sm-9">
                                    @Html.EditorFor(model => model.descripcion, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                </div>
                            </div>
                        </div>


                    </div>
                    <div class="col-md-12">
                        <hr />
                    </div>
                    <div class="col-md-12">
                        <p class="float-md-left">
                            <a href="@Url.Action("Edit", ViewBag.ControllerName, new { id = Model.clave})" class="btn btn-success btm-sm" title="Editar">
                                <i class="fa-regular fa-pen-to-square"></i> Editar
                            </a>
                        </p>
                        <p class="float-md-right">
                            @using (Html.BeginForm())
                            {
                                @Html.AntiForgeryToken()

                                <div class="form-actions no-color float-md-right">
                                    <input type="submit" value="Deshabilitar" class="btn btn-danger btm-sm" />
                                </div>
                            }
                        </p>
                    </div>
                </div>
                <div>
                    <br />
                    <a href="@Url.Action("Index", ViewBag.ControllerName)" class="btn btn-round btn-info btm-sm" title="Volver">
                        <i class="fa fa-arrow-circle-left"></i> Volver al listado
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>