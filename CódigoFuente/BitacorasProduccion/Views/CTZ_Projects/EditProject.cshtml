@section Scripts {
    <!-- SweetAlert2 -->
    @Scripts.Render(Url.Content("~/Content/vendors/sweetalert2/sweetalert2.min.js"))
    @Scripts.Render(Url.Content("~/Scripts/AlertasSweetAlert.js"))

    <script>
    $(function () {
        // 1) Cargar lista de próximos deptos (solo Sales)
        var nextDepts = @Html.Raw(nextDeptsJson) || [];

        function humanJoin(arr) {
            if (!arr || arr.length === 0)      return "the next department";
            if (arr.length === 1)             return arr[0];
            if (arr.length === 2)             return arr[0] + " and " + arr[1];
            return arr.slice(0, -1).join(", ") + ", and " + arr.slice(-1);
        }

        // 2) Función genérica para invocar al servidor
        function processActivity(deptKey) {
            $.post('@Url.Action("ProcessProjectActivity","CTZ_Projects")', {
                projectId: @Model.ID_Project,
                department: deptKey
            })
                .done(function (r) {
                    // Si el servidor devolvió success=false, usamos un icono distinto
                    if (r.success) {
                        Swal.fire('Success', r.message, 'success')
                            .then(function () { location.reload(); });
                    } else {
                        Swal.fire('Warning', r.message, 'warning');
                    }
                })
            .fail(function () {
                Swal.fire('Error', 'Operation failed.', 'error');
            });
        }

        // 3) Handlers por botón

        // Sales → Engineering (+FT +Dispo)
        $("#btnSendSales").click(function () {
            var targets = humanJoin(nextDepts);
            Swal.fire({
                title: 'Are you sure?',
                text: `You’re about to send this quote to ${targets} for review. Version 1.0 will be created.`,
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#009ff5',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, send it'
            }).then(result => {
                if (result.isConfirmed) processActivity('Sales');
            });
        });

        // Foreign Trade completion
        $("#btnSendFT").click(function () {
            Swal.fire({
                title: 'Complete Foreign Trade?',
                text: 'This will mark the quote as processed by Foreign Trade.',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#009ff5',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, complete FT'
            }).then(result => {
                if (result.isConfirmed) processActivity('ForeignTrade');
            });
        });

        // Disposition completion
        $("#btnSendDisp").click(function () {
            Swal.fire({
                title: 'Complete Disposition?',
                text: 'This will mark the quote as processed by Disposition.',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#009ff5',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, complete Disposition'
            }).then(result => {
                if (result.isConfirmed) processActivity('Disposition');
            });
        });

        // Engineering → Data Management
        $("#btnSendEngineering").click(function () {
            Swal.fire({
                title: 'Complete Engineering?',
                text: 'This will mark the quote as processed by Engineering.',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#009ff5',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, send it'
            }).then(result => {
                if (result.isConfirmed) processActivity('Engineering');
            });
        });

        // DataManagement final forwarding (if distinta de finalize)
        $("#btnSendDM").click(function () {
            Swal.fire({
                title: 'Finalize for Data Management?',
                text: 'This will close the quote and notify the requester.',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#009ff5',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, proceed'
            }).then(result => {
                if (result.isConfirmed) processActivity('DataManagement');
            });
        });

        // Finalize activity (closes project)
        $("#btnFinalize").click(function () {
            Swal.fire({
                title: 'Finalize activity?',
                text: 'This will close the quote and notify the requester.',
                icon: 'question',
                showCancelButton: true,
                confirmButtonText: 'Yes, finalize'
            }).then(res => {
                if (res.isConfirmed) processActivity('DataManagement');
            });
        });
    });
    </script>
}
