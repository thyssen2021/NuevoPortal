@model Portal_2_0.Models.CTZ_Projects
@using Portal_2_0.Models

@{
    ViewBag.Title = "Edit Project";
    ViewBag.nav_style = "nav-sm"; // Requerido por el JS de la vista padre
    ViewBag.FirstLevel = "quote";
    ViewBag.SecondLevel = "edit_quote";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section estilos {
    <!-- Select2 -->
    <link href="@Url.Content("~/Content/vendors/select2/css/select2.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/vendors/select2-bootstrap4-theme/select2-bootstrap4.min.css")" rel="stylesheet" />
    <style>
        /* General */
        body {
            font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f5f7fa;
        }
        /* Panel y contenedor */
        .x_panel {
            background: #fff;
            border: 1px solid #e6e9ed;
            border-radius: 6px;
            box-shadow: 0 3px 6px rgba(0,0,0,0.1);
            padding: 25px 30px;
            margin-bottom: 30px;
        }

        .x_title {
            border-bottom: 2px solid #009ff5;
            margin-bottom: 20px;
            padding-bottom: 10px;
        }

            .x_title h2 {
                color: #009ff5;
                font-weight: 600;
                font-size: 22px;
                margin: 0;
            }
        /* Cards para agrupar secciones */
        .form-card {
            background: #fafafa;
            border: 1px solid #ddd;
            border-radius: 4px;
            padding: 15px 20px;
            margin-bottom: 20px;
        }

            .form-card h3 {
                font-size: 16px;
                font-weight: 600;
                color: #009ff5;
                margin-bottom: 15px;
                border-bottom: 1px solid #009ff5;
                padding-bottom: 5px;
            }
        /* Distribución compacta */
        .compact-row {
            display: flex;
            flex-wrap: wrap;
            margin: -5px;
        }

            .compact-row .compact-col {
                padding: 5px;
                flex: 1 1 250px; /* Mínimo 250px */
            }
        /* Formularios */
        .form-horizontal .form-group {
            margin-bottom: 12px;
        }

        .control-label {
            font-weight: 600;
            margin-bottom: 5px;
        }

        .form-control {
            border: 1px solid #ccc;
            border-radius: 3px;
            padding: 8px 10px;
            height: 38px;
            transition: border-color 0.3s ease;
        }

            .form-control:focus {
                border-color: #009ff5;
                box-shadow: 0 0 4px rgba(0,159,245,0.3);
            }

        hr {
            border-top: 1px solid #e6e9ed;
            margin: 20px 0;
        }
        /* Botones */
        .btn-success {
            background-color: #009ff5;
            border: 1px solid #009ff5;
            border-radius: 3px;
            padding: 8px 15px;
            font-weight: 600;
            transition: background-color 0.3s ease;
        }

            .btn-success:hover {
                background-color: #007dbb;
                border-color: #007dbb;
            }

        .btn-default {
            background-color: #f4f4f4;
            border: 1px solid #ccc;
            color: #555;
            border-radius: 3px;
            padding: 8px 15px;
        }
    </style>
}

<div class="right_col" role="main">
    <div class="container-fluid">
        <div class="clearfix"></div>
        <div class="row">
            <div class="col-md-12 col-sm-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>@ViewBag.Title</h2>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()
                            <div class="form-horizontal">
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                                @Html.HiddenFor(model => model.ID_Project)
                                <!-- Sección: Project Details -->
                                <div class="form-card">
                                    <h3>Project Details</h3>
                                    <div class="compact-row">
                                        <div class="compact-col">
                                            @Html.LabelFor(model => model.ID_Material_Owner, new { @class = "control-label" })
                                            @Html.DropDownListFor(model => model.ID_Material_Owner, null, "Select Material Owner", new { @class = "form-control select2", id = "ID_Material_Owner" })                                        
                                            @Html.ValidationMessageFor(model => model.ID_Material_Owner, "", new { @class = "text-danger" })
                                        </div>
                                        <div class="compact-col">
                                            @Html.LabelFor(model => model.ID_Plant, new { @class = "control-label" })
                                            @Html.DropDownList("ID_Plant", null, "Select Facility", new { @class = "form-control select2" })
                                            @Html.ValidationMessageFor(model => model.ID_Plant, "", new { @class = "text-danger" })
                                        </div>
                                        <div class="compact-col">
                                            @Html.LabelFor(model => model.ID_Status, new { @class = "control-label" })
                                            @Html.DropDownList("ID_Status", null, "Select Facility", new { @class = "form-control select2", required = "required" })
                                            @Html.ValidationMessageFor(model => model.ID_Status, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="compact-row">
                                        <div class="compact-col">
                                            @Html.LabelFor(model => model.ID_VehicleType, new { @class = "control-label" })
                                            @Html.DropDownList("ID_VehicleType", null, "Select Vehicle Type", new { @class = "form-control select2", required = "required" })
                                            @Html.ValidationMessageFor(model => model.ID_VehicleType, "", new { @class = "text-danger" })
                                        </div>
                                        <div class="compact-col">
                                            @Html.LabelFor(model => model.ImportRequired, new { @class = "control-label" })
                                            <div class="checkbox">
                                                @Html.CheckBoxFor(model => model.ImportRequired, new { id = "ImportRequired" })
                                                <label for="ImportRequired">Import Required</label>
                                            </div>
                                            @Html.ValidationMessageFor(model => model.ImportRequired, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                                <!-- Sección: Client / OEM Information -->
                                <div class="form-card">
                                    <h3>Client / OEM Information</h3>
                                    <div class="compact-row">
                                        <div class="compact-col">
                                            @Html.Label("Client", new { @class = "control-label" })
                                            @Html.DropDownListFor(model => model.ID_Client, null, "Select Client", new { @class = "form-control select2", id = "ID_Client" })
                                            @Html.ValidationMessageFor(model => model.ID_Client, "", new { @class = "text-danger" })
                                            <div class="checkbox">
                                                <label>
                                                    <input type="checkbox" id="chkOtherClient" name="chkOtherClient" @( (ViewBag.OtherClient != null && (bool)ViewBag.OtherClient) || !string.IsNullOrEmpty(Model.Cliente_Otro) ? "checked" : "") /> Other Client
                                                </label>
                                            </div>
                                            <div class="form-group" id="divOtherClient" style="display:@((ViewBag.OtherClient != null && (bool)ViewBag.OtherClient) || !string.IsNullOrEmpty(Model.Cliente_Otro) ? "block" : "none");">
                                                @Html.LabelFor(model => model.Cliente_Otro, "Other Client", new { @class = "control-label" })
                                                @Html.TextBoxFor(model => model.Cliente_Otro, new { @class = "form-control", placeholder = "Enter other client", id = "Cliente_Otro" })
                                                @Html.ValidationMessageFor(model => model.Cliente_Otro, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        <div class="compact-col">
                                            @Html.Label("OEM / Final Client", new { @class = "control-label" })
                                            @Html.DropDownList("ID_OEM", null, "Select OEM", new { @class = "form-control select2", id = "ID_OEM" })
                                            @Html.ValidationMessageFor(model => model.ID_OEM, "", new { @class = "text-danger" })
                                            <div class="checkbox">
                                                <label>
                                                    <input type="checkbox" id="chkOtherOEM" name="chkOtherOEM" @( (ViewBag.OtherOEM != null && (bool)ViewBag.OtherOEM) || !string.IsNullOrEmpty(Model.OEM_Otro) ? "checked" : "") /> Other OEM / Final Client
                                                </label>
                                            </div>
                                            <div class="form-group" id="divOtherOEM" style="display:@((ViewBag.OtherOEM != null && (bool)ViewBag.OtherOEM) || !string.IsNullOrEmpty(Model.OEM_Otro) ? "block" : "none");">
                                                @Html.LabelFor(model => model.OEM_Otro, "Other OEM / Final Client", new { @class = "control-label" })
                                                @Html.TextBoxFor(model => model.OEM_Otro, new { @class = "form-control", placeholder = "Enter other OEM / Final Client", id = "OEM_Otro" })
                                                @Html.ValidationMessageFor(model => model.OEM_Otro, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                    </div>
                                </div>



                                <!-- Sección: Project Metadata -->
                                <div class="form-card">
                                    <h3>Project Metadata</h3>
                                    <div class="compact-row">
                                        <div class="compact-col">
                                            <label class="control-label">Created By</label>
                                            <input type="text" class="form-control" value="@Html.DisplayFor(model => model.empleados.ConcatNombre)" disabled="disabled" readonly="readonly" />
                                        </div>
                                        <div class="compact-col">
                                            <label class="control-label">Creation Date</label>
                                            <input type="date" class="form-control" value="@(Model.Creted_Date.ToString("yyyy-MM-dd"))" disabled="disabled" readonly="readonly" />
                                        </div>
                                        <div class="compact-col">
                                            <label class="control-label">@Html.DisplayNameFor(model => model.ConcatQuoteID)</label>
                                            <input type="text" class="form-control" value="@Html.DisplayFor(model => model.ConcatQuoteID)" disabled="disabled" readonly="readonly" />
                                        </div>
                                    </div>
                                </div>

                                <!-- Sección: Comments -->
                                <div class="form-card">
                                    <h3>Comments</h3>
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.Comments, new { @class = "control-label" })
                                        @Html.TextAreaFor(model => model.Comments, new { @class = "form-control", placeholder = "Enter your comments...", rows = "4" })
                                        @Html.ValidationMessageFor(model => model.Comments, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <!-- Botón Submit -->
                                <div class="text-right">
                                    <input type="submit" value="Save" class="btn btn-success" />
                                </div>
                            </div>
                        }
                        <div class="mt-3">
                            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-default" })
                        </div>
                    </div><!-- x_content -->
                </div><!-- x_panel -->
            </div><!-- col -->
        </div><!-- row -->
    </div><!-- container-fluid -->
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render(Url.Content("~/Content/vendors/select2/js/select2.full.min.js"))
    <script>
        $(document).ready(function () {
            $(".select2").select2({ width: '100%' });
            deshabilitaCombos();
            toggleOEMFields();

            // Evento para el combo de tipo de vehículo
            $("#ID_VehicleType").change(function () {
                toggleOEMFields();
            });

            // Funcionalidad para Client: al marcar "Other Client"
            $("#chkOtherClient").change(function () {
                if ($(this).is(":checked")) {
                    $("#ID_Client").val("").trigger("change").prop("disabled", true);
                    $("#divOtherClient").slideDown();
                } else {
                    $("#ID_Client").prop("disabled", false);
                    $("#divOtherClient").slideUp();
                    $("#Cliente_Otro").val("");
                }
            });

            // Funcionalidad para OEM/Final Client: al marcar "Other OEM / Final Client"
            $("#chkOtherOEM").change(function () {
                if ($(this).is(":checked")) {
                    $("#ID_OEM").val("").trigger("change").prop("disabled", true);
                    $("#divOtherOEM").slideDown();
                } else {
                    $("#ID_OEM").prop("disabled", false);
                    $("#divOtherOEM").slideUp();
                    $("#OEM_Otro").val("");
                }
            });

            if ($("#Cliente_Otro").val().trim() !== "") {
                $("#chkOtherClient").prop("checked", true);
                $("#ID_Client").prop("disabled", true);
                $("#divOtherClient").show();
            }
            if ($("#OEM_Otro").val().trim() !== "") {
                $("#chkOtherOEM").prop("checked", true);
                $("#ID_OEM").prop("disabled", true);
                $("#divOtherOEM").show();
            }
        });

        function toggleOEMFields() {
            var vehType = $("#ID_VehicleType").val();
            if (vehType === "1") {
                // Habilitar el checkbox siempre en automotriz
                $("#chkOtherOEM").prop("disabled", false);
                if ($("#chkOtherOEM").is(":checked")) {
                    // Si se marcó "Other OEM", deshabilita el combo y muestra el input.
                    $("#ID_OEM").val("").trigger("change").prop("disabled", true);
                    $("#divOtherOEM").slideDown();
                } else {
                    // Si no está marcado, habilita el combo y oculta el input.
                    $("#ID_OEM").prop("disabled", false);
                    $("#divOtherOEM").slideUp();
                    $("#OEM_Otro").val("");
                }
            } else {
                // Si no es automotriz, deshabilitar ambos controles y limpiar valores.
                $("#ID_OEM").val("").trigger("change").prop("disabled", true);
                $("#chkOtherOEM").prop("disabled", true);
                $("#divOtherOEM").slideUp();
                $("#OEM_Otro").val("");
            }
        }


        function deshabilitaCombos() {
            var otherClient = @((ViewBag.OtherClient != null && (bool)ViewBag.OtherClient).ToString().ToLower());
            if (otherClient || $("#Cliente_Otro").val()) {
                $("#ID_Client").prop("disabled", true);
                $("#divOtherClient").show();
            } else {
                $("#ID_Client").prop("disabled", false);
                $("#divOtherClient").hide();
            }
            var otherOEM = @((ViewBag.OtherOEM != null && (bool)ViewBag.OtherOEM).ToString().ToLower());
            if(otherOEM || $("#OEM_Otro").val()){
                $("#ID_OEM").prop("disabled", true);
                $("#divOtherOEM").show();
            } else {
                $("#ID_OEM").prop("disabled", false);
                $("#divOtherOEM").hide();
            }
        }
    </script>
}
