@model IEnumerable<Portal_2_0.Models.PFA>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Premium Freight Approval";
    ViewBag.PrimerNivel = "PFA";
    ViewBag.SegundoNivel = "PFA_visualizar";
    ViewBag.ControllerName = "PremiumFreightApproval";

    Clases.Util.MensajesSweetAlert mensajeAlerta = (Clases.Util.MensajesSweetAlert)ViewBag.MensajeAlert;

    //obtiene los filtros
    Portal_2_0.Models.Paginacion paginacionFiltros = (Portal_2_0.Models.Paginacion)ViewBag.Paginacion;

    string idUsuario = string.Empty;
    if (paginacionFiltros.ValoresQueryString["id_PFA_user"] != null)
    {
        idUsuario = paginacionFiltros.ValoresQueryString["id_PFA_user"].ToString();
    }
    string idReason = string.Empty;
    if (paginacionFiltros.ValoresQueryString["id_PFA_reason"] != null)
    {
        idReason = paginacionFiltros.ValoresQueryString["id_PFA_reason"].ToString();
    }
    string idResponsible = string.Empty;
    if (paginacionFiltros.ValoresQueryString["id_PFA_responsible_cost"] != null)
    {
        idResponsible = paginacionFiltros.ValoresQueryString["id_PFA_responsible_cost"].ToString();
    }
    string filtroFechaInicio = string.Empty;
    if (paginacionFiltros.ValoresQueryString["fecha_inicial"] != null)
    {
        filtroFechaInicio = paginacionFiltros.ValoresQueryString["fecha_inicial"].ToString();
    }
    string filtroFechaFinal = string.Empty;
    if (paginacionFiltros.ValoresQueryString["fecha_final"] != null)
    {
        filtroFechaFinal = paginacionFiltros.ValoresQueryString["fecha_final"].ToString();
    }

}

@section estilos
{
    <!-- DataTables -->
    @Styles.Render("~/Content/dataTables_css")

    <!-- SweetAlert2 -->
    <link href="@Url.Content("~/Content/vendors/sweetalert2-theme-bootstrap-4/bootstrap-4.min.css")" rel="stylesheet">
    <!-- Select2 -->
    <link href="@Url.Content("~/Content/vendors/select2/css/select2.css")" rel="stylesheet">
    <link href="@Url.Content("~/Content/vendors/select2-bootstrap4-theme/select2-bootstrap4.min.css")" rel="stylesheet">
}

@*Para SweetAlert*@
@if (mensajeAlerta != null)
{
    <input type="hidden" value="@mensajeAlerta.Mensaje" id="mensajeAlert" />
    <input type="hidden" value="@mensajeAlerta.getTipoMensaje()" id="mensajeAlertTipo" />
}


<div class="right_col" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">
            </div>
        </div>

        <div class="clearfix"></div>

        <div class="row">
            <div class="col-md-12 col-sm-12 ">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>@ViewBag.Title</h2>
                        <ul class="nav navbar-right panel_toolbox">
                            @*Utilizado para mover a la derecha los iconos del card*@
                            <span style="visibility:hidden">_______</span>
                            <li>
                                <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                            </li>
                        </ul>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="card-box">
                                    <div class="form-group">
                                        @using (Html.BeginForm(null, null, FormMethod.Get, new { id = "buscarForm", @class = "form-horizontal form-label-left" }))
                                        {

                                            <div class="form-group row ">
                                                <label class="control-label col-md-1 col-sm-1" for="id_PFA_reason">Reason of PFA</label>
                                                <div class="col-md-3 col-sm-3 ">
                                                    @Html.DropDownList("id_PFA_reason", null, htmlAttributes: new { @class = "form-control select2bs4", @style = "width:100%" })
                                                </div>
                                                <label class="control-label col-md-2 col-sm-2" for="id_PFA_responsible_cost" style="text-align:right">Responsible of the PF</label>
                                                <div class="col-md-3 col-sm-3 ">
                                                    @Html.DropDownList("id_PFA_responsible_cost", null, htmlAttributes: new { @class = "form-control select2bs4", @style = "width:100%" })
                                                </div>
                                            </div>

                                            <div class="form-group row ">
                                                <label class="control-label col-md-1 col-sm-1" for="id_PFA_user">Planner/User</label>
                                                <div class="col-md-3 col-sm-3 ">
                                                    @Html.DropDownList("id_PFA_user", null, htmlAttributes: new { @class = "form-control select2bs4", @style = "width:100%" })
                                                </div>
                                            </div>


                                            <div class="form-group row ">
                                                <label class="control-label col-md-1 col-sm-1" for="fecha_inicial">Start Date Request</label>
                                                <div class="col-md-3 col-sm-3">
                                                    <input type="date" class="form-control" name="fecha_inicial" id="fecha_inicial" value="@filtroFechaInicio">
                                                </div>
                                                <label class="control-label col-md-2 col-sm-2" for="fecha_final" style="text-align:right">End Date Request</label>
                                                <div class="col-md-3 col-sm-3">
                                                    <input type="date" class="form-control" name="fecha_final" id="fecha_final" value="@filtroFechaFinal">
                                                </div>
                                            </div>
                                            <div class="form-group row ">

                                            </div>
                                            <div class="form-group row ">
                                                <div class="col-md-8 col-sm-8">
                                                    <a href="@Url.Action("ReportesPFA", ViewBag.ControllerName)" class="btn btn-danger btm-sm" title="Reset">
                                                        <i class="fa fa-refresh"></i> Reset
                                                    </a>
                                                </div>
                                                <div class="col-md-1 col-sm-1">
                                                    <input type="submit" value="Submit" class="btn btn-success float-right" />
                                                </div>
                                            </div>
                                        }

                                    </div>
                                    @if (Model.Count() > 0)
                                    {
                                        <table id="datatable_1" class="table table-striped table-bordered nowrap" cellspacing="0" width="100%">
                                            <thead>
                                                <tr>

                                                    <th>
                                                        @Html.DisplayNameFor(model => model.id)
                                                    </th>
                                                    <th>
                                                        @Html.DisplayNameFor(model => model.date_request)
                                                    </th>
                                                    <th>
                                                        @Html.DisplayNameFor(model => model.id_solicitante)
                                                    </th>
                                                    <th>
                                                        @Html.DisplayNameFor(model => model.id_PFA_reason)
                                                    </th>
                                                    <th>
                                                        @Html.DisplayNameFor(model => model.id_PFA_type_shipment)
                                                    </th>
                                                    <th>
                                                        @Html.DisplayNameFor(model => model.id_PFA_responsible_cost)
                                                    </th>
                                                    <th>
                                                        @Html.DisplayNameFor(model => model.total_pf_cost)
                                                    </th>
                                                    <th>
                                                        @Html.DisplayNameFor(model => model.total_cost)
                                                    </th>
                                                    <th>
                                                        Total Cost To Recover
                                                    </th>
                                                    <th>
                                                        @Html.DisplayNameFor(model => model.id_PFA_recovered_cost)
                                                    </th>
                                                    <th>
                                                        @Html.DisplayNameFor(model => model.promise_recovering_date)
                                                    </th>

                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var item in Model)
                                                {
                                                <tr>

                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.id)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.date_request)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.empleados1.ConcatNombre)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.PFA_Reason.descripcion)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.PFA_Type_shipment.descripcion)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.PFA_Responsible_cost.descripcion)
                                                    </td>
                                                    <td>
                                                        @string.Format(System.Globalization.CultureInfo.GetCultureInfo("es-US"), "{0:N2}", item.total_pf_cost)
                                                    </td>
                                                    <td>
                                                        @string.Format(System.Globalization.CultureInfo.GetCultureInfo("es-US"), "{0:N2}", item.total_cost)
                                                    </td>
                                                    <td>
                                                        @string.Format(System.Globalization.CultureInfo.GetCultureInfo("es-US"), "{0:N2}", item.TotalCostToRecover)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.PFA_Recovered_cost.descripcion)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.promise_recovering_date)
                                                    </td>

                                                </tr>
                                                }

                                            </tbody>
                                        </table>
                                    }
                                    else
                                    {
                                        <hr />
                                        <h5>¡No hay Resultados!</h5>
                                    }
                                    <br />
                                    @if (Model.Count() > 0)
                                    {
                                        <nav aria-label="...">
                                            @{Html.RenderPartial("_Paginacion", Model);}
                                        </nav>

                                        <div class="form-group">
                                            @ViewContext.RouteData.Values["clave_planta"]
                                            <a href="@Url.Action("Exportar", ViewBag.ControllerName, new
                                                {
                                                    parametrosEjemplo = "Ejemplo",

                                                })" class="btn btn-success btm-sm" target="_blank" title="Reporte">
                                                <i class="fa fa-file-excel-o"></i> Exportar Excel
                                            </a>

                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts
{
    <!-- SweetAlert2 -->
    @Scripts.Render(Url.Content("~/Content/vendors/sweetalert2/sweetalert2.min.js"))
    @Scripts.Render(Url.Content("~/Scripts/AlertasSweetAlert.js"))
    @Scripts.Render(Url.Content("~/Content/vendors/select2/js/select2.full.min.js"))
    @Scripts.Render("~/bundles/dataTables_js")

    <script>

        $(document).ready(function () {

            //inicializa los data table
            $('#datatable_1').DataTable({
                "paging": false,
                "ordering": false,
                "searching": false,
                "scrollX": true,
                "info": false
            });

            // Initialize Select2 Elements (debe ir después de asignar el valor)
            $('.select2bs4').select2({
                theme: 'bootstrap4'
            })

        });

        //agranda el tamaño de la barra
        window.onload = function () {
            document.getElementById('menu_toggle').click();
        }


    </script>

}