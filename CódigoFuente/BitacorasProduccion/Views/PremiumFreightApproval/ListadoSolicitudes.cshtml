@model IEnumerable<Portal_2_0.Models.PFA>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    //ViewBag.Title = "Premium Freight Approval";
    ViewBag.PrimerNivel = "PFA";
    // ViewBag.SegundoNivel = "PFA_registro";
    ViewBag.ControllerName = "PremiumFreightApproval";

    Clases.Util.MensajesSweetAlert mensajeAlerta = (Clases.Util.MensajesSweetAlert)ViewBag.MensajeAlert;
}

@section estilos
{
    <!-- DataTables -->
    @Styles.Render("~/Content/dataTables_css")

    <!-- SweetAlert2 -->
    <link href="@Url.Content("~/Content/vendors/sweetalert2-theme-bootstrap-4/bootstrap-4.min.css")" rel="stylesheet">
}

@*Para SweetAlert*@
@if (mensajeAlerta != null)
{
    <input type="hidden" value="@mensajeAlerta.Mensaje" id="mensajeAlert" />
    <input type="hidden" value="@mensajeAlerta.getTipoMensaje()" id="mensajeAlertTipo" />
}


<div class="right_col" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">
            </div>
        </div>

        <div class="clearfix"></div>

        <div class="row">
            <div class="col-md-12 col-sm-12 ">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>@ViewBag.Title</h2>
                        <ul class="nav navbar-right panel_toolbox">
                            @*Utilizado para mover a la derecha los iconos del card*@
                            <span style="visibility:hidden">_______</span>
                            <li>
                                <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                            </li>
                        </ul>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="card-box">
                                    <div class="form-group">
                                        @if (ViewBag.Create != null && ViewBag.Create)
                                        {
                                            <a href="@Url.Action( "Create", ViewBag.ControllerName)" class="btn btn-success">
                                                <i class="fa fa-plus-square"></i>
                                                Crear nuevo
                                            </a>
                                        }

                                    </div>
                                    <table id="datatable_1" class="table table-striped table-bordered nowrap" cellspacing="0" width="100%">
                                        <thead>
                                            <tr>
                                                <th>Acciones</th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.id)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.date_request)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.id_solicitante)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.id_PFA_reason)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.id_PFA_type_shipment)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.id_PFA_responsible_cost)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.total_pf_cost)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.total_cost)
                                                </th>
                                                <th>
                                                    Total Cost To Recover
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.id_PFA_recovered_cost)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.promise_recovering_date)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.is_recovered)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.credit_debit_note_number)
                                                </th>

                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model)
                                            {
                                                <tr>
                                                    <td>
                                                        @if (ViewBag.Edit != null && ViewBag.Edit)
                                                        {
                                                            <a href="@Url.Action("Edit", ViewBag.ControllerName, new { id = item.id})" class="btn btn-success btm-sm" title="Editar">
                                                                <i class="fa-regular fa-pen-to-square"></i>
                                                            </a>
                                                        }
                                                        @if (ViewBag.Details != null && ViewBag.Details)
                                                        {
                                                            <a href="@Url.Action("Details", ViewBag.ControllerName, new { id = item.id })" class="btn btn-secondary btm-sm" title="Detalles">
                                                                <i class="fa fa-info-circle"></i>
                                                            </a>
                                                        }
                                                        @if (ViewBag.SendToAuthorizer != null && ViewBag.SendToAuthorizer)
                                                        {
                                                            <a href="@Url.Action("Send", ViewBag.ControllerName, new { id = item.id })" class="btn btn-info btm-sm" title="Enviar">
                                                                <i class="fa-regular fa-paper-plane"></i>
                                                            </a>
                                                        }
                                                        @if (ViewBag.AuthorizarRechazar != null && ViewBag.AuthorizarRechazar)
                                                        {
                                                            <a href="@Url.Action("AutorizarRechazar", ViewBag.ControllerName, new { id = item.id })" class="btn btn-success btm-sm" title="Authorize">
                                                                <i class="fa-solid fa-square-check"></i>
                                                            </a>
                                                        }
                                                        @if (ViewBag.EditCredit != null && ViewBag.EditCredit)
                                                        {
                                                            <a href="@Url.Action("EditCreditNote", ViewBag.ControllerName, new { id = item.id })" class="btn btn-success btm-sm" title="Edit Credit Note">
                                                                <i class="fa fa-credit-card"></i>
                                                            </a>
                                                        }
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.id)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.date_request)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.empleados1.ConcatNombre)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.PFA_Reason.descripcion)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.PFA_Type_shipment.descripcion)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.PFA_Responsible_cost.descripcion)
                                                    </td>
                                                    <td>
                                                        @string.Format(System.Globalization.CultureInfo.GetCultureInfo("es-US"), "{0:N2}", item.total_pf_cost)
                                                    </td>
                                                    <td>
                                                        @string.Format(System.Globalization.CultureInfo.GetCultureInfo("es-US"), "{0:N2}", item.total_cost)
                                                    </td>
                                                    <td>
                                                        @string.Format(System.Globalization.CultureInfo.GetCultureInfo("es-US"), "{0:N2}", item.TotalCostToRecover)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.PFA_Recovered_cost.descripcion)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.promise_recovering_date)
                                                    </td>
                                                    <td>
                                                        @if (item.is_recovered.HasValue)
                                                        {
                                                            if (item.is_recovered.Value)
                                                            {
                                                                <span>RECOVERED</span>
                                                            }
                                                            else
                                                            {
                                                               <span>NOT RECOVERED</span>
                                                            }

                                                        }
                                                        
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.credit_debit_note_number)
                                                    </td>
                                                </tr>
                                            }

                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts
{
    <!-- SweetAlert2 -->
    @Scripts.Render(Url.Content("~/Content/vendors/sweetalert2/sweetalert2.min.js"))
    @Scripts.Render(Url.Content("~/Scripts/AlertasSweetAlert.js"))

    @Scripts.Render("~/bundles/dataTables_js")

    <script>

        $(document).ready(function () {

            //inicializa los data table
            $('#datatable_1').DataTable({
                "paging": true,
                "ordering": false,
                "searching": true,
                "scrollX": true,
                "info": false
            });

        });

            ////agranda el tamaño de la barra
            //window.onload = function () {
            //    document.getElementById('menu_toggle').click();
            //}


    </script>

}
