@model Portal_2_0.Models.PFA

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Request Premium Freight Approval Details";
    ViewBag.PrimerNivel = "PFA";
    ViewBag.SegundoNivel = "PFA_registro";
    ViewBag.ControllerName = "PremiumFreightApproval";


}

<div class="right_col" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>Detalles del turno</h3>
            </div>
        </div>

        <div class="clearfix"></div>

        <div class="row">
            <div class="col-md-12 col-sm-12  ">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>@ViewBag.Title</h2>
                        <div class="clearfix"></div>
                    </div>

                    <!-- /.col -->
                    <div class="col-md-8">
                        <div class="table-responsive">
                            <table class="table">
                                <tbody>
                                    <tr>
                                        <th>@Html.DisplayNameFor(model => model.id)</th>
                                        <td>@Html.DisplayFor(model => model.id)</td>
                                    </tr>
                                    <tr>
                                        <th>@Html.DisplayNameFor(model => model.id_solicitante)</th>
                                        <td>@Html.DisplayFor(model => model.empleados1.ConcatNombre)</td>
                                    </tr>
                                    <tr>
                                        <th>@Html.DisplayNameFor(model => model.id_PFA_reason)</th>
                                        <td>@Html.DisplayFor(model => model.PFA_Reason.descripcion)</td>
                                    </tr>
                                    <tr>
                                        <th>@Html.DisplayNameFor(model => model.id_PFA_type_shipment)</th>
                                        <td>@Html.DisplayFor(model => model.PFA_Type_shipment.descripcion)</td>
                                    </tr>
                                    <tr>
                                        <th>@Html.DisplayNameFor(model => model.id_PFA_responsible_cost)</th>
                                        <td>@Html.DisplayFor(model => model.PFA_Responsible_cost.descripcion)</td>
                                    </tr>
                                    <tr>
                                        <th>@Html.DisplayNameFor(model => model.total_pf_cost)</th>
                                        <td>@Html.DisplayFor(model => model.total_pf_cost)</td>
                                    </tr>
                                    <tr>
                                        <th>@Html.DisplayNameFor(model => model.total_cost)</th>
                                        <td>@Html.DisplayFor(model => model.total_cost)</td>
                                    </tr>
                                    <tr>
                                        <th>Total Coast To Recover</th>
                                        <td>@Model.TotalCostToRecover</td>
                                    </tr>
                                    <tr>
                                        <th>@Html.DisplayNameFor(model => model.id_PFA_recovered_cost)</th>
                                        <td>@Html.DisplayFor(model => model.PFA_Recovered_cost.descripcion)</td>
                                    </tr>
                                    <tr>
                                        <th>@Html.DisplayNameFor(model => model.promise_recovering_date)</th>
                                        <td>@Html.DisplayFor(model => model.promise_recovering_date)</td>
                                    </tr>
                                    <tr>
                                        <th>@Html.DisplayNameFor(model => model.id_PFA_autorizador)</th>
                                        <td>@Html.DisplayFor(model => model.empleados.ConcatNombre)</td>
                                    </tr>
                                    <tr>
                                        <th>@Html.DisplayNameFor(model => model.estatus)</th>
                                        <td>@Html.DisplayFor(model => model.estatus)</td>
                                    </tr>


                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <p class="float-md-right">
                            <a href="@Url.Action("Edit", ViewBag.ControllerName, new { id = Model.id})" class="btn btn-success btm-sm" title="Editar">
                                <i class="fa fa-pencil-square-o"></i> Editar
                            </a>
                        </p>
                    </div>
                </div>
                <div>
                    <br />
                    <a href="@Url.Action("Index", ViewBag.ControllerName)" class="btn btn-round btn-info btm-sm" title="Volver">
                        <i class="fa fa-arrow-circle-left"></i> Volver al listado
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts
{

    <script>
        //agranda el tamaño de la barra
        window.onload = function () {
            document.getElementById('menu_toggle').click();
            
        }
    </script>

}
